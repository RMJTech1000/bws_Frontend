
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>


<script type="text/javascript">



    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $(document).ready(function () {
            $('.my-selectAssembly').select2({
                placeholder: "Assembly", allowClear: true, width: '100%'
            });

        });

        $scope.AddNew = function () {

            window.location = "/MNR/MNRComponent"
        }
        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.AssemblyList = null;
        $scope.fillAssemblyList = function () {
            $http({
                method: 'POST',
                url: '/api/MNRApi/BindAssembly/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.AssemblyList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillAssemblyList();

        $scope.ComponentRecords = null;
        $scope.ComponentRecords = function () {
            var BussData = {}
            BussData.ComponentCode = $scope.txtCompCode;
            BussData.ComponentDescription = $scope.txtCompDesc;
            BussData.AssemblyID = $("#ddlAssembly").val();
            BussData.Status = $scope.ChkStatus;
            $http({
                method: 'POST',
                url: "/api/MNRApi/MNRComponentView",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.ComponentRec = result.data;

                $scope.totalItems = $scope.ComponentRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.ComponentRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.ComponentViewRecords = function () {

            $scope.ComponentRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtCompCode = "";
            $scope.txtCompDesc = "";
            $("#ddlAssembly").val(null).trigger("change");
            $scope.ChkStatus = "0";
            $scope.ComponentRecords();
        }
        $scope.ComponentRecords();

        $scope.ComponentUpdate = function (urlv) {
            //var url = "/MNR/MNRComponent?CompID=" + encodeURIComponent(url);
            //window.location.href = url;
            var ParameterValue = "CompID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/MNR/MNRComponent?" + ciphertext;

            window.location.href = url;
        }
         $scope.btnPrint = function () {
             var CompCode = $('#txtCompCode').val();
             var CompDesc = $('#txtCompDesc').val();
             var Assembly = $('#ddlAssembly').val();
             var User = localStorage.getItem("UserName");
             window.location.href = '@Url.Action("MNRComponentExcel", "MastersExcel")?CompCode=' + CompCode + '&CompDesc=' + CompDesc + '&Assembly=' + Assembly + '&User=' + User;
        }
    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Component Master

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">
                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Component Code</th>
                                    <th> Component Description</th>
                                    <th>Assembly</th>
                                    <th>Status</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in ComponentRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.ComponentCode}}</td>
                                    <td>{{i.ComponentDescription}}</td>
                                    <td>{{i.Assembly}}</td>
                                    <td>{{i.StatusResult}}</td>
                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="ComponentUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(ComponentRec|filter:ComponentCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtCompCode" ng-model="txtCompCode" class="form-control" placeholder="Component Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtCompDesc" ng-model="txtCompDesc" class="form-control" placeholder="Component Description">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectAssembly" ng-model="ddlAssembly" id="ddlAssembly" ng-options="item.Assembly for item in AssemblyList track by item.ID" required>
                                <option value="" disabled selected>Assembly</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Status</label>
                                </div>
                                <div class="col-md-6 input-field" style="text-align:right; padding-right:0;">
                                    <div class="togglebutton">
                                        <label>
                                            <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-checked="ChkStatus == 1" id="ChkStatus" ng-model="ChkStatus" value="ChkStatus">
                                            <span class="toggle"></span>

                                        </label>
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="ComponentViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
