@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $("#overlay").show();
        $(document).ready(function () {

            $('.my-selectPOL').select2({
                placeholder: "POL", allowClear: true, width: '100%'
            });
            $('.my-selectPOD').select2({
                placeholder: "POD", allowClear: true, width: '100%'
            });
            $('.my-selectVel').select2({
                placeholder: "Vessel", allowClear: true, width: '100%'
            });
        });

        $scope.PortAllvalues = null;
        $scope.fillPortsValues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/PortValues/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.PortAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillPortsValues();

        $scope.VesselNameAllvalues = null;
        $scope.fillVesselNameValues = function () {

            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/VesVoyMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.VesselNameAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillVesselNameValues();

        $scope.ImportRecordsView = function () {

            $("#overlay").show();
            var BussData = {};
            BussData.BookingNo = $scope.txtBLNumber;
            BussData.POL = $('#ddlPOL').val();
            BussData.POD = $('#ddlPOD').val();
            BussData.VesVoy = $('#ddlVesVoy').val();
            BussData.AgencyID = localStorage.getItem("AgencyID");

            $http({
                method: 'POST',
                url: "/api/ImportApi/ImportView",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.ImportRec = result.data;

                $scope.totalItems = $scope.ImportRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.ImportRec.indexOf(value);
                    return (begin <= index && index < end);
                };
                $("#overlay").hide();
            });

        };
        $scope.ImportRecordsView();
        $scope.Edit = function (urlv, BkgId) {
            var url = "/Import/ShipmentDetails?ImpReg=" + encodeURIComponent(urlv) + "&BkgID=" + encodeURIComponent(BkgId);
            window.location.href = url;
        }

        $scope.NewRecord = function () {
            var url = "/Import/ShipmentDetails?New=New";
            window.location.href = url;
        }

        $scope.btnPrint = function () {
            var BookingNo = $('#txtBLNumber').val();
            var POL = $('#ddlPOL').val();
            var POD = $('#ddlPOD').val();
            var VesVoy = $('#ddlVesVoy').val();
            var Agency = localStorage.getItem("AgencyID");
            var User = localStorage.getItem("UserName");
            window.location.href = '@Url.Action("ImportExcel", "MastersExcel")?BookingNo=' + BookingNo + '&POL=' + POL + '&POD=' + POD + '&VesVoy=' + VesVoy + '&Agency=' + Agency + '&User=' + User;
        }
    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
<style>
    .btn.searchbtn {
        padding: 8px 16px!important;
    }
</style>
<div ng-app="MyApp" ng-controller="MyController">

    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">     
            <a href="#" ng-click="NewRecord();" class="btn btn-fill btnadd btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Import
                    </div>

                </div>
                <div class="card-body">
                    <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">
                        <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                            <i class="material-icons">download</i> Download Excel
                        </a>
                    </div>
                    <div class="row" style="border:1px solid #ccc;">
                        <div class="col-md-10" style="border-right:1px solid #ccc;">
                            <div class="row">
                                <div class="col-md-3">
                                    <div class="form-group bmd-form-group">
                                        <div class="row">
                                            <div class="col-md-12" style="margin-top: 3px;">
                                                <label>BL Number</label>
                                                <input type="text" autocomplete="off" id="txtBLNumber" ng-model="txtBLNumber" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Port of Loading</label>
                                                <select id="ddlPOL" ng-model="ddlPOL" class="form-control my-selectPOL" placeholder="POL" ng-options="item.PortName for item in PortAllvalues track by item.ID">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Port of Discharge</label>
                                                <select id="ddlPOD" ng-model="ddlPOD" class="form-control my-selectPOD" placeholder="POD" ng-options="item.PortName for item in PortAllvalues track by item.ID">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Vessel & Voyage</label>
                                                <select id="ddlVesVoy" ng-model="ddlVesVoy" class="form-control my-selectVel" ng-options="item.VesVoy for item in VesselNameAllvalues track by item.ID"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="row">
                                <div class="col-md-12" style="margin-top:30px;">
                                    <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                                    <button type="submit" ng-click="ImportRecordsView();" class="btn btn-fill btn-rose searchbtn">Search</button>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

                <div class="card-body">
                    <div class="row" style="border:1px solid #ccc;">
                        <div class="col-md-12 padlr0">
                            <div class="material-datatables">
                                <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Booking No</th>
                                            <th>BL Type</th>
                                            <th>Mode</th>
                                            @*<th>POO</th>*@
                                            <th>POL</th>
                                            <th>POD</th>
                                            @*<th>FPOD</th>*@
                                            <th>VesVoy</th>
                                            <th>CommodityType</th>
                                            <th class="disabled-sorting text-right">Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>


                                        <tr ng-repeat="i in ImportRec | filter : paginate | orderBy:'-Statusv'">
                                            <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                            <td>{{i.BLNumber}}</td>
                                            <td style="color:red">{{i.BLType}}</td>
                                            <td>{{i.Mode}}</td>
                                            @*<td>{{i.POO}}</td>*@
                                            <td>{{i.POL}}</td>
                                            <td>{{i.POD}}</td>
                                            @*<td>{{i.FPOD}}</td>*@
                                            <td>{{i.VesVoy}}</td>
                                            <td>{{i.CommodityType}}</td>
                                            <td class="td-actions text-right">

                                                <button type="button" ng-click="Edit(i.ID,i.BkgID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                                    <i class="material-icons">edit</i>
                                                </button>

                                            </td>
                                        </tr>


                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>
</div>