@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<script type="text/javascript">

    $('#overlay').fadeIn().delay(300).fadeOut();
    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $(document).ready(function () {
            $('.my-selectStatus').select2({
                placeholder: "Status", allowClear: true, width: '100%'
            });

        });

        $scope.AddNew = function () {
            window.location = "/Home/MainPort"
        }
        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.StatusValues = [
            { 'name': 'ACTIVE', 'ID': 1 },
            { 'name': 'INACTIVE ', 'ID': 2 }
        ];

        $scope.CustomerRecords = null;
        $scope.CustomerRecords = function () {
            var BussData = {}
            BussData.PortCode = $scope.txtPortCode;
            BussData.PortName = $scope.txtPortName;
            BussData.Status = $("#ddlStatus").val();
            $http({
                method: 'POST',
                url: "/api/Home/MainPortview",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.CustomerRec = result.data;

                $scope.totalItems = $scope.CustomerRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.CustomerRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.PortViewRecords = function () {

            $scope.CustomerRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtPortCode = "";
            $scope.txtPortName = "";
            $("#ddlStatus").val(null).trigger("change");
            $scope.CustomerRecords();
        }
        $scope.CustomerRecords();

        $scope.PortUpdate = function (urlv, MID) {

            //var url = "/Home/MainPort?PortRegID=" + encodeURIComponent(url);
            //window.location.href = url;

            var ParameterValue = "PortRegID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Home/MainPort?" + ciphertext;
            window.location.href = url;
        }

         $scope.btnPrint = function () {
             var PortCode = $('#txtPortCode').val();
             var PortName = $('#txtPortName').val();
             var Status = $('#ddlStatus').val();
            var User = localStorage.getItem("UserName");

             window.location.href = '@Url.Action("MainPortExcel", "MastersExcel")?PortCode=' + PortCode + '&PortName=' + PortName + '&Status=' + Status + '&User=' + User;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">

            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Main Port Master

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="col-md-12 padr0" style="text-align:right;">
                        <a class="button" ng-click="btnPrint();"><span>Download <i class="fa fa-file-excel-o"></i> </span></a>
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Port Code</th>
                                    <th>Port Name</th>
                                    <th>Country Code</th>
                                    <th>Status </th>
                                    @*<th>Sea Port</th>
                                        <th>ICD Port</th>*@
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in CustomerRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.PortCode}}</td>
                                    <td>{{i.PortName}}</td>
                                    <td>{{i.CountryCode}}</td>
                                    <td>{{i.StatusResult}}</td>
                                    @*<td>{{i.SeaPort}}</td>
                                        <td>{{i.AirPort}}</td>*@
                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="PortUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(CustomerRec|filter:CityCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtPortCode" ng-model="txtPortCode" class="form-control" placeholder="Port Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtPortName" ng-model="txtPortName" class="form-control" placeholder="Port Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectStatus" id="ddlStatus" ng-model="ddlStatus" ng-options="item.name for item in StatusValues track by item.ID">
                                <option value="" disabled selected>Status </option>
                            </select>


                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="PortViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
