@model  NVOCShipping.Models.MasterModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<style>
    .form-control.txtarea {
        width: 100%;
        margin-left: -42px;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $('#overlay').fadeIn().delay(300).fadeOut();
     $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });

        });
     $scope.Recordsave = function () {
         var validation = "";
            var txtTerminalCode = $('#txtTerminalCode').val();
            if (txtTerminalCode.length == 0) {
                validation += "<span style='color:red;'>*</span> <span>Please Enter Terminal Code</span></br>"
            }
              var txtTerminalName = $('#txtTerminalName').val();
            if (txtTerminalName.length == 0) {

               validation += "<span style='color:red;'>*</span> <span>Please Enter Terminal Name</span></br>"
         }
         var ddlPort = $('#ddlPort').val();
            if (ddlPort == "?") {

               validation += "<span style='color:red;'>*</span> <span>Please Select Port</span></br>"
         }
     

            if (validation != "") {

                ShowPopup(validation);
                 return false;
            }

            $('#overlay').fadeIn().delay(100).fadeOut();

          var BussData = {}
            var id = $scope.HDRegId;

            if (id == "" || id == null)
                BussData.ID = 0;
            else
                BussData.ID = $scope.HDRegId;
         BussData.TerminalCode = $scope.txtTerminalCode;
         BussData.TerminalName = $scope.txtTerminalName;
         BussData.PortID =  $('#ddlPort').val();
            if ($scope.ChkStatus == 1)
                BussData.Status = 1;
            else
                BussData.Status = 0;
            BussData.Status = $scope.ChkStatus;

            $http({
                method: 'POST',
                url: "/api/Home/Terminal",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                ShowPopup(result.data[0].AlertMessage);
                setTimeout(function () { location.href = "/Home/TerminalView" }, 2000);
                return false;

            });
        }

        $scope.Port = null;
        $scope.fillPort = function () {

            $http({
                method: 'POST',
                url: '/api/Home/portBind/',
                data: {}
            }).then(function (result) {
                $timeout(function () {

                    $scope.Port = result.data;

                });
            });
        };
        $scope.fillPort();

        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
                var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
                var bytes = CryptoJS.AES.decrypt(window.location.search.split('?')[1].toString(), secret_key, {
                    iv: iv,
                    mode: CryptoJS.mode.CBC,
                    padding: CryptoJS.pad.Pkcs7
                });

                var params = bytes.toString(CryptoJS.enc.Utf8).split('&');
                //alert(params);
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;

                }
            }
            if (queryString["TerminalID"] != null) {
                
                $scope.HDRegId = queryString["TerminalID"].toString();
                $scope.BindTerminal(queryString["TerminalID"].toString());

            }
        });
        $scope.BindTerminal = function (TerminalID) {

            var Datavalue = {}
            var id = TerminalID;

            if (id == "" || id == null)
                Datavalue.ID = 0;
            else
                Datavalue.ID = TerminalID;
             $http({
                 method: 'POST',
                 url: '/api/Home/TerminalRecord/',
                 data: JSON.stringify(Datavalue),
             }).then(function (result)
             {
                 $timeout(function ()
                 {

                     if (Datavalue.ID != "") {

                         $scope.txtTerminalCode = result.data[0].TerminalCode;
                         $scope.txtTerminalName = result.data[0].TerminalName;
                         $scope.ddlPort = { ID: result.data[0].PortID };
                         $scope.ChkStatus = result.data[0].Status;

                     }
                     else {
                     $scope.txtDepName = "";
                         $scope.TerminalCode = "";
                         $scope.TerminalName = "";
                         $('#ddlPort').val() = 0;
                         $scope.ChkStatus = 0;
                      }
                 });
             });
          

         }
        $scope.BindTerminal();
    });

    function ShowPopup(message) {
        swal(message);
    };

</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 backbtn" style="text-align:right;">
                <a href="/Home/TerminalView" class="btn btn-fill btnback btn-success btn-round btntop">
                    <i class="material-icons">reply</i> Back

                </a>
                @*<button type="submit" ng-click="AddNew();" class="btn btn-fill btn-warning btn-round btntop">
                    <i class="material-icons">edit</i>

                </button>*@
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header card-header-primary card-header-text">
                        <div class="card-text">
                            <h4 class="card-title">Terminal Master</h4>
                        </div>
                    </div>
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Terminal Code</label>
                                        </div>
                                        <div class="col-md-1">:</div>
                                        <div class="col-md-7">
                                            <input type="text" autocomplete="off" id="txtTerminalCode" ng-model="txtTerminalCode" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Terminal Name</label>
                                        </div>
                                        <div class="col-md-1">:</div>
                                        <div class="col-md-7">
                                            <input type="text" autocomplete="off" id="txtTerminalName" ng-model="txtTerminalName" class="form-control">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Port</label>
                                        </div>
                                        <div class="col-md-1">:</div>
                                        <div class="col-md-7">
                                            <select id="ddlPort" ng-model="ddlPort" class="form-control my-select" ng-options="item.PortName for item in Port track by item.ID"></select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Status</label>
                                        </div>
                                        <div class="col-md-1">:</div>
                                        <div class="col-md-7 input-field">
                                            <div class="togglebutton">
                                                <label>
                                                    <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-checked="ChkStatus == 1" id="ChkStatus" ng-model="ChkStatus" value="ChkStatus">
                                                    <span class="toggle"></span>

                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>


                    </div>
                    <div class="card-footer ">
                        <div class="col-md-12" style="text-align:right;">
                            <button type="submit" ng-click="Recordsave();" class="btn btn-fill btn-rose">Submit</button>

                        </div>
                        <input type="hidden" id="HDRegId" ng-model="HDRegId" />
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>


