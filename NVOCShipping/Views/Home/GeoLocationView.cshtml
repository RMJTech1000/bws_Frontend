@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<script type="text/javascript">


    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-selectCountry').select2({
                placeholder: "Country", allowClear: true, width: '100%'
            });

        });
        $('#overlay').fadeIn().delay(300).fadeOut();
        $scope.AddNew = function () {
            window.location = "/Home/GeoLocation"
        }
        $scope.Country = null;
        $scope.fillCountry = function () {

            $http({
                method: 'POST',
                url: '/api/Home/BindCountries/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.Country = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        };
        $scope.fillCountry();

        $scope.GeoLocMasterRecords = null;
        $scope.GeoLocMasterRecords = function () {
            var BussData = {}
            BussData.GeoLocation = $scope.txtGeoLoc;
            BussData.CountryID = $('#ddlCountry').val();

            $http({
                method: 'POST',
                url: "/api/Home/GeoLocationView",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.GeoLocRec = result.data;

                $scope.totalItems = $scope.GeoLocRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.GeoLocRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };

        $scope.GeoLocViewRecords = function () {

            $scope.GeoLocMasterRecords();
        }
        $scope.ClearRecords = function () {
            $scope.txtGeoLoc = "";
            $("#ddlCountry").val(null).trigger("change");
            $scope.GeoLocMasterRecords();
        }
        $scope.GeoLocMasterRecords();
        $scope.GeoLocUpdate = function (urlv) {

            //var url = "/Home/GeoLocation?GeoLocID=" + encodeURIComponent(url);
            //window.location.href = url;
            var ParameterValue = "GeoLocID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Home/GeoLocation?" + ciphertext;

            window.location.href = url;
        }

          $scope.btnPrint = function () {
              var GeoLoc = $('#txtGeoLoc').val();
              var Country = $('#ddlCountry').val();
            var User = localStorage.getItem("UserName");

              window.location.href = '@Url.Action("GeoLocationExcel", "MastersExcel")?GeoLoc=' + GeoLoc + '&Country=' + Country + '&User=' + User;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Geo-Location Master
                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="col-md-12 padr0" style="text-align:right;">
                        <a class="button" ng-click="btnPrint();"><span>Download <i class="fa fa-file-excel-o"></i> </span></a>
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Geo-Location</th>
                                    <th>Country</th>
                                    <th>Status</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in GeoLocRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.GeoLocation}}</td>
                                    <td>{{i.Country}}</td>
                                    <td>{{i.StatusResult}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="GeoLocUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(GeoLocRec|filter:GeoLocation).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" autocomplete="off" id="txtGeoLoc" ng-model="txtGeoLoc" placeholder="Geo-Location" class="form-control">

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCountry" ng-model="ddlCountry" id="ddlCountry" ng-options="item.CountryName for item in Country track by item.CountryID" required>
                                <option value="" disabled selected>Country</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="GeoLocViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
