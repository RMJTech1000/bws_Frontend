                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        }
          // $scope.bindDropDownAppPort();


        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
                var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
                var bytes = CryptoJS.AES.decrypt(window.location.search.split('?')[1].toString(), secret_key, {
                    iv: iv,
                    mode: CryptoJS.mode.CBC,
                    padding: CryptoJS.pad.Pkcs7
                });

                var params = bytes.toString(CryptoJS.enc.Utf8).split('&');
                //alert(params);
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;

                }
            }
            if (queryString["DepotID"] != null) {
                $scope.HDRegId = queryString["DepotID"].toString();
                $scope.BindDepot(queryString["DepotID"].toString());
                $scope.BindDepotMasterPortDtls(queryString["DepotID"].toString());
            }
        });

        $scope.BindDepot = function (DepotID) {

            var Datavalue = {}
            var id = DepotID;

            if (id == "" || id == null)
                Datavalue.ID = 0;
            else
                Datavalue.ID = DepotID;
            $http({
                method: 'POST',
                url: '/api/Home/DepotRecord/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {

                    if (Datavalue.ID != "") {

                        $scope.txtDepName = result.data[0].DepName;
                        $scope.txtDepotAddress = result.data[0].DepAddress;
                        $scope.ddlCountry = { CountryID: result.data[0].DepCountry };
                        $scope.ddlCity = { ID: result.data[0].DepCity };
                        $scope.ddlStatus = { ID: result.data[0].Status  };
                        $scope.bindDropDownCity(result.data[0].DepCountry);
                        $scope.bindDropDownAppPort(result.data[0].DepCountry);
                        $scope.txtEmailID = result.data[0].EmailID;
                        
                    }
                    else {
                        $scope.txtDepName = "";
                        $scope.txtEmailID = "";
                        $scope.txtDepotAddress = "";
                        $('#ddlCountry').val() ="";
                        $('#ddlCity').val() = "";
                        $('#ddlPort').val() = "";
                        $('#ddlStatus').val() = "";
                    }
                });
            });
          
        }

        $scope.BindDepotMasterPortDtls = function (DepotID) {
            var Datavalue = {};
            Datavalue.ID = DepotID;

            $http({
                method: 'POST',
                url: "/api/Home/BindDepoMasterPortDtls",
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
              

                $timeout(function () {

                    if (result.data.length > 0) {
                        if (result.data[0].PortID != "") {
                            $scope.DynamicGrid.splice(0, 1);
                        }
                        angular.forEach(result.data, function (value, key) {

                            $scope.DynamicGrid.push({
                                'PID': result.data[key].PID,
                                'PortID': result.data[key].PortID,
                                'Port': result.data[key].Port,

                            });

                        });
                    }
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
        }

        $scope.DynamicGrid = [{ PID: "", PortID: "", Port: "" }];
        $scope.DynamicGrid.splice(0, 1);

        $scope.Add = function (DynamicGrid) {


            var PIDValue;

            PIDValue = ($scope.PID == "") ? 0 : $scope.PID;

            var val = {
                'PID': PIDValue,
                'PortID': $("#ddlPort").val(),
                'Port': $("#ddlPort option:selected").text(),

            };
            if ($scope.HDArrayIndex != null && $scope.HDArrayIndex.length != 0) {

                $scope.DynamicGrid[$scope.HDArrayIndex] = val;
            } else {

                $scope.DynamicGrid.push(val);
            }

            $("#ddlPort").val("");
            $scope.HDArrayIndex = "";
            $scope.PID = 0;

        }
        $scope.Remove = function (DynamicGrid, index) {
            $scope.DynamicGrid.splice(index, 1);
        }
        $scope.Remove = function (DynamicGrid, index, PID) {

            var BussData = {}
            BussData.PID = PID;
            $scope.DynamicGrid.splice(index, 1);
            $http({
                method: 'POST',
                url: '/api/Home/DepotApplicablePortDelete/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.DynamicGrid.splice(index, TID);
                    $scope.BindDepotMasterPortDtls($scope.HDRegId);
                });
            });



        }

    });

    function ShowPopup(message) {
        swal(message);
    };

</script>

