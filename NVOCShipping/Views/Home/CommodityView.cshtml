@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $('#overlay').fadeIn().delay(300).fadeOut();
        $scope.AddNew = function () {
           window.location = "/Home/Commodity"
        }


        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });

        });

        $scope.commoditytypes = null;
        $scope.fillCommodityTypes = function () {
            $http({

                method: 'POST',
                url: '/api/Home/CommodityTypes/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.commoditytypes = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        };
        $scope.fillCommodityTypes();

        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.CustomerRecords = null;
        $scope.CustomerRecords = function () {
            var BussData = {}
            BussData.CommodityUnCode = $scope.txtCmdCode;
            BussData.CommodityName = $scope.txtCmdName;
            BussData.HSCode = $scope.txtHsCode;
            BussData.CommodityType = $("#ddlCmdtypes").val();

            $http({
                method: 'POST',
                url: "/api/Home/Commodityview",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.CustomerRec = result.data;

                $scope.totalItems = $scope.CustomerRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.CustomerRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.CommodityViewRecords = function () {

            $scope.CustomerRecords();
        }
        $scope.ClearRecords = function () {

            $('#txtCmdCode').val('');
            $scope.txtHsCode = "";
            $scope.txtCmdName = "";
            $('#ddlCmdtypes').val('');
            $scope.CustomerRecords();
        }
        $scope.CustomerRecords();
        $scope.CommodityUpdate = function (urlv) {

            //var url = "/Home/Commodity?CommodityRegID=" + encodeURIComponent(url);
            //window.location.href = url;

            var ParameterValue = "CommodityRegID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Home/Commodity?" + ciphertext;

            window.location.href = url;
        }

          $scope.btnPrint = function () {
              var CmdName = $('#txtCmdName').val();
              var HsCode = $('#txtHsCode').val();
              var CmdType = $('#ddlCmdtypes').val();
            var User = localStorage.getItem("UserName");

              window.location.href = '@Url.Action("CommodityExcel", "MastersExcel")?CmdName=' + CmdName + '&HsCode=' + HsCode + '&CmdType=' + CmdType + '& User=' + User;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Commodity Master

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="col-md-12 padr0" style="text-align:right;">
                        <a class="button" ng-click="btnPrint();"><span>Download <i class="fa fa-file-excel-o"></i> </span></a>

                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Commodity Code</th>
                                    <th>Commodity Name</th>
                                    <th>HS Code</th>
                                    <th>DG Flag </th>
                                    <th>Commodity Type</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in CustomerRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.CommodityUnCode}}</td>
                                    <td>{{i.CommodityName}}</td>
                                    <td>{{i.HSCode}}</td>
                                    <td>{{i.DangerousFlag}}</td>
                                    <td>{{i.CommodityType}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="CommodityUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(CustomerRec|filter:CommodityUnCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtCmdName" ng-model="txtCmdName" class="form-control" placeholder="Commodity Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtHsCode" ng-model="txtHsCode" class="form-control" placeholder="HS Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-select" ng-model="CommodityType" id="ddlCmdtypes" placeholder="Commodity Type" ng-options="item.GeneralName for item in commoditytypes track by item.CommodityType">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="CommodityViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
