<div ng-app="MyApp" ng-controller="MyController">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12" style="text-align:right;">
                <button type="submit" ng-click="back();" class="btn btn-fill btn-success btn-round btntop">
                    <i class="material-icons">reply</i>

                </button>
                <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-warning btn-round btntop">
                    <i class="material-icons">edit</i>

                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header card-header-primary card-header-text">
                        <div class="card-text">
                            <h4 class="card-title">Staff Role</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Role Code</label>
                                            <input type="text" id="txtRoleCode" ng-model="txtRoleCode" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Role Description</label>
                                            <input type="text" id="txtDescription" ng-model="txtDescription" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Program Name</label>
                                            <select id="ddlProgramName" ng-model="ddlProgramName" ng-options="item.FileName for item in MenuValues track by item.ID" class="form-control my-select"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row" style="margin-top:41px;">
                                            <div class="col-md-3">
                                                <input type="checkbox" id="ChkCreate" ng-model="ChkCreate" />
                                                <label style="padding: 0px 4px;">Create</label>
                                            </div>
                                            <div class="col-md-3">
                                                <input type="checkbox" id="ChkUpdate" ng-model="ChkUpdate" />
                                                <label style="padding: 0px 4px;">Update</label>
                                            </div>
                                            <div class="col-md-3">
                                                <input type="checkbox" id="ChkDelete" ng-model="ChkDelete" />
                                                <label style="padding: 0px 4px;">Delete</label>
                                            </div>
                                            <div class="col-md-3">
                                                <input type="checkbox" id="ChkView" ng-model="ChkView" />
                                                <label style="padding: 0px 4px;">View</label>
                                            </div>
                                        </div>
                                        
                                       
                                        
                                       

                                    </div>
                                 
                                    <div class="col-md-12" style="text-align:right;">
                                        <button class="btn btn-success" ng-click="RecordSave();">SAVE</button>
                                        <input type="hidden" id="RegId" ng-model="RegId" />
                                        <input type="hidden" id="HdId" ng-model="HdId" />
                                    </div>
                                </div>

                            </div>



                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="material-datatables">
                                    <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>Role Code</th>
                                                <th>Role Description</th>
                                                <th>Program Name</th>
                                                <th class="disabled-sorting text-right">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="i in StaffRoleRec">
                                                <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                                <td>{{i.RoleCode}}</td>
                                                <td>{{i.RoldeDes}}</td>
                                                <td>{{i.ProgramName}}</td>
                                                <td class="td-actions text-right">

                                                    <button type="button" ng-click="RoleEdit(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                                        <i class="material-icons">edit</i>
                                                    </button>

                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                    @*<div id="notFoundDiv" ng-show="(CustomerRec|filter:CountryCode).length==0" style="color: red; font-weight: bold">No Records Found</div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
