    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });

        });


        $scope.MenuValues = null;
        $scope.fillMenuValues = function () {
            $http({
                method: 'POST',
                url: '/api/StaffApi/StaffRoleMenu/',
                data: {}
            }).then(function (result) {
                $timeout(function () {

                    $scope.MenuValues = result.data;

                });
            });
        };
        $scope.fillMenuValues();


        $scope.RecordSave = function () {
            //var validation = "";

            //var txtUserCode = $('#txtUserCode').val();
            //if (txtUserCode.length == 0) {

            //    validation += "<span style='color:red;'>*</span> <span>Please Enter User</span></br>"

            //}
            //var txtUserName = $('#txtUserName').val();
            //if (txtUserName.length == 0) {

            //    validation += "<span style='color:red;'>*</span> <span>Please Enter User Name</span></br>"

            //}

            //var ddlLocation = $('#ddlLocation').val();
            //if (ddlLocation == "?") {

            //    validation += "<span style='color:red;'>*</span> <span>Please Select Location</span></br>"

            //}
            //var ddlBranch = $('#ddlBranch').val();
            //if (ddlBranch == "?") {

            //    validation += "<span style='color:red;'>*</span> <span>Please Select Branch</span></br>"

            //}

            //var ddlDesignation = $('#ddlDesignation').val();
            //if (ddlDesignation == "?") {

            //    validation += "<span style='color:red;'>*</span> <span>Please Select Designation</span></br>"

            //}

            //var txtEmailID = $('#txtEmailID').val();
            //if (txtEmailID.length == 0) {

            //    validation += "<span style='color:red;'>*</span> <span>Please Enter Email ID</span></br>"

            //}
            //var txtAddress = $('#txtAddress').val();
            //if (txtAddress.length == 0) {

            //    validation += "<span style='color:red;'>*</span> <span>Please Enter Address</span></br>"

            //}
            //if (validation != "") {

            //    ShowPopup(validation);
            //    return false;
            //}
            var BussData = {}
            if ($scope.HdId != "")
                BussData.ID = $scope.HdId;
                
            else
                BussData.ID = 0;
                
            alert($scope.HdId);
           
            BussData.RoleCode = $scope.txtRoleCode;
            BussData.RoleDes = $scope.txtDescription;
            BussData.ProgramName = $('#ddlProgramName').val();
           
            if ($scope.ChkCreate == true) {
                BussData.Create = 1;
            }
            else {
                BussData.Create = 0;
            }
            if ($scope.ChkUpdate == true) {
                BussData.Update = 1;
            }
            else {
                BussData.Update = 0;
            }
            if ($scope.ChkDelete == true) {
                BussData.Delete = 1;
            }
            else {
                BussData.Delete = 0;
            }
            if ($scope.ChkView == true) {
                BussData.View = 1;
            }
            else {
                BussData.View = 0;
            }


            $http({
                method: 'POST',
                url: "/api/StaffApi/StaffRoleInsert",
                data: JSON.stringify(BussData),

            }).then(function (result) {
                $timeout(function () {
                    $scope.Save = result.data;
                    if (BussData.ID != "") {
                        $('#overlay').hide;
                        ShowPopup("Record Saved Successfully");
                        $scope.txtRoleCode = "";
                        $scope.txtDescription = "";
                        $scope.ddlProgramName = 0;
                    }
                    else {
                        ShowPopup("Error Not Saved");
                    }
                    return false;
                });
            });
        }

        $scope.BindStaffRoleView = function (RoleID) {

            var BussData = {}
            var id = RoleID;

            if (id == "" || id == null)
                BussData.ID = 0;
            else
                BussData.ID = RoleID;
            alert(RoleID);
            $http({
                method: 'POST',
                url: "/api/StaffApi/StaffRoleViewRecord",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.RegId = result.data[0].ID;
                $scope.StaffRoleRec = result.data;
                $scope.totalItems = $scope.StaffRoleRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.StaffRoleRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });
        };

        $scope.BindRolesRecord = function (RoleID) {
            var BussData = {}
            var id = RoleID;

            if (id == "" || id == null)
                BussData.ID = 0;
            else
                BussData.ID = RoleID;
            alert(RoleID);
            $http({
                method: 'POST',
                url: '/api/StaffApi/StaffRoleBindRecord/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {

                    if (BussData.ID != "") {
                        $scope.RegId = result.data[0].ID;
                        $scope.txtRoleCode = result.data[0].RoleCode;
                        $scope.txtDescription = result.data[0].RoleDes;
                        $scope.ddlProgramName = { ID: result.data[0].ProgramName };
                        alert(result.data[0].Create);
                        if (result.data[0].Create != "") {
                            $scope.ChkCreate = true;
                        }
                        else {
                            $scope.ChkCreate = false;
                        }
                        if (result.data[0].Update != "") {
                            $scope.ChkUpdate = true;
                        }
                        else {
                            $scope.ChkUpdate = false;
                        }
                        if (result.data[0].Delete != "") {
                            $scope.ChkDelete = true;
                        }
                        else {
                            $scope.ChkDelete = false;
                        }
                        if (result.data[0].View != "") {
                            $scope.ChkView = true;
                        }
                        else {
                            $scope.ChkView = false;
                        }
                        

                    }
                    else {
                        $('#txtRoleCode').val();
                        $('#txtDescription').val();
                        $('#ddlProgramName').val(0);

                    }
                });
            });
        }

        $scope.RoleEdit = function (RoleID) {
            var BussData = {}
            var id = RoleID;

            if (id == "" || id == null)
                BussData.ID = 0;
            else
                BussData.ID = RoleID;
            alert(RoleID);

            $scope.BindRolesRecord($scope.RegId);
        }

        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            if (queryString["RoleID"] != null) {

                $scope.RegId = queryString["RoleID"].toString();
                $scope.BindStaffRoleView(queryString["RoleID"].toString());
               /* $scope.BindRolesRecord(queryString["RoleID"].toString());*/

            }
        });
    });

    function ShowPopup(message) {
        swal(message);
    };


</script>

