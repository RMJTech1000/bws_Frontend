<div ng-app="MyApp" ng-controller="MyController">

    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 backbtn" style="text-align:right;">
                <a ng-click="back();" class="btn btn-fill btn-success btn-round btntop" style="color:#fff;">
                    <i class="material-icons">reply</i> Back

                </a>
                @*<button type="submit" ng-click="AddNew();" class="btn btn-fill btn-warning btn-round btntop">
                        <i class="material-icons">edit</i>

                    </button>*@
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header card-header-primary card-header-text">
                        <div class="card-text">
                            <h4 class="card-title"> RR/BL Access</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row" style="border:1px solid #ccc; padding-bottom:20px;">
                            <div class="col-md-12" style="border-right:1px solid #ccc;">
                                <div class="row" style="border-bottom:1px solid #ccc;">
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Document Type</label>
                                            <select id="ddlDocumentType" ng-model="ddlDocumentType" class="form-control my-select" options="{ allowClear: true }" ng-options="item.GeneralName for item in DocumentTypeAllvalues track by item.ID"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Rate Request Number</label>
                                            <select id="ddlRRNo" ng-model="ddlRRNo" ng-disabled="RRNoShowdislpay" class="form-control my-select"  ng-options="item.RatesheetNo for item in RateRequestvalues track by item.ID"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>BL Number</label>
                                            <select id="ddlBLNumber" ng-model="ddlBLNumber" ng-disabled="BLNumberNodislpay" class="form-control my-select" options="{ allowClear: true }" ng-options="item.BLNumber for item in Bookingvalues track by item.ID"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Agency</label>
                                            <select id="ddlAgency" ng-model="ddlAgency" class="form-control my-select" options="{ allowClear: true }" ng-options="item.AgencyName for item in Agencyvalues track by item.ID"></select>
                                        </div>
                                    </div>

                                    <div class="col-md-2">
                                        <div class="form-group">
                                            <label>Access Type</label>
                                            <select id="ddlAccessTypes" ng-model="ddlAccessTypes" class="form-control" options="{ allowClear: true }" ng-options="item.GeneralName for item in AccessAllvalues track by item.ID"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="border-bottom:1px solid #ccc;">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Notes</label>
                                            <textarea id="txtNotes" rows="2" ng-model="txtNotes" class="form-control"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="border-bottom:1px solid #ccc;">
                                    <div class="col-md-12" style="text-align:right;">
                                        <button class="btn btn-default" ng-click="ClearAll();">clear</button>
                                        <button class="btn btn-danger" ng-click="Recordsave();">update</button>
                                        <button class="btn btn-success" ng-click="Recordsave();">add</button>
                                        <input type="hidden" id="HDRegID" ng-model="HDRegID" />
                                    </div>
                                </div>
                                <div class="row" style="border-bottom:1px solid #ccc;">
                                    <div class="col-md-12">
                                        <div class="material-datatables" style="overflow:scroll;">

                                            <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>SNo</th>
                                                        <th>Document Type</th>
                                                        <th>RRNumber</th>
                                                        <th>BLNumber</th>
                                                        <th>Agency Name</th>
                                                        <th>Access Type</th>
                                                        <th>Createdby</th>
                                                        <th>CreatedDate</th>
                                                        <th>Actions</th>

                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <tr ng-repeat="gRow in DynamicGrid">
                                                        <td>{{$index+1}}</td>
                                                        <td>
                                                            {{gRow.DocumentType}}
                                                            <input type="hidden" id="ID" ng-model="gRow.ID" />
                                                            <input type="hidden" id="DocumentTypeID" ng-model="gRow.DocumentTypeID" />
                                                        </td>
                                                        <td>

                                                            {{gRow.RRNo}}
                                                            <input type="hidden" id="RRID" ng-model="gRow.RRID" />

                                                        </td>
                                                        <td>
                                                            {{gRow.BLNumber}}
                                                            <input type="hidden" id="BLID" ng-model="gRow.BLID" />
                                                        </td>
                                                        <td>
                                                            {{gRow.Agency}}
                                                            <input type="hidden" id="AgencyID" ng-model="gRow.AgencyID" />
                                                        </td>
                                                        <td>
                                                            {{gRow.AccessType}}
                                                            <input type="hidden" id="AccessTypeID" ng-model="gRow.AccessTypeID" />
                                                        </td>
                                                        <td>
                                                            {{gRow.Createdby}}
                                                        </td>
                                                        <td>
                                                            {{gRow.CreatedDate}}
                                                        </td>

                                                        <td class="td-actions text-right bindgrid">
                                                            <button type="button" rel="tooltip" ng-click="Selectvalues(DynamicGrid,$index)" class="btn btn-success btn-round" data-original-title="" title="">
                                                                <i class="material-icons">edit</i>
                                                            </button>
                                                            <button type="button" rel="tooltip" ng-click="Remove(DynamicGrid,$index,gRow.TID)" class="btn btn-danger btn-round" data-original-title="" title="">
                                                                <i class="material-icons">delete</i>
                                                            </button>
                                                        </td>
                                                    </tr>



                                                </tbody>
                                            </table>

                                        </div>
                                    </div>

                                    <input type="hidden" id="HDArrayIndex" ng-model="HDArrayIndex" />
                                </div>
                            </div>
                        </div>
                        <div class="row" style="border-bottom:1px solid #ccc;">
                            <div class="col-md-12" style="text-align:right;">
                               

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



