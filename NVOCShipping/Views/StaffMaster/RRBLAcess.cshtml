<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });

        });

        $scope.RRNoShowdislpay == true;
        $scope.BLNumberNodislpay == true;

        $scope.DocumentTypeAllvalues = null;
        $scope.AccessAllvalues = null;
        $scope.RateRequestvalues = null;
        $scope.Bookingvalues = null;
        $scope.Agencyvalues = null;
        $scope.fillDocumentTypeAllvalues = function () {
            var Datavalue = {};
            Datavalue.ID = "61"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.DocumentTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillAccessAllvalues = function () {
            var Datavalue = {};
            Datavalue.ID = "62"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.AccessAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillRateRequestvalues = function () {
            var Datavalue = {};
            Datavalue.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/RRMasterAccess/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.RateRequestvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillBookingvalues = function () {

            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/BLMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.Bookingvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillAgencyvalues = function () {

            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/AgencyMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.Agencyvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillDocumentTypeAllvalues();
        $scope.fillAccessAllvalues();
        $scope.fillRateRequestvalues();
        $scope.fillBookingvalues();
        $scope.fillAgencyvalues();

        $scope.DynamicGrid = [{ ID: "", DocumentTypeID: "", DocumentType: "", RRID: "", RRNo: "", BLID: "", BLNumber: "", AgencyID: "", Agency: "", AccessTypeID: "", AccessType:""}]
        $scope.DynamicGrid.splice(0, 1);

        $scope.ClearAll = function () {

            $('#ddlDocumentType').val(null).trigger('change');
            $('#ddlRRNo').val(null).trigger('change');
            $('#ddlBLNumber').val(null).trigger('change');
            $('#ddlAgency').val(null).trigger('change');
            $('#ddlAccessTypes').val(null).trigger('change');
        }


        $scope.Remove = function (DynamicGrid, index, TID) {

            var BussData = {}
            BussData.ID = $scope.DynamicGrid[index].ID;
            $http({
                method: 'POST',
                url: '/api/StaffApi/RRBLAccessDelete',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.ExistingRecordBind();
                    ShowPopup(result.data[0].Message);
                   
                });
            });
        }
        $scope.Selectvalues = function (DynamicGrid, index) {

            //$('#ddlRRNo').val(null).trigger('change');
            //$('#ddlBLNumber').val(null).trigger('change');
            //$('#ddlAgency').val(null).trigger('change');
           
            $scope.HDArrayIndex = index;
            $scope.HDRegID = $scope.DynamicGrid[index].ID;
            $scope.ddlDocumentType = { ID: $scope.DynamicGrid[index].DocumentTypeID };
            $scope.ddlRRNo = { ID: $scope.DynamicGrid[index].RRID };
            $scope.ddlBLNumber = { ID: $scope.DynamicGrid[index].BLID };
            $scope.ddlAgency = { ID: $scope.DynamicGrid[index].AgencyID };
            $scope.ddlAccessTypes = { ID: $scope.DynamicGrid[index].AccessTypeID };
            

        }
        // --VALIDATION Begin----//


        $scope.Recordsave = function (data) {

            var validation = "";
            var BussData = {};
            var ddlDocumentType = $('#ddlDocumentType').val();
            if (ddlDocumentType == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Document Type</span></br>"
            }

            var ddlAgency = $('#ddlAgency').val();
            if (ddlAgency == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Agency Name</span></br>"
            }


            var ddlAccessTypes = $('#ddlAccessTypes').val();
            if (ddlAccessTypes == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Access Type</span></br>"
            }
            if (validation != "") {
                ShowPopup(validation);
                return false;
            }
            if (HDRegID != "")
                BussData.ID = $scope.HDRegID;
            else
                BussData.ID = 0;
            BussData.DocumentTypeID = $('#ddlDocumentType').val();

           

            if ($('#ddlRRNo').val() != "?" && $('#ddlRRNo').val() != null)
                BussData.RRID = $('#ddlRRNo').val();
            else
                BussData.RRID = 0;

           
           
            if ($('#ddlBLNumber').val() != "?" && $('#ddlBLNumber').val() != null)
                BussData.BLID = $('#ddlBLNumber').val();
            else
                BussData.BLID = 0;

            BussData.AgencyID = $('#ddlAgency').val();
            BussData.AccessTypeID = $('#ddlAccessTypes').val();
            BussData.Createdby = localStorage.getItem("UserID");
           
            $http({
                method: 'POST',
                url: '/api/StaffApi/RRBLAccessInsert',
                data: JSON.stringify(BussData),

            }).then(function (result)
            {
                $timeout(function () {
                    if (result.data.length > 0) {
                        $scope.HDRegID = result.data.ID;
                        ShowPopup(result.data[0].Message);
                        $scope.ExistingRecordBind();

                     

                        $('#ddlDocumentType').val(null).trigger('change');
                        $('#ddlRRNo').val(null).trigger('change');
                        $('#ddlBLNumber').val(null).trigger('change');
                        $('#ddlAgency').val(null).trigger('change');
                        $('#ddlAccessTypes').val(null).trigger('change');

                    }
                    
                    $('#overlay').hide();
                    setTimeOut(function () {
                        window.location = "/";
                    }, 3000);
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                $('#overlay').hide();
                ShowPopup('There has been an error: ' + result);
            });


        }


        $scope.ExistingRecordBind = function () {

            var IDv = 0;
            var Datavalue = {};
            Datavalue.ID = IDv;
            $http({
                method: 'POST',
                url: '/api/StaffApi/RRBLAccessExistingRecord/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.DynamicGrid = result.data;
                    console.log($scope.DynamicGrid);

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        }
        $scope.ExistingRecordBind();

        $("#ddlDocumentType").change(function ()
        {
            if ($("#ddlDocumentType").val() == "250")
            {
                $scope.RRNoShowdislpay = true;
                $scope.BLNumberNodislpay = false;
                $('#ddlBLNumber').prop('disabled', false);
                $('#ddlRRNo').prop('disabled', true);
                $('#ddlRRNo').val(null).trigger('change');
            }
            else {


                $('#ddlBLNumber').val(null).trigger('change');
                $('#ddlBLNumber').prop('disabled', true);
                $('#ddlRRNo').prop('disabled', false);
                $('#ddlRRNo').val(null).trigger('change');
            }
        });



    });

    function ShowPopup(message) {
        swal(message);
    };


</script>

