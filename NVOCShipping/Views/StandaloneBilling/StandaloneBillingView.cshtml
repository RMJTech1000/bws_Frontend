<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 backbtn" style="text-align:right;">
            <a href="#" ng-click="back();" type="submit" class="btn btn-fill btnback btn-success btn-round btntop">
                <i class="material-icons">reply</i> Back
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Invoice Dashboard
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6"><h4>Customer Invoice(s) and Credit Note(s)</h4></div>
                        <div class="col-md-6 invoicedash" style="text-align:right;">
                            <a href="#" ng-click="AccountPagingDR();"><i class="fa fa-plus"></i> Invoice</a>
                            <a href="#" ng-click="AccountPagingCR();"><i class="fa fa-plus bg"></i> Credit Note</a>
                        </div>
                    </div>
                    <div class="material-datatables">
                        <table class="table table-striped table-no-bordered table-hover tblinvoice" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>DOC Type</th>
                                    <th>Document No</th>
                                    <th>Date</th>
                                    <th>Party Name</th>
                                    <th>Invoice Amount</th>
                                    <th>Credit Note Amount</th>
                                    <th>Doc Status</th>
                                    <th>Action</th>
                                    <th>Print</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="gRow in BLInvoiceDetails | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{gRow.InvTypes}}</td>
                                    <td><a href="#" ng-click="OnclickExistingInvoice(gRow.ID,gRow.IntInvTypes)">{{gRow.InvoiceNo}}</a></td>
                                    <td>{{gRow.InvDate}}</td>
                                    <td>{{gRow.PartyName}}</td>
                                    <td>{{gRow.InvTotal}}</td>
                                    <td>{{gRow.InvCRTotal}}</td>
                                    <td>{{gRow.InvStatus}}</td>

                                    <td>
                                        <button type="button" rel="tooltip" ng-model="btnFinal" ng-disabled="gRow.IsFinal" ng-click="btnFinal(gRow.ID,gRow.InvTypes)" class="btn btn-success btn-round btnfinal" title="">
                                            Final
                                        </button>
                                        <button type="button" rel="tooltip" ng-show="gRow.IsFinal==false" ng-model="btnReject" ng-disabled="gRow.IsFinal" ng-click="btnReject(gRow.ID,gRow.InvTypes)" class="btn btn-danger btn-round btnreject" title="">
                                            Reject
                                        </button>

                                    </td>
                                    <td>
                                        <button type="button" ng-click="btnPrint(gRow.ID);" rel="tooltip" class="btn btn-default btn-round btnprint" title="">
                                            <i class="material-icons">print</i>
                                        </button>

                                    </td>

                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
                <input type="hidden" id="RegId" ng-model="RegId" />
                <input type="hidden" id="ModuleID" ng-model="ModuleID" />
                <input type="hidden" id="HDBLID" ng-model="HDBLID" />
            </div>

        </div>

        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtParty" ng-model="txtParty" class="form-control" placeholder="PARTY">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtinvoice" ng-model="txtinvoice" class="form-control" placeholder="FINAL INVOICE">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="date" id="txtFdate" ng-model="txtFdate" class="form-control" placeholder="FROM DATE">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="date" id="txtTodate" ng-model="txtTodate" class="form-control" placeholder="TO DATE">
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="fillBLInvoiceDetails();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


