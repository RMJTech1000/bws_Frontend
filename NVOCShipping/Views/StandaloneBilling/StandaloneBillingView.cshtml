@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();


        $(document).ready(function () {
            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            //if (queryString["BkgRegID"] != null) {

            //    //$scope.RegId = queryString["BkgRegID"].toString();
            //    //$scope.HDBLID = queryString["BLIDReg"].toString();
            //    //$scope.ModuleID = queryString["Module"].toString();
            //    //$scope.fillBLInvoiceDetails($scope.RegId, $scope.HDBLID);
            //}


        });



        $scope.BLInvoiceDetails = null;
        $scope.fillBLInvoiceDetails = function ()
        {

            var BussData = {};
            BussData.BkgID =0;
            BussData.BLID = 0;
            BussData.BLTypes = 3;
            BussData.PartyName = $("#txtParty").val();
            BussData.InvoiceNo = $("#txtinvoice").val();
            BussData.FromDate = $("#txtFdate").val();
            BussData.ToDate = $("#txtTodate").val();
            BussData.AgentId = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/StandalonInvoice/ExistingInvoiceDetails/',
                data: JSON.stringify(BussData),
            }).then(function (result)
            {
                $timeout(function () {
                    $scope.BLInvoiceDetails = result.data;
                    $scope.totalItems = $scope.BLInvoiceDetails.length;
                    $scope.currentPage = 1;
                    $scope.numPerPage = 8;
                    $scope.paginate = function (value) {
                        var begin, end, index;
                        begin = ($scope.currentPage - 1) * $scope.numPerPage;
                        end = begin + $scope.numPerPage;
                        index = $scope.BLInvoiceDetails.indexOf(value);
                        return (begin <= index && index < end);
                    };


                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };

        $scope.fillBLInvoiceDetails();

        $scope.OnclickExistingInvoice = function (InvID, IntInvTypes) {

            var BkgID = $scope.RegId;
            var BLID = $scope.HDBLID;
            var url = "";
            if  (IntInvTypes == "1") {
                url = "/StandaloneBilling/StandaloneBilling?BkgRegID=" + encodeURIComponent(BkgID) + "&InvID=" + encodeURIComponent(InvID) + "&BLTypes=" + encodeURIComponent("EXP") + "&Module=" + encodeURIComponent($scope.ModuleID) + "&BLIDReg=" + BLID;
            }
            else if (IntInvTypes == "2")
            {
                url = "/StandaloneBilling/CRStandaloneBilling?BkgRegID=" + encodeURIComponent(BkgID) + "&InvID=" + encodeURIComponent(InvID) + "&BLTypes=" + encodeURIComponent("EXP") + "&Module=" + encodeURIComponent($scope.ModuleID) + "&BLIDReg=" + BLID;
            }




            window.location.href = url;
        }


        $scope.AccountPagingDR = function () {
           
            var url = "/StandaloneBilling/StandaloneBilling?BLTypes=" + encodeURIComponent("OTH");
            window.location.href = url;

        }

        $scope.AccountPagingCR = function ()
        {
            var url = "/StandaloneBilling/CRStandaloneBilling?BLTypes=" + encodeURIComponent("OTH");
            window.location.href = url;

        }

        $scope.btnPrint = function (IDv)
        {

            window.open('@Url.Action("InvoicePDFOT", "InvoicePDF")?idv=' + IDv + '&AgencyID=' + localStorage.getItem("AgencyID"));
           // window.location.href = '@Url.Action("InvoicePDF", "InvoicePDF")';
        }

        $scope.btnFinal = function (ID, InvTypes)
        {
            var BussData = {};
            BussData.ID = ID;
            BussData.GeoLocID = localStorage.getItem("GeoLocationID");
            BussData.SessionFinYear = localStorage.getItem("SessionFinYear");
            BussData.AgentCode = localStorage.getItem("DocumentSuffix");
            BussData.ShipmentTypeID = 1;//"EXP";
            BussData.BLTypes = 3; // "BlTypes";
            BussData.InvTypes = InvTypes; // "InvoiceTypes";

            $http({
                method: 'POST',
                url: '/api/GSTIRNNumber/FinalInvoiceChargeGLMaster/',
               // url: '/api/InvoiceApi/FinalInvoiceChargeGLMaster/',
                data: JSON.stringify(BussData),
            }).then(function (result)
            {
                $timeout(function ()
                {
                    if (result.data[0].AlertSuccess == "Success")
                    {
                        $scope.fillBLInvoiceDetails($scope.RegId);
                        ShowPopup("Invoice has been finalized");
                    }
                    else {

                        var ChargeCodev = "";
                        angular.forEach(result.data, function (value, key) {
                            ChargeCodev += result.data[key].ChargeCode + ",";

                        });
                        if (ChargeCodev != "") {
                            ShowPopup("Charge Code not mapped in GLMaster(" + ChargeCodev + ")");
                        }
                    }




                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        }


        $scope.btnReject = function (ID) {
            var BussData = {};
            BussData.ID = ID;

            $http({
                method: 'POST',
                url: '/api/InvoiceApi/InvoiceReject/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function ()
                {
                    $scope.fillBLInvoiceDetails($scope.RegId);
                    ShowPopup(result.data[0].AlertSuccess);
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        }


        $scope.back = function () {
            var url = "";
            url = "/StandaloneBilling/StandaloneBillingView?&Module=" + encodeURIComponent($scope.ModuleID);
            window.location.href = url;
        }

    }

    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
<style>
