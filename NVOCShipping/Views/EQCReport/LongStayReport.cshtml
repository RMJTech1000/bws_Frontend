<link href="~/assets/css/common.css" rel="stylesheet" />
<link href="~/assets/css/InvoiceStyle.css" rel="stylesheet" />
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 backbtn" style="text-align:right;">
            <a href="/AllReports/InventoryReportDashboard" type="submit" class="btn btn-fill btnback btn-success btn-round btntop">
                <i class="material-icons">reply</i> Back
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="row" style="border: 1px solid #ccc;">
                    <div class="col-md-2" style="text-align:center;">
                        <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                    </div>
                    <div class="col-md-8" style="text-align:center;">
                        <h4 style="font-size:24px; font-weight:bold; color:#000!important; margin-top:39px;">   Long Stay Report </h4>
                    </div>
                    <div class="col-md-2" style="text-align:center;">
                        <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                    </div>
                </div>


                <div class="card-body">


                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">

                        <div class="col-md-12">
                            <div class="row">


                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">Shipment Type</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" id="ddlShipmentType" ng-model="ddlShipmentType" options="{ allowClear: true }" ng-options="item.GeneralName for item in ShipmentTypeAllvalues track by item.ID">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">Ports</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select id="ddlPort" class="form-control my-select" ng-model="ddlPort" options="{ allowClear: true }" ng-options="item.PortName for item in PortAllvalues track by item.ID"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl3"><label class="lable-fond">StatusCode</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" ng-model="ddlStatuscode" id="ddlStatuscode" ng-options="item.StatusCode for item in CntrStatusCodes track by item.ID" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <div class="row" style="margin-right:0">
                                            <div class="col-md-4 lbl"><label class="lable-fond"> Days </label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">

                                                <select class="form-control my-select" id="ddlDays" ng-model="ddlDays" ng-options="item.Name for item in DaysCombinationList track by item.ID">
                                                </select>


                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <input type="text" id="txtDays" style="width:96px; height:27px; margin-left: -40px;margin-top:6px;" autocomplete="off" ng-model="txtDays" class="form-control">
                                </div>


                                <div class="col-md-3" style="text-align:center;">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill btn-info" ng-model="btnSearch" ng-click="btnSearch();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    <i class="material-icons"></i> Search
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-default" ng-model="ClearRecords" ng-click="ClearRecords();" style="padding: 6px 18px; margin-top: -1px; width: 46%;">
                                                    <i class="material-icons">close</i> Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 exceldownload" style="text-align:right;">
                                    <a ng-click="btnPrint();">Download <i class="fa fa-file-excel-o"></i></a>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                                <div class="col-md-12 padlr0" style="padding:7px;">

                                    <div class="material-datatables">
                                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>S.No</th>
                                                    <th>Container No</th>
                                                    <th>Container Type </th>
                                                    <th>DtMovement</th>
                                                    <th>Statuscode</th>
                                                    <th>Days</th>
                                                    <th>GeoLoc</th>
                                                    <th>Location</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="gRow in GridViewData | filter : paginate | orderBy:'-Statusv'">
                                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                                    <td>{{gRow.CntrNo}}</td>
                                                    <td>{{gRow.CntrType}}</td>
                                                    <td>{{gRow.DtMovement}}</td>
                                                    <td>{{gRow.StatusCode}}</td>
                                                    <td>{{gRow.Days}}</td>
                                                    <td>{{gRow.GeoLoc}}</td>
                                                    <td>{{gRow.Location}}</td>
                                                </tr>

                                            </tbody>

                                        </table>
                                        <div id="notFoundDiv" ng-show="(GridViewData|filter:CntrNo).length==0" style="color: red; font-weight: bold">No Records Found</div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-5"></div>
                                                <div class="col-md-7" style="text-align:right;">
                                                    <pagination total-items="totalItems" ng-model="currentPage"
                                                                max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                                    </pagination>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>




            </div>


        </div>



    </div>




</div>

<script>
    $(document).ready(function () {
        // initialise Datetimepicker and Sliders
        $('.datepicker').datetimepicker({
            format: 'DD/MM/YYYY',

        });
    });
</script>
