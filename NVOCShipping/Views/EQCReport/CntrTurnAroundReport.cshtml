@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<style>
    .form-control {
        width: 180px;
        height: 24px;
    }


    .exceldownload .fa-file-excel-o {
        color: #4caf50;
        font-weight: 400;
        font-size: 20px;
    }

    .exceldownload a {
        color: #000;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });

        $scope.GeoLocationsList = null;
        $scope.fillGeoLocations = function () {
            $http({
                method: 'POST',
                url: '/api/Home/GeoLocationsMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.GeoLocationsList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillGeoLocations();

        $scope.CntrStatusCodes = null;
        $scope.fillCntrStatusCodes = function () {
            $http({
                method: 'POST',
                url: '/api/EQCReportApi/CntrTurnAroundStatusList/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.CntrStatusCodes = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillCntrStatusCodes();

        $scope.GridViewData = null;
        $scope.fillTurnAroundReportview = function () {

            var BussData = {};
            BussData.FromDt = $('#txtFromDate').val();
            BussData.ToDt = $('#txtToDate').val();
            BussData.StatusCode = $('#ddlStatuscode').val();
            BussData.GeoLoc = $('#ddlGeoLoc').val();
            $http({
                method: 'POST',
                url: '/api/EQCReportApi/CntrTurnAroundView/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.GridViewData = result.data;
                    $scope.totalItems = $scope.GridViewData.length;
                    $scope.currentPage = 1;
                    $scope.numPerPage = 8;
                    $scope.paginate = function (value) {
                        var begin, end, index;
                        begin = ($scope.currentPage - 1) * $scope.numPerPage;
                        end = begin + $scope.numPerPage;
                        index = $scope.GridViewData.indexOf(value);
                        return (begin <= index && index < end);
                    };


                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };


        $scope.btnSearch = function () {
            var validation = "";
            var ddlStatuscode = $('#ddlStatuscode').val();
            if (ddlStatuscode == "?") {

                validation += "<span style='color:red;'>*</span> <span>Please Select StatusCode</span></br>"
            }
            if (validation != "") {

                ShowPopup(validation);
                return false;
            }
            $scope.fillTurnAroundReportview();
        }
        $scope.ClearRecords = function () {
            
            $("#ddlGeoLoc").val(null).trigger("change");
            $("#ddlStatuscode").val(null).trigger("change");
            $scope.FromDt = "";
            $scope.ToDt = "";
            //$scope.fillTurnAroundReportview();
            var url = "/EQCReport/CntrTurnAroundReport";
            window.location.href = url;
        }
        $scope.btnPrint = function () {
            var validation = "";

            var FromDt = $('#txtFromDate').val();
            var ToDt = $('#txtToDate').val();
            var StatusCode = $('#ddlStatuscode').val();
            var St = $("#ddlStatuscode option:selected").text();
            var User = localStorage.getItem("UserName");
            var GeoLoc = $('#ddlGeoLoc').val();
            if (StatusCode == "?") {

                validation += "<span style='color:red;'>*</span> <span>Please Select StatusCode</span></br>"
            }
            if (validation != "") {

                ShowPopup(validation);
                return false;
            }
           

            window.location.href = '@Url.Action("EQCTurnAroundReport", "EQCReport")?FromDt=' + FromDt + "&ToDt=" + ToDt + "&StatusCode=" + StatusCode + "&User=" + User + "&St=" + St + "&GeoLoc=" + GeoLoc;

        }


       

    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
<style>
    legend {
        background-color: #0585b5;
        color: #fff;
        font-size: 14px;
        padding: 4px 5px;
        font-weight: bold;
    }

    .inventry .form-control.sundry {
        width: 172px !important;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th {
        background-color: #12759a !important;
        color: #fff;
    }

    .nav-tabs {
        width: 300px !important;
        margin: 0 auto !important;
    }
</style>
<link href="~/assets/css/common.css" rel="stylesheet" />
<link href="~/assets/css/InvoiceStyle.css" rel="stylesheet" />
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 backbtn" style="text-align:right;">
            <a href="/AllReports/InventoryReportDashboard" type="submit" class="btn btn-fill btnback btn-success btn-round btntop">
                <i class="material-icons">reply</i> Back
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="row" style="border: 1px solid #ccc;">
                    <div class="col-md-2" style="text-align:center;">
                        <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                    </div>
                    <div class="col-md-8" style="text-align:center;">
                        <h4 style="font-size:24px; font-weight:bold; color:#000!important; margin-top:39px;">Container Turn Around</h4>
                    </div>
                    <div class="col-md-2" style="text-align:center;">
                        <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                    </div>
                </div>


                <div class="card-body">


                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">

                        <div class="col-md-12">
                            <div class="row">


                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">From Date</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="date" id="txtFromDate" ng-model="txtFromDate" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">To Date</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="date" id="txtToDate" ng-model="txtToDate" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl3"><label class="lable-fond"> Statuscode</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" ng-model="ddlStatuscode" id="ddlStatuscode" ng-options="item.StatusCode for item in CntrStatusCodes track by item.ID" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl3"><label class="lable-fond"> Geo-Location</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" ng-model="ddlGeoLoc" id="ddlGeoLoc" ng-options="item.GeoLocation for item in GeoLocationsList track by item.ID" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3" style="text-align:center;">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill btn-info" ng-model="btnSearch" ng-click="btnSearch();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    <i class="material-icons"></i> Search
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-default" ng-model="ClearRecords" ng-click="ClearRecords();" style="padding: 6px 18px; margin-top: -1px; width: 46%;">
                                                    <i class="material-icons">close</i> Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 exceldownload" style="text-align:right;">
                                    <a ng-click="btnPrint();">Download <i class="fa fa-file-excel-o"></i></a>
                                </div>
                            </div>
                            <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                                <div class="col-md-12 padlr0" style="padding:7px;">

                                    <div class="material-datatables">
                                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>S.No</th>
                                                    <th>Container No</th>
                                                    <th>Container Type </th>
                                                    <th>From Status</th>
                                                    <th>From Location</th>
                                                    <th>From GeoLoc</th>
                                                    <th>DtMovement</th>
                                                    <th>To Status</th>
                                                    <th>To Location</th>
                                                    <th>To GeoLoc</th>
                                                    <th>DtMovement</th>
                                                    <th>Days</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <tr ng-repeat="gRow in GridViewData | filter : paginate | orderBy:'-Statusv'">
                                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                                    <td>{{gRow.CntrNo}}</td>
                                                    <td>{{gRow.CntrType}}</td>
                                                    <td>{{gRow.FromStatus}}</td>
                                                    <td>{{gRow.FromLocation}}</td>
                                                    <td>{{gRow.FromGeoLocation}}</td>
                                                    <td>{{gRow.FromDate}}</td>
                                                    <td>{{gRow.ToStatus}}</td>
                                                    <td>{{gRow.ToLocation}}</td>
                                                    <td>{{gRow.ToGeoLocation}}</td>
                                                    <td>{{gRow.ToDate}}</td>
                                                    <td>{{gRow.Days}}</td>
                                                </tr>

                                            </tbody>

                                        </table>
                                        <div id="notFoundDiv" ng-show="(GridViewData|filter:CntrNo).length==0" style="color: red; font-weight: bold">No Records Found</div>
                                        <div class="col-md-12">
                                            <div class="row">
                                                <div class="col-md-5"></div>
                                                <div class="col-md-7" style="text-align:right;">
                                                    <pagination total-items="totalItems" ng-model="currentPage"
                                                                max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                                    </pagination>
                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>




            </div>


        </div>



    </div>




</div>

<script>
    $(document).ready(function () {
        // initialise Datetimepicker and Sliders
        $('.datepicker').datetimepicker({
            format: 'DD/MM/YYYY',

        });
    });
</script>
