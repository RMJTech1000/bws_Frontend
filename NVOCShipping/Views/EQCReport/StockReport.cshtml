                                                    <th class="act">40'</th>
                                                    <th class="act">20'</th>
                                                    <th class="act">40'</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="gRow in EQCStockReport | filter : paginate | orderBy:'-Statusv'">
