<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {


        $('#overlay').fadeIn().delay(300).fadeOut();

        $(document).ready(function () {
            $('.my-selectBP').select2({

                placeholder: "--Booking Party--",
                allowClear: true,
                width: '100%'
            });
            $('.my-selectPOL').select2({

                placeholder: "--POL--",
                allowClear: true,
                width: '100%'
            });
            $('.my-selectPOD').select2({

                placeholder: "--POD--",
                allowClear: true,
                width: '100%'
            });
        });

       

        $scope.view = null;
        $scope.fillview = function () {

            var BussData = {};
            BussData.CertificateType = $('#CertificateType').val();
            $http({
                method: 'POST',
                url: '/api/OnBard_shipment/CertificateView/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.view = result.data;
                    $scope.totalItems = $scope.view.length;
                    $scope.currentPage = 1;
                    $scope.numPerPage = 8;
                    $scope.paginate = function (value) {
                        var begin, end, index;
                        begin = ($scope.currentPage - 1) * $scope.numPerPage;
                        end = begin + $scope.numPerPage;
                        index = $scope.view.indexOf(value);
                        return (begin <= index && index < end);
                    };


                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillview();

        $scope.deleteLoading = function (id) {
            var BussData = {}
            BussData.ID = id;
            $http({
                method: 'POST',
                url: '/api/OnBard_shipment/Certificatedelete/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    if (result.data.length > 0)
                    {
                        $scope.fillview();
                        ShowPopup(result.data[0].AlertMessage);
                    }
                });
            });
        }


        $scope.Loading = function (Id) {

            var url = "/Masters/Certifitcate?ID=" + encodeURIComponent(Id);
            window.location.href = url;

            //localStorage.setItem("BLStatus", BLStatus);
        }


    });

    function ShowPopup(message) {
        swal(message);
    };
    function AddNew() {

        window.location = "/Document/"
    }

</script>
