@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function ()
        {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });

        });


        $scope.UserDetails = null;
        $scope.fillUserDetails = function () {

            $http({
                method: 'POST',
                url: '/api/Userapi/UserDetails/',
                data: {}
            }).then(function (result) {
                $timeout(function () {

                    $scope.UserDetails = result.data;

                });
            });
        };
        $scope.fillUserDetails();


        $scope.NotificationMaster = null;
        $scope.fillNotificationMaster = function () {

            $http({
                method: 'POST',
                url: '/api/Userapi/NotificationMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {

                    $scope.NotificationMaster = result.data;

                });
            });
        };
        $scope.fillNotificationMaster();


        $scope.RecordSave = function (data) {
            var ddlAgencies = $('#ddlUserDetails').val();
            if (ddlAgencies == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select User Name</span></br>"
            }
            var BussData = {}
            var Items = []
            BussData.UserID = $('#ddlUserDetails').val();
            console.log(data);
            angular.forEach(data, function (value, key)
            {
                if (data[key].IsTrue == "1") {
                    Items.push('Insert:' + data[key].ID);
                }
            });

            BussData.Items = Items.toString();
            $http({
                method: 'POST',
                url: "/api/UserApi/InsertNotification",
                data: JSON.stringify(BussData),

            }).then(function (result) {
                $timeout(function () {
                    if (result.data.length > 0) {

                        ShowPopup("Notification Saved Successfully");
                    }
                    
                });
            });

        }

        $("#ddlUserDetails").change(function () {

            var Data = {};
            Data.UserID = $("#ddlUserDetails").val();

            $http({
                method: 'POST',
                url: '/api/Userapi/NotificationMasterUser/',
                data: JSON.stringify(Data)
            }).then(function (result) {
                $timeout(function () {
                    $scope.NotificationMaster = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        });




        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            if (queryString["UserID"] != null) {

                $scope.ddlUserDetails= { ID: queryString["UserID"].toString() };
                $scope.ExistingValues(queryString["UserID"].toString());
            }
        });

        $scope.ExistingValues = function (UserID)
        {
            //alert(UserID);
            var Data = {};
            Data.UserID = UserID;
            $http({
                method: 'POST',
                url: '/api/Userapi/NotificationMasterUser/',
                data: JSON.stringify(Data)
            }).then(function (result) {
                $timeout(function () {
                    $scope.NotificationMaster = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        }

    });

    function ShowPopup(message) {
        swal(message);
    };


</script>

