<style>
    .form-control {
        /*width: 180px;*/
        height: 24px;
    }

    .card .table tr td a {
        color: #2d55f1;
        font-weight: 500;
    }
</style>
<link href="~/assets/css/common.css" rel="stylesheet" />
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });


        $scope.InvoiceDocumentType = [
            { 'name': 'Debit Note', 'ID': 1 },
            { 'name': 'Credit Note', 'ID': 2 },
        ];

        $scope.InvoiceNoAllValues = null;
        $scope.FillInvoiceList = function () {
            var BussData = {};
            BussData.InvTypes = $("#ddlDocumentType").val();
            BussData.AgencyID =  localStorage.getItem("AgencyID")
            $http({
                method: 'POST',
                url: '/api/InvoicePrint/InvDocumentNo/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.InvoiceNoAllValues = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };


        $("#ddlDocumentType").change(function () {
            $scope.FillInvoiceList()
        });

        $scope.btnSearch = function () {


            var validation = "";
            var txtFromDate = $('#txtFromDate').val();
            if (txtFromDate == "") {
                validation += "<span style='color:red;'>*</span> <span>Please Select From Date</span></br>"
            }
            var txtToDate = $('#txtToDate').val();
            if (txtToDate == "") {
                validation += "<span style='color:red;'>*</span> <span>Please Select To Date</span></br>"
            }

            var ddlDocumentType = $('#ddlDocumentType').val();
            if (ddlDocumentType == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Document Types</span></br>"
            }

            if (validation != "")
            {
                ShowPopup(validation);
                return;
            }

            var BussData = {};
            BussData.InvTypes = $("#ddlDocumentType").val();
            BussData.FromDate = $("#txtFromDate").val();
            BussData.ToDate = $("#txtToDate").val();
            BussData.AgencyID = localStorage.getItem("AgencyID");
            alert(localStorage.getItem("AgencyID"));
            $http({
                method: 'POST',
                url: '/api/InvoicePrint/SearchInvDocumentNo/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.InvoiceNoAllValues = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });
        }

        $scope.btnGetReportonClick = function () {

            var validation = "";
            var txtFromDate = $('#txtFromDate').val();
            if (txtFromDate == "") {
                validation += "<span style='color:red;'>*</span> <span>Please Select From Date</span></br>"
            }
            var txtToDate = $('#txtToDate').val();
            if (txtToDate == "") {
                validation += "<span style='color:red;'>*</span> <span>Please Select To Date</span></br>"
            }

            var ddlDocumentType = $('#ddlDocumentType').val();
            if (ddlDocumentType == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Document Types</span></br>"
            }

            var ddlInvoiceNo = $('#ddlInvoiceNo').val();
            if (ddlInvoiceNo == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Document No</span></br>"
            }

            if (validation != "") {
                ShowPopup(validation);
                return;
            }
            window.open('@Url.Action("InvoicePDF", "InvoicePDF")?idv=' + ddlInvoiceNo + '&AgencyID=' + localStorage.getItem("AgencyID"));

        }

        $scope.ClearRecords = function () {

            $('#txtFromDate').val('');
            $('#txtToDate').val('');
            $('#ddlDocumentType').val(0);
            $('#ddlInvoiceNo').val(0);

        }

    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row" style="border: 1px solid #ccc;">
                        <div class="col-md-2" style="text-align:center;">
                            <img src="/assets/img/misrepimg.jpg" style="width:100px;">
                        </div>
                        <div class="col-md-8" style="text-align:center;">
                            <h4 style="font-size:24px; font-weight:bold; color:#000!important; margin-top:39px;">Invoice Printing</h4>
                        </div>
                        <div class="col-md-2" style="text-align:center;">
                            <img src="/assets/img/misrepimg.jpg" style="width:100px;">
                        </div>
                    </div>
                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                        <div class="col-md-12">
                            <div class="row">


                           
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>From Date</label>
                                                <input type="date" id="txtFromDate" ng-model="txtFromDate" class="form-control" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>To Date</label>
                                                <input type="date" id="txtToDate" ng-model="txtToDate" class="form-control" />
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Docuement Type</label>
                                                <select class="form-control my-select" id="ddlDocumentType" ng-model="ddlDocumentType" ng-options="item.name for item in InvoiceDocumentType track by item.ID"></select>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Document No</label>
                                                <select class="form-control my-select" id="ddlInvoiceNo" ng-model="ddlInvoiceNo" ng-options="item.InvoiceNo for item in InvoiceNoAllValues track by item.ID"></select>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                               
                                <div class="col-md-3 offset-4" style="text-align:center;">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill btn-info" ng-model="btnSearch" ng-click="btnSearch();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    Search
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-success" ng-model="btngetReport" ng-click="btnGetReportonClick();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    Generate Report
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-default" ng-model="ClearRecords" ng-click="ClearRecords();" style="padding: 6px 18px; margin-top: -1px; width: 46%;">
                                                    Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</div>
</div>
</div>
</div>