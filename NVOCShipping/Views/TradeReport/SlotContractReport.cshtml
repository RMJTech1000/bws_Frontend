<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });
        $scope.ShipmentTypeAllvalues = [
            { 'Name': 'EXPORT', 'ID': 1 },
            { 'Name': 'IMPORT', 'ID': 2 },
            { 'Name': 'TRANSHIPMENT', 'ID': 3 },
            { 'Name': 'DAMAGE', 'ID': 4 },
            { 'Name': 'AVAILABLE', 'ID': 5 },

        ];
        $scope.CountryList = null;
        $scope.FillCountryMasterList = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/CountryMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.CountryList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FillCountryMasterList();

        $scope.SlotOperatorValue = null;
        $scope.fillSlotOperatorValues = function () {


            var Datavalue = {};
            Datavalue.BussTypes = "7,8,13";
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/CustomerBussTypesMaster/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {

                $timeout(function () {

                    $scope.SlotOperatorValue = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillSlotOperatorValues();

        $scope.PortAllvalues = null;
        $scope.fillPortAllvalues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/BindMainPorts/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.PortAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillPortAllvalues();

        $scope.ClearRecords = function () {

            $("#ddlFeeder").val(null).trigger("change");
            $("#ddlFromPort").val(null).trigger("change");
            $("#ddlToPort").val(null).trigger("change");

        }

          $scope.btnPrint = function () {

            //var validation = "";

            //var ddlShipmentType = $('#ddlShipmentType').val();
            //if (ddlShipmentType == "?") {
            //    validation += "<span style='color:red;'>*</span> <span>Please Shipment Type</span></br>"
            //}
            //if (validation != "") {
            //    ShowPopup(validation);
            //    return false;
            //}
              var FromPort = $('#ddlFromPort').val();
              var  ToPort = $('#ddlToPort').val();
              var FeederID = $('#ddlFeeder').val();
              var EffectDate = $('#txtEffectDate').val();
              var User = localStorage.getItem("UserName");
              var CtryID = $('#ddlCountry').val();
              
              window.location.href = '@Url.Action("SlotContractReportValues", "TradeReport")?FeederID=' + FeederID + "&FromPort=" + FromPort + "&ToPort=" + ToPort + "&EffectDate=" + EffectDate + "&CtryID=" + CtryID+"&User=" + User;

        }

    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
