    }
        $scope.FileUploadingWindows = function () {

            var left = (screen.width / 2) - (400 / 2);
            var top = (screen.height / 2) - (300 / 2);
            return window.open("../IHCUpload.aspx?ID=" + $scope.RegId, 'window', 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=400, height=300, top=' + top + ', left=' + left);
        }


    $scope.LoadingIHCEdit = function (urlv) {

        //var url = "/Sales/IHCHaulageTariff?IHCTariffID=" + encodeURIComponent(urlv);
        //window.location.href = url;

        var ParameterValue = "IHCTariffID=" + urlv.toString();
        var message = CryptoJS.enc.Utf8.parse(ParameterValue);
        var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
        var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
        var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
            iv: iv,
            mode: CryptoJS.mode.CBC,
            padding: CryptoJS.pad.Pkcs7
        });
        var url = "/Sales/IHCHaulageTariff?" + ciphertext;

        window.location.href = url;
    }

        $scope.btnDownload = function () {


            var ICDLocID = $('#ddlCity').val();
            var PortID = $('#ddlPort').val();
            var Status = $('#ddlStatus').val();
            var ContainerTypeID = $('#ddlContainerType').val();
            var CommodityTypeID = $('#ddlCommodityType').val();
            var ChargeTypeID = $('#ddlChargeType').val();
            var User = localStorage.getItem("UserName");

            window.location.href = '@Url.Action("CreateIHCExcelReport", "IHCExcelReport")?ICDLocID=' + ICDLocID + "&PortID=" + PortID
                + "&Status=" + Status + "&ContainerTypeID=" + ContainerTypeID + "&CommodityTypeID=" + CommodityTypeID + "&ChargeTypeID=" + ChargeTypeID + "&User=" + User;

        }
    });

    function ShowPopup(message) {
        swal(message);
    };

</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
