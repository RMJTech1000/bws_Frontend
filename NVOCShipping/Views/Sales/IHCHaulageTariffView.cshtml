                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>ICD</th>
                                    <th>Port Name</th>
                                    <th>Commodity Type </th>
                                    <th>Container Type </th>
                                    <th>Charge Type</th>
                                    @*<th>Valid From</th>
                    <th>Valid Till</th>*@
                                    <th>Status</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                <tr ng-repeat="i in IHCHaulageViewRateview | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.ICDName}}</td>
                                    <td>{{i.Port}}</td>
                                    <td>{{i.CommodityType}}</td>
                                    <td>{{i.ContainerType}}</td>
                                    <td>{{i.ChargeType}}</td>
                                    @*<td>{{i.ValidFrom}}</td>
                    <td>{{i.ValidTill}}</td>*@
                                    <td>{{i.Status}}</td>
                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="LoadingIHCEdit(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(IHCHaulageViewRateview|filter:ICDName).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>

                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
