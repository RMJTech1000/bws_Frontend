    $scope.IHCHaulageViewRateview = null;
        $scope.IHCHaulageViewRecords = function () {

        var BussData = {};
        BussData.ICDLocID = $('#ddlCity').val();
        BussData.PortID = $('#ddlPort').val();
        BussData.Status = $('#ddlStatus').val();
        BussData.ContainerTypeID = $('#ddlContainerType').val();
        BussData.CommodityTypeID = $('#ddlCommodityType').val();
        BussData.ChargeTypeID = $('#ddlChargeType').val();
        $http({
            method: 'POST',
            url: '/api/SalesApi/IHCHaulageTariffViewRecord/',
            data: JSON.stringify(BussData),
        }).then(function (result) {
            $timeout(function () {
                $scope.IHCHaulageViewRateview = result.data;
                $scope.totalItems = $scope.IHCHaulageViewRateview.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.IHCHaulageViewRateview.indexOf(value);
                    return (begin <= index && index < end);
                };


            });
            $('#overlay').hide();
        }, function (result) {
            if (result.status == 500) {
                $('#overlay').hide();
                ShowPopup("Sorry no internet connectivity Application Error.");
            }
            else if (result.status == 404) {
                $('#overlay').hide();
                ShowPopup("Sorry no internet connectivity page not found.");
            }
            if (result.status > 0) {
                $('#overlay').hide();
                var errorMsg = result.status + ': ' + result.data;
                ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
            }
        }).catch(function (result) {
            $('#overlay').hide();
            ShowPopup('There has been an error: ' + result);
        });
    };
    $scope.IHCHaulageViewRecords();

    $scope.ClearRecords = function () {

        $("#ddlCity").val(null).trigger("change");
