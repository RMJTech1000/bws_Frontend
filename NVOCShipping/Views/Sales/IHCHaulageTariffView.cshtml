                    </div>
                    <div class="material-datatables">
                        <div class="row">
                            <div class="col-md-12 padlr0 exceldownload" style="text-align:right; padding-right:16px;">
                                <a href="#" ng-click="FileUploadingWindows();" class="btn btn-fill btn-success btnuploadfile btnadd btntop" style="margin-right:0;">
                                    <i class="material-icons">upload</i> Upload
                                </a>
                                
                                    <a ng-click="btnDownload();">Download <i class="fa fa-file-excel-o"></i></a>
                               
                            </div>

                            
                        </div>
