            });
            BussData.MRGItemsv = MRGItems.toString();
            BussData.SLTItemsv = SLTItems.toString();
            BussData.SLTDItemsv = SLTDItems.toString();

            $http({
                method: 'POST',
                url: '/api/SalesApi/SalesRatesheetSLTMRGInsert',
