            var MRGItems = []
            var SLTItems = []
            var SLTDItems = []

            BussData.RRID = $scope.RegId;
            angular.forEach(DataMrg, function (value, key) {
                MRGItems.push('Insert:' + DataMrg[key].MID, DataMrg[key].QuotedAmt, DataMrg[key].FreightTerms.ID, DataMrg[key].CntrTypes.ID);
