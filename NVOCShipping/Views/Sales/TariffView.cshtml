<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            <a href="/Sales/TariffMaster" class="btn btn-fill btn-success btnadd btn-round btntop">
                <i class="material-icons">add</i> Create New

            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Tariff Master

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">
                            <a href="#" ng-click="FileUploadingWindows();" class="btn btn-fill btn-success btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">upload</i> Upload
                            </a>
                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Location</th>
                                    <th>Commodity</th>
                                    <th>Group</th>
                                    <th>Service Type</th>
                                    <th>Collection Mode</th>
                                    <th>Tariff Type</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr>
                                <tr ng-repeat="i in PortTariffRateview | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.Locations}}</td>
                                    <td>{{i.CommodityType}}</td>
                                    <td>{{i.Groups}}</td>
                                    <td>{{i.ServiceType}}</td>
                                    <td>{{i.CollectionMode}}</td>
                                    <td>{{i.TariffType}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="LoadingPortTariffPage(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(PortTariffRateview|filter:Locations).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                  
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select type="text" id="ddlLocation" ng-model="ddlLocation" class="form-control my-selectLoc" placeholder="Location" ng-options="item.PortName for item in PortAllvalues track by item.ID">
                                <option value="" disabled selected>Location</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select type="text" id="ddlDGClass" ng-model="ddlDGClass" class="form-control my-selectGroup" placeholder="DGClass" ng-options="item.name for item in BindDGClassValues track by item.ID">
                                <option value="" disabled selected>DG Class </option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select type="text" id="ddlServiceType" ng-model="ddlServiceType" class="form-control my-selectSerType" placeholder="Shipment Type" ng-options="item.ServiceTypesName for item in ServiceTypesValue track by item.ID">
                                <option value="" disabled selected>Service Type </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select type="text" id="ddlShipment" ng-model="ddlShipment" class="form-control my-selectST" placeholder="Shipment Type" ng-options="item.GeneralName for item in ShipmentTypeAllvalues track by item.ID">
                                <option value="" disabled selected>Module Shipment Type</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectTT" id="ddlRegTariffTypes" ng-model="ddlRegTariffTypes" options="{ allowClear: true }" ng-options="item.GeneralName for item in TariffRegTypeAllvalues track by item.ID">

                                <option value="" disabled selected> Tariff Type</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCM" id="ddlCollMode" ng-model="ddlCollMode" options="{ allowClear: true }" ng-options="item.GeneralName for item in CollectionAllvalues track by item.ID">

                                <option value="" disabled selected> Collection Mode</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select type="text" id="ddlStatus" ng-model="ddlStatus" class="form-control my-selectStatus" options="{ allowClear: true }" ng-options="item.name for item in StatusBindValues track by item.ID">
                                <option value="" disabled selected>Status</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="TariffViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

