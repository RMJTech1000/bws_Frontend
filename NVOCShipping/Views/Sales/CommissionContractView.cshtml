@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {


        $(document).ready(function () {
            $('.my-selectShipmentType').select2({
                placeholder: "Shipment Type", allowClear: true, width: '100%'
            });

        });
        $(document).ready(function () {
            $('.my-selectAgency').select2({
                placeholder: "Agency", allowClear: true, width: '100%'
            });

        });
        $(document).ready(function () {
            $('.my-selectCommissionChrg').select2({
                placeholder: "Commission Charge", allowClear: true, width: '100%'
            });

        });
        $(document).ready(function () {
            $('.my-selectStatus').select2({
                placeholder: "Status ", allowClear: true, width: '100%'
            });

        });
        $('#overlay').fadeIn().delay(300).fadeOut();
        $scope.StatusValues = [

            { 'name': 'Active', 'ID': 1 },
            { 'name': 'InActive', 'ID': 2 }

        ];
        $scope.CommissionChargesValue = null;
        $scope.fillCommissionChargesValue = function () {
            var Datavalue = {};
            Datavalue.ChargeCommTypes = "32,33,34";
            $http({
                method: 'POST',
                url: '/api/SalesApi/CommissionCharges/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.CommissionChargesValue = result.data;
                    console.log(result.data);
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillCommissionChargesValue();

        $scope.Agencyvalues = null;
        $scope.fillAgencyvalues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/AgencyMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.Agencyvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillAgencyvalues();

        $scope.ShipmentTypeAllvalues = null;
        $scope.fillShipmentTypeValues = function () {
            var Datavalue = {};
            Datavalue.ShipmentTypes = "1,2,179";  //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/SalesApi/ShipmentTypes/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.ShipmentTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillShipmentTypeValues();

        $scope.CommContractRecords = null;
        $scope.CommContractRecords = function () {

            var BussData = {}
            BussData.ShipmentType = $("#ddlShipmentType").val();
            BussData.AgencyID = $("#ddlAgency").val();
            BussData.StatusID = $("#ddlStatus").val();
            BussData.ComChargeID = $('#ddlCommissionChrg').val();
            $http({

                method: 'POST',
                url: "/api/SalesApi/CommContractView",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.CommContractRec = result.data;

                $scope.totalItems = $scope.CommContractRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.CommContractRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.CommContractViewRecords = function () {

            $scope.CommContractRecords();
        }

        $scope.ClearRecords = function () {
            $("#ddlShipmentType").val(null).trigger("change");
            $("#ddlAgency").val(null).trigger("change");
            $("#ddlStatus").val(null).trigger("change");
            $("#ddlCommissionChrg").val(null).trigger("change");
            $scope.CommContractRecords();
        }
        $scope.CommContractRecords();

        $scope.CommContractUpdate = function (urlv) {

            //var url = "/Sales/CommissionContract?ComID=" + encodeURIComponent(url);
            //window.location.href = url;

            var ParameterValue = "ComID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Sales/CommissionContract?" + ciphertext;

            window.location.href = url;
        }
        $scope.AddNew = function () {

            window.location = "/Sales/CommissionContract"
        }
         $scope.btnPrint = function () {
             var ShipmentType = $('#ddlShipmentType').val();
             var Agency = $('#ddlAgency').val();
             var CommissionCharge = $('#ddlCommissionChrg').val();
             var Status = $('#ddlStatus').val();
             var User = localStorage.getItem("UserName");
             window.location.href = '@Url.Action("CommissionContractExcel", "MastersExcel")?ShipmentType=' + ShipmentType + '&Agency=' + Agency + '&CommissionCharge=' + CommissionCharge + '&Status=' + Status + '&User=' + User;
        }
    }

    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Commission Contract
                    </div>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">

                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Shipment Type </th>
                                    <th>Agency  </th>
                                    <th>Commission Charge  </th>
                                    <th>Status</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in CommContractRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.ShipmentTypes}}</td>
                                    <td>{{i.Agency}}</td>
                                    <td>{{i.CommissionCharge}}</td>
                                    <td>{{i.StatusResult}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="CommContractUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        @*<div id="notFoundDiv" ng-show="(CustomerRec|filter:CountryCode).length==0" style="color: red; font-weight: bold">No Records Found</div>*@
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectShipmentType" id="ddlShipmentType" ng-model="ddlShipmentType" options="{ allowClear: true }" ng-options="item.ShipmentTypes for item in ShipmentTypeAllvalues track by item.ID">
                                <option value="" disabled selected>Shipment Type</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectAgency" id="ddlAgency" ng-model="ddlAgency" ng-options="item.AgencyName for item in Agencyvalues track by item.ID">
                                <option value="" disabled selected>Agency</option>
                            </select>
                        
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCommissionChrg" id="ddlCommissionChrg" ng-model="ddlCommissionChrg" ng-options="item.ChargeCode for item in CommissionChargesValue track by item.ID">
                                <option value="" disabled selected>Commission Charge</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectStatus" id="ddlStatus" ng-model="ddlStatus" ng-options="item.name for item in StatusValues track by item.ID">
                                <option value="" disabled selected>Status</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="CommContractViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
