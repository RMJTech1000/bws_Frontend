    }

    .nav-tabs {
        width: 300px !important;
        margin: 0 auto !important;
    }
    .btn.btn-info {
        background-color: #077adc;
        border-color: #077adc;
    }
    .btn.btn-default {
        color: #000;
        font-weight: normal;
        background-color: #e0e0e080;
        border: 1px solid #000;
        border-color: transparent;
        box-shadow: none;
    }
</style>
<link href="~/assets/css/common.css" rel="stylesheet" />
@*<link href="~/assets/css/InvoiceStyle.css" rel="stylesheet" />*@
<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row" style="border: 1px solid #ccc;">
                        <div class="col-md-2" style="text-align:center;">
                            <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                        </div>
                        <div class="col-md-8" style="text-align:center;">
                            <h4 style="font-size:24px; font-weight:bold; color:#000!important; margin-top:39px;">MIS REPORT</h4>
                        </div>
                        <div class="col-md-2" style="text-align:center;">
                            <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                        </div>
                    </div>
                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                        <div class="col-md-12">
                            <div class="row">


                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label>Agency</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select id="ddlAgency" ng-model="ddlAgency" class="form-control my-select" ng-options="item.AgencyName for item in AgencyMaster track by item.ID"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2" style="text-align:right;"><label>From Date</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="date" id="txtFromDate" ng-model="txtFromDate" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2" style="text-align:right;"><label>To Date</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="date" id="txtToDate" ng-model="txtToDate" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3" style="text-align:center;">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill btn-info" ng-model="btnSearch" ng-click="btnSearch();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    <i class="material-icons">search</i> Search
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-default" ng-model="ClearRecords" ng-click="ClearRecords();" style="padding: 6px 18px; margin-top: -1px; width: 46%;">
                                                    <i class="material-icons">close</i> Clear
                                                </button>
                                                <a ng-click="btnReportExcel();">Download <i class="fa fa-file-excel-o"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                        <div class="col-md-12 padlr0" style="padding:7px;">
                            <div class="material-datatables">
                                <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Agency</th>
                                            <th>No.Of Shipments</th>
                                            <th>Number of 20's'</th>
                                            <th>Number of 40's'</th>
                                            <th>Total Revenue</th>
                                            <th>Total Expenses</th>
                                            <th>Profit/Loss</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="gRow in viewData">
                                            <td><a href="#" ng-click="BtnOnclickPage(gRow.AgentID);">{{gRow.Agency}}</a></td>
                                            <td>{{gRow.NoofShipment}}</td>
                                            <td>{{gRow.NoofCntr20}}</td>
                                            <td>{{gRow.NoofCntr40}}</td>
                                            <td>{{gRow.RevenuAmt}}</td>
                                            <td>{{gRow.CostAmt}}</td>
                                            <td>{{gRow.ProfitAmt}}</td>
                                        </tr>

                                    </tbody>

                                </table>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-5"></div>
                                        <div class="col-md-7" style="text-align:right;">
                                            <pagination total-items="totalItems" ng-model="currentPage"
                                                        max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                            </pagination>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.datepicker').datetimepicker({
            format: 'DD/MM/YYYY',
        });
    });
</script>

