@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<style>

    .exceldownload .fa-file-excel-o {
        color: #4caf50;
        font-weight: 400;
        font-size: 20px;
    }

    .exceldownload a {
        color: #000;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        $(document).ready(function () {
            $('.my-selectPT').select2({
                placeholder: "Product Type", allowClear: true, width: '100%'
            });
            $('.my-selectST').select2({
                placeholder: "Shipment Type", allowClear: true, width: '100%'
            });

        });
            $scope.ProductTypeAllvalues = null;
        $scope.fillProductTypeValues = function () {
            var Datavalue = {};
            Datavalue.ID = "7"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.ProductTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillProductTypeValues();

          $scope.ShipmentTypeAllvalues = null;
        $scope.fillShipmentTypeValues = function () {
            var Datavalue = {};
            Datavalue.ID = "1"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.ShipmentTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillShipmentTypeValues();
        $scope.GLMapRecords = function () {
            var BussData = {}
            BussData.ChargeCodeV = $scope.txtChgCode;
            BussData.ProductTypeID = $('#ddlProductType').val();
            BussData.ShipmentTypeID =  $('#ddlShipmentType').val();

            $http({
                method: 'POST',
                url: "/api/FinanceApi/GLMappingView",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.GLMapRec = result.data;

                $scope.totalItems = $scope.GLMapRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.GLMapRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
          $scope.GLMapRecords();
        $scope.GLMappingViewRecords = function () {

             $scope.GLMapRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtChgCode = "";

            $("#ddlProductType").val(null).trigger("change");
            $("#ddlShipmentType").val(null).trigger("change");

            $scope.GLMapRecords();
        }

        //$scope.CurrencyUpdate = function (url, MID)
        //{
        //    localStorage.setItem("CustomerID", url);
        //    top.location.href = "/Party/Customer/" + url;

        //}
        $scope.CustomerEdit = function (urlv) {
            //var url = "/Finance/GLMapping?GlMapReg=" + encodeURIComponent(urlv);
            //window.location.href = url;

            var ParameterValue = "GlMapReg=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Finance/GLMapping?" + ciphertext;

            window.location.href = url;
        }
       $scope.AddNew = function () {
            localStorage.setItem("CustomerID", "");
            window.location = "/Finance/GLMapping"
        }

          $scope.btnExcel = function () {


              var ChargeCodeV = $scope.txtChgCode;
              var User = localStorage.getItem("UserName");
              var ProductTypeID = $('#ddlProductType').val();
              var ShipmentTypeID = $('#ddlShipmentType').val();

              window.location.href = '@Url.Action("CreateGLMappingExcel", "AccountsMasterExcel")?ChargeCodeV=' + ChargeCodeV + "&ProductTypeID=" + ProductTypeID + "&ShipmentTypeID=" + ShipmentTypeID + "&User=" + User;

        }
    }
    );

    function ShowPopup(message) {
        swal(message);
    };



</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        GL Mapping
                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="row">
                        <div class="col-md-12 exceldownload" style="text-align:right;">
                            <a ng-click="btnExcel();">Download <i class="fa fa-file-excel-o"></i></a>
                        </div>
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Charge Code</th>
                                    <th>Product Type</th>
                                    <th>Shipment Type</th>
                                    <th>Valid From</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in GLMapRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.ChargeCodeV}}</td>
                                    <td>{{i.ProductTypeV}}</td>
                                    <td>{{i.ShipmentTypeV}}</td>
                                    <td>{{i.ValidFrom}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="CustomerEdit(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(CustomerRec|filter:CurrencyCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtChgCode" ng-model="txtChgCode" class="form-control" placeholder="Charge Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select id="ddlProductType" ng-model="ddlProductType" class="form-control my-selectPT" options="{ allowClear: true }" ng-options="item.GeneralName for item in ProductTypeAllvalues track by item.ID">
                                <option value="" disabled selected> Product Type</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectST" id="ddlShipmentType" ng-model="ddlShipmentType" options="{ allowClear: true }" ng-options="item.GeneralName for item in ShipmentTypeAllvalues track by item.ID">
                                <option value="" disabled selected> Shipment Type</option>
                            </select>
                        </div>
                    </div>
                    @*<div class="form-group">
                            <div class="col-md-12 padlr0">
                                <input type="text" id="txtStateName" ng-model="txtStateName" class="form-control" placeholder="State Name">
                            </div>
                        </div>*@
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="GLMappingViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

