@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $(document).ready(function () {
            $('.my-selectParty').select2({
                placeholder: "Party", allowClear: true, width: '100%'
            });
            $('.my-selectPT').select2({
                placeholder: "PartyType", allowClear: true, width: '100%'
            });
            $('.my-selectET').select2({
                placeholder: "Exempt Tax", allowClear: true, width: '100%'
            });

        });

        $scope.AddNew = function () {
           window.location = "/Finance/CreditControl"
        }


        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });

        });

        $scope.TaxExemptValues = [

            { 'Name': 'Yes', 'ID': 1 },
            { 'Name': 'No', 'ID': 2 },

        ];

        $scope.CustomerTypeAllvalues = null;
        $scope.fillCustomerTypeValues = function () {
            var Datavalue = {};
            Datavalue.ID = "18"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.CustomerTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillCustomerTypeValues();

        $scope.PartyValues = null;
        $scope.FillPartyValues = function () {
            $http({

                method: 'POST',
                url: '/api/CommonAccessApi/CustomerMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.PartyValues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        };
        $scope.FillPartyValues();


        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.CreditControlRecords = null;
        $scope.CreditControlRecords = function () {
            var BussData = {}


            BussData.PartyID = $("#ddlParty").val();
            BussData.PartyType = $("#ddlCustType").val();
            BussData.ExemptFromTax = $("#ddlExemptTax").val();
            BussData.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: "/api/FinanceApi/CreditControlView",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.CreditCtrlRec = result.data;

                $scope.totalItems = $scope.CreditCtrlRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.CreditCtrlRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };


        $scope.CreditCtrlViewRecords = function () {

            $scope.CreditControlRecords();
        }
        $scope.ClearRecords = function () {


            $("#ddlParty").val(null) .trigger("change");
            $("#ddlCustType").val(null).trigger("change");
            $("#ddlExemptTax").val(null).trigger("change");
            $scope.CreditControlRecords();
        }
        $scope.CreditControlRecords();

        $scope.CreditControlUpdate = function (urlv) {

            //var url = "/Finance/CreditControl?CrCtrlID=" + encodeURIComponent(url);
            //window.location.href = url;

            var ParameterValue = "CrCtrlID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Finance/CreditControl?" + ciphertext;

            window.location.href = url;
        }

         $scope.btnPrint = function () {
             var Party = $('#ddlParty').val();
             var PartyType = $('#ddlCustType').val();
             var ExemTax = $('#ddlExemptTax').val();
             var User = localStorage.getItem("UserName");
             window.location.href = '@Url.Action("CreditControlExcel", "MastersExcel")?Party=' + Party + '&PartyType=' + PartyType + '&ExemTax=' + ExemTax + '&User=' + User;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Credit Control

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">
                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Party</th>
                                    <th>Party Type</th>
                                    <th>Exempt From Tax </th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in CreditCtrlRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.CustomerName}}</td>
                                    <td>{{i.PartyTypes}}</td>
                                    <td>{{i.TaxExempt}}</td>


                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="CreditControlUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(CreditCtrlRec|filter:CustomerName).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectParty" ng-model="ddlParty" id="ddlParty" ng-options="item.CustomerName for item in PartyValues track by item.ID" required>
                                <option value="" disabled selected>Party</option>
                            </select>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select id="ddlCustType" ng-model="ddlCustType" class="form-control my-selectPT" options="{ allowClear: true }" ng-options="item.GeneralName for item in CustomerTypeAllvalues track by item.ID">

                                <option value="" disabled selected>Party Type</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectET" ng-model="ddlExemptTax" id="ddlExemptTax" ng-options="item.Name for item in TaxExemptValues track by item.ID" required>
                                <option value="" disabled selected>Party Type</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="CreditCtrlViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
