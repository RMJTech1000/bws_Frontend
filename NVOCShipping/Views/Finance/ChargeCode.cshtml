                                BussData.ChgDesc = $scope.txtChgDesc;
                                BussData.ChargeGroupID = $("#ddlChgGroup").val();
                                BussData.IsRevenue = $("#ddlChargeTypes").val();
                                BussData.BasisID = $("#ddlBasis").val();
