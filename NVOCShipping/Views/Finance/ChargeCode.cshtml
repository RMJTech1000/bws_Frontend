                                }
                                else {
                                    BussData.IsForwarding = 0;
                                }

                                
                                BussData.IsForwarding = $scope.IsForwarding;

                                if ($scope.IsSlab == 1) {

                                    BussData.IsSlab = 1;
                                }
                                else {
                                    BussData.IsSlab = 0;
                                }

                                BussData.IsSlab = $scope.IsSlab;

                                if ($scope.IsDeposit == 1) {

                                    BussData.IsDeposit = 1;
                                }
                                else {
                                    BussData.IsDeposit = 0;
                                }
                                BussData.IsDeposit = $scope.IsDeposit;

                                if ($("#ddlChargeTypes").val() != "1") {
                                    if ($scope.IsBreakUp == 1) {

                                        BussData.IsBreakUp = 1;
                                    }
                                    else {
                                        BussData.IsBreakUp = 0;
                                    }
                                    BussData.IsBreakUp = $scope.IsBreakUp;

                                }
                                else {
                                    BussData.IsBreakUp = 0;
                                }

                                $http({
                                    method: 'POST',
                                    url: "/api/FinanceApi/InsertChargeCodes",
                                    data: JSON.stringify(BussData),

                                }).then(function (result) {
                                    $timeout(function () {
                                        //BussData.ID = result.data[0].ID;
