@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<style>

    .exceldownload .fa-file-excel-o {
        color: #4caf50;
        font-weight: 400;
        font-size: 20px;
    }

    .exceldownload a {
        color: #000;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        $(document).ready(function () {
            $('.my-selectMainAccType').select2({
                placeholder: "MainAccType", allowClear: true, width: '100%'
            });
            $('.my-selectCategory').select2({
                placeholder: "Category", allowClear: true, width: '100%'
            });

        });

        $scope.MainAccTypeAllvalues = null;
        $scope.fillMainAccTypeValues = function () {
            var Datavalue = {};
            Datavalue.ID = "20"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.MainAccTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillMainAccTypeValues();

        $scope.GLCategoryAllvalues = null;
        $scope.fillGLCategoryValues = function () {
            var Datavalue = {};
            Datavalue.ID = "22"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.GLCategoryAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillGLCategoryValues();


        $scope.GLMasterRecords = null;
        $scope.GLMasterRecords = function () {
            var BussData = {}
            BussData.GLDesc = $scope.txtGLDes;
            BussData.GLCode = $scope.txtGLCode;
            BussData.MainAccType = $("#ddlMainAccType").val();
            BussData.Category = $("#ddlCategory").val();

            $http({
                method: 'POST',
                url: "/api/FinanceApi/GLMasterView",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.GLMasRec = result.data;

                $scope.totalItems = $scope.GLMasRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.GLMasRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.GLMasterViewRecords = function () {

             $scope.GLMasterRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtGLDes = "";
            $scope.txtGLCode = "";
            $("#ddlMainAccType").val(null).trigger("change");
            $("#ddlCategory").val(null).trigger("change");
            $scope.GLMasterRecords();
        }
        $scope.GLMasterRecords();

        $scope.btnExcel = function () {

            var GLDesc = $scope.txtGLDes;
           var User = localStorage.getItem("UserName");
            var GLCode = $scope.txtGLCode;
            var MainAccType = $("#ddlMainAccType").val();
            var Category = $("#ddlCategory").val();

            window.location.href = '@Url.Action("CreateGLMasterExcel", "AccountsMasterExcel")?GLCode=' + GLCode + "&GLDesc=" + GLDesc + "&MainAccType=" + MainAccType + "&Category=" + Category + "&User=" + User;

        }

        $scope.CustomerEdit = function (urlv) {
            //var url = "/Finance/GLMaster?GLMasReg=" + encodeURIComponent(urlv);
            //window.location.href = url;

            var ParameterValue = "GLMasReg=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Finance/GLMaster?" + ciphertext;

            window.location.href = url;
        }
       $scope.AddNew = function () {
            localStorage.setItem("CustomerID", "");
            window.location = "/Finance/GLMaster"
        }

        $scope.FileUploadingWindows = function () {

            var left = (screen.width / 2) - (400 / 2);
            var top = (screen.height / 2) - (300 / 2);
            return window.open("../GLMasterUpload.aspx", 'window', 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=400, height=300, top=' + top + ', left=' + left);
        }
    }
    );

    function ShowPopup(message) {
        swal(message);
    };



</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <a href="/Finance/GLMaster" class="btn btn-fill btn-success btn-round btnadd btntop">
                <i class="material-icons">add</i> Create New
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        GL Master
                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="row">
                        <div class="col-md-12 exceldownload" style="text-align:right;">
                            <button type="submit" class="btn btn-fill btn-success btntop" ng-click="FileUploadingWindows();">
                                <i class="material-icons">upload</i>
                                Upload in Excel
                            </button>
                            <a ng-click="btnExcel();">Download <i class="fa fa-file-excel-o"></i></a>
                        </div>
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Code</th>
                                    <th>GL Description</th>
                                    <th>Main Account Type</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in GLMasRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>

                                    <td>{{i.GLCode}}</td>
                                    <td>{{i.GLDesc}}</td>
                                    <td>{{i.MainAccTypeV}}</td>
                                    <td>{{i.CategoryV}}</td>
                                    <td>{{i.Status}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="CustomerEdit(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(GLMasRec|filter:GLCode).length==0" style="color: red; font-weight: bold">No Records Found</div>

                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtGLCode" ng-model="txtGLCode" class="form-control" placeholder="GL Code">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtGLDes" ng-model="txtGLDes" class="form-control" placeholder="GL Description">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectMainAccType" id="ddlMainAccType" ng-model="ddlMainAccType" options="{ allowClear: true }" ng-options="item.GeneralName for item in MainAccTypeAllvalues track by item.ID">

                                <option value="" disabled selected>MainAccType</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCategory" id="ddlCategory" ng-model="ddlCategory" options="{ allowClear: true }" ng-options="item.GeneralName for item in GLCategoryAllvalues track by item.ID">
                                <option value="" disabled selected>Status</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="GLMasterViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

