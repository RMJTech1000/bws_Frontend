                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillGLCodeValues();

        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
                var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
                var bytes = CryptoJS.AES.decrypt(window.location.search.split('?')[1].toString(), secret_key, {
                    iv: iv,
                    mode: CryptoJS.mode.CBC,
                    padding: CryptoJS.pad.Pkcs7
                });

                var params = bytes.toString(CryptoJS.enc.Utf8).split('&');
                //alert(params);
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;

                }
            }
            if (queryString["GlMapReg"] != null) {

                $scope.RegId = queryString["GlMapReg"].toString();
                $scope.BindGLMapping(queryString["GlMapReg"].toString());
                $scope.BindGLMappingLog(queryString["GlMapReg"].toString());
            }


        });

        $scope.BindGLMapping = function (GlMapReg) {

            var Datavalue = {};
            var id = GlMapReg;
            if (id == "" || id == null)
                Datavalue.ID = 0;
            else
                Datavalue.ID = GlMapReg;

            $http({
                method: 'POST',
                url: '/api/FinanceApi/GLMappingRecord/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {

                    if (Datavalue.ID != "") {
                        $scope.RegId = result.data[0].ID;
                        $scope.ddlChargeCode = { ID: result.data[0].ChargeCodeID };
                        $scope.ddlProductType = { ID: result.data[0].ProductTypeID };
                        $scope.ddlShipmentType = { ID: result.data[0].ShipmentTypeID };
                        $scope.ddlRevGL = { ID: result.data[0].PrincipalRevGL };
                        $scope.ddlExpGL = { ID: result.data[0].PrincipalExpGL };
                        // $scope.ddlAgencyRevGL = { ID: result.data[0].AgencyRevGL };
                        //$scope.ddlAgencyExpGL = { ID: result.data[0].AgencyExpGL };
                        document.getElementById("txtValidFrom").value = result.data[0].ValidFrom;


                    }
                    else {
                        $('#ddlChargeCode').val('');
                        $('#ddlProductType').val('');
                        $('#ddlShipmentType').val('');
                        $('#txtValidFrom').val('');

                    }

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
            $scope.back = function () {

                window.location = "/Finance/GLMappingView";
            }

        }
        // $scope.BindGLMapping();

        $scope.BindGLMappingLog = function (GlMapReg) {

            var Datavalue = {};
            var id = GlMapReg;
            if (id == "" || id == null)
                Datavalue.ID = 0;
            else
                Datavalue.ID = GlMapReg;

            $http({
                method: 'POST',
                url: '/api/FinanceApi/GLMappingLogRecord/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {

                    if (result.data.length > 0) {

                        $scope.GLMappingLog = result.data;

                    }

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
            $scope.back = function () {

                window.location = "/Finance/GLMasterView";
            }

        }

        $scope.RecordSave = function () {

            var validation = "";


            var ddlChargeCode = $('#ddlChargeCode').val();
            if (ddlChargeCode == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Charge Code</span></br>"
            }

            var ddlProductType = $('#ddlProductType').val();
            if (ddlProductType == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select ProductType</span></br>"
            }

            var ddlShipmentType = $('#ddlShipmentType').val();
            if (ddlShipmentType == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Shipment Type</span></br>"
            }
            var txtValidFrom = $('#txtValidFrom').val();
            if (txtValidFrom.length == 0) {
                validation += "<span style='color:red;'>*</span> <span>Please Enter Valid From Date</span></br>"
            }
            //var ddlRevGL = $('#ddlRevGL').val();
            //if (ddlRevGL == "?") {
            //    validation += "<span style='color:red;'>*</span> <span>Please Select Principal Revenue GL</span></br>"
            //}
            //var ddlExpGL = $('#ddlExpGL').val();
            //if (ddlExpGL == "?") {
            //    validation += "<span style='color:red;'>*</span> <span>Please Select Princpal Expense GL</span></br>"
            //}

            //var ddlAgencyRevGL = $('#ddlAgencyRevGL').val();
            //if (ddlAgencyRevGL == "?") {
            //    validation += "<span style='color:red;'>*</span> <span>Please Select Agency Revenue GL</span></br>"
            //}
            //var ddlAgencyExpGL = $('#ddlAgencyExpGL').val();
            //if (ddlAgencyExpGL == "?") {
            //    validation += "<span style='color:red;'>*</span> <span>Please Select Agency Expense GL</span></br>"
            //}


            if (validation != "") {
                ShowPopup(validation);
                return false;
            }
            $('#overlay').fadeIn().delay(100).fadeOut();

            var BussData = {}
            if ($scope.RegId != "")
                BussData.ID = $scope.RegId;
            else
                BussData.ID = 0;

            BussData.ChargeCodeID = $("#ddlChargeCode").val();

            BussData.ProductTypeID = $("#ddlProductType").val();
            BussData.ShipmentTypeID = $("#ddlShipmentType").val();
            BussData.PrincipalRevGL = $("#ddlRevGL").val();
            BussData.PrincipalExpGL = $("#ddlExpGL").val();
            BussData.AgencyRevGL = 0;
            BussData.AgencyExpGL = 0;
            BussData.ValidFrom = $("#txtValidFrom").val();
            BussData.UserID = localStorage.getItem("UserID");
            BussData.AgencyID = localStorage.getItem("AgencyID");

            $http({
                method: 'POST',
                url: '/api/FinanceApi/GLMapping',
                data: JSON.stringify(BussData),

            }).then(function (result) {
                $timeout(function () {

                    if (result.data.length > 0) {
                        ShowPopup("GL Mapping Saved Successfully");
                    }
                    else {

                        ShowPopup("GL Mapping Updated");
                    }
                    var url = "/Finance/GLMappingView";
                    window.location.href = url;
                    setTimeOut(function () {
                        window.location = "/";
                    }, 3000);

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }


                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    // $(".modal").hide();
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                // This is set in the event of an error.
                console.log(result);
                ShowPopup('There has been an error: ' + result);
            });

        }

        $("#btnLogReport").click(function () {
            $('#demoLogReport').modal('show');
        });

    });
    function ShowPopup(message) {
        swal(message);
    };

</script>
