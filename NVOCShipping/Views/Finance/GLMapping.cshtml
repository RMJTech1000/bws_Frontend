        //ChargeCode
        $scope.ChargeCodeValues = null;
        $scope.fillChargeCodeValues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ChargeCodeValue/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.ChargeCodeValues = result.data;

