<script type="text/javascript">
    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $('#overlay').fadeIn().delay(300).fadeOut();


        $scope.PaymentViewRecords = null;
        $scope.PaymentViewRecords = function () {
            var BussData = {}
            BussData.UTR_No = $scope.txtUTRNO;
            BussData.CustomerName = $scope.txtParty;
            BussData.InvoiceNo = $scope.txtInvoiceNo;
            BussData.DateOfTransfer = $('#txtTransferDate').val();

            $http({
                method: 'POST',
                url: "/api/KYCApi/OnlinePaymentView",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.PaymentView = result.data;
                $scope.totalItems = $scope.PaymentView.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.PaymentView.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.PaymentViewRecords();

        $scope.ClearRecords = function () {

            $scope.txtUTRNO = "";
            $scope.txtParty = "";
            $scope.txtInvoiceNo = ""
            $("#txtTransferDate").val('').trigger("change");
            $scope.PaymentViewRecords();
        }
        $scope.Edit = function (urlv) {
            var url = "/Party/OnlinePayment?PaymentID=" + encodeURIComponent(urlv);
            window.location.href = url;
        }
    }
    );
    function ShowPopup(message) {
        swal(message);
    };
</script>
