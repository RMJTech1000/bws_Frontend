@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>


<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {


        $(document).ready(function () {
            $('.my-selectCtry').select2({
                placeholder: "Country", allowClear: true, width: '100%'
            });
            $('.my-selectCity').select2({
                placeholder: "City", allowClear: true, width: '100%'
            });
            $('.my-selectOrg').select2({
                placeholder: "Organization", allowClear: true, width: '100%'
            });
            $('.my-selectOwn').select2({
                placeholder: "OwnOffice", allowClear: true, width: '100%'
            });
        });


        $scope.AddNew = function () {
            //localStorage.setItem("AgencyID","");
            window.location = "/Party/Agency"
        }

        $scope.ownOff = [
            { 'name': 'Yes', 'OwnOffice': 1 },
            { 'name': 'No', 'OwnOffice': 0 }
        ];
        //$scope.orgType = [
        //    { 'name': 'Principle', 'OrganizationType': 1 },
        //    { 'name': 'Agency ', 'OrganizationType': 2 }
        //];

        $scope.SelectedFiles = null;

        $scope.Country = null;
        $scope.fillCountry = function () {
            $http({
                method: 'POST',
                url: '/api/Home/BindCountries/',
                data: {}
            }).then(function (result)
            {

                $timeout(function ()
                {
                    $scope.Country = result.data;

                });
            }, function (result)
            {

                    if (result.status > 0)
                    {
                        alert(1);
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillCountry();


        $("#ddlCountry").change(function () {

            $scope.City = null;
            var Datavalue = {};
            Datavalue.CountryID = $('#ddlCountry').val();
            //Datavalue.CountryID = $scope.CountryID.CountryID;
            //alert(Datavalue.CountryID);

            $http({
                method: 'POST',
                url: '/api/Home/BindCities/',
                data: JSON.stringify(Datavalue),
                //data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.City = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    alert(1);
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
            /// scope.bindDropDownCity();
        });

        $scope.OrgType = null;
        $scope.organizationTypes = function () {
            $http({

                method: 'POST',
                url: '/api/PartyApi/OrganizationType/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.OrgType = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {

                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");

                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });

        };
        $scope.organizationTypes();


        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.CustomerRecords = null;
        $scope.CustomerRecords = function () {
            var BussData = {}
            BussData.AgencyCode = $scope.txtAgencyCode;
            BussData.AgencyName = $scope.txtAgencyName;
            BussData.CountryID = $("#ddlCountry").val();
            BussData.CityID = $("#ddlCity").val();
            BussData.OwnOffice = $("#ddlOwnOffice").val();
            BussData.OrganizationType = $("#ddlOrganizationType").val();

            $http({
                method: 'POST',
                url: "/api/PartyApi/Agencyview",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.CustomerRec = result.data;

                $scope.totalItems = $scope.CustomerRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.CustomerRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.AgencyViewRecords = function () {

            $scope.CustomerRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtAgencyCode = "";
            $scope.txtAgencyName = "";
            $("#ddlCountry").val(null).trigger("change");
            $("#ddlCity").val(null).trigger("change");
            $("#ddlOwnOffice").val(null).trigger("change");
            $("#ddlOrganizationType").val(null).trigger("change");

            $scope.CustomerRecords();
        }
        $scope.CustomerRecords();


        $scope.AgencyUpdate = function (urlv)
        {
            //var url = "/Party/Agency?AgRegID=" + encodeURIComponent(url);
            //window.location.href = url;

            var ParameterValue = "AgRegID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/Party/Agency?" + ciphertext;

            window.location.href = url;
        }
        $scope.btnPrint = function () {
          
             var AgencyCode = $('#txtAgencyCode').val();
             var AgencyName = $('#txtAgencyName').val();
             var CountryID = $('#ddlCountry').val();
             var CityID = $('#ddlCity').val();
             var OwnOffice = $('#ddlOwnOffice').val();
             var OrganizationType = $('#ddlOrganizationType').val();
            var User = localStorage.getItem("UserName");

             window.location.href = '@Url.Action("CreateAgencyExcel", "PartyExcel")?CountryID=' + CountryID + "&CityID=" + CityID
                 + "&AgencyCode=" + AgencyCode + "&AgencyName=" + AgencyName + "&OwnOffice=" + OwnOffice + "&OrganizationType=" + OrganizationType + "&User=" + User;
        }
    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="button" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Agency Master

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="col-md-12 padr0" style="text-align:right;">
                        <a class="button" ng-click="btnPrint();"><span>Download <i class="fa fa-file-excel-o"></i> </span></a>
                        @*<span style="font-size:13px; margin-right:0px;">Download</span><a  ng-click="btnPrint();" style="color:#18aa08;font-size:16px; margin-right:20px;"> <i class="fa fa-file-excel-o"></i></a>*@

                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Agency Code</th>
                                    <th>Agency Name</th>
                                    <th>Address</th>
                                    <th>City </th>
                                    <th>Country</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in CustomerRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.AgencyCode}}</td>
                                    <td>{{i.AgencyName}}</td>
                                    <td>{{i.Address}}</td>
                                    <td>{{i.CityName}}</td>
                                    <td>{{i.CountryName}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="AgencyUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(CustomerRec|filter:AgencyCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtAgencyName" ng-model="txtAgencyName" class="form-control" placeholder="Agency Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtAgencyCode" ng-model="txtAgencyCode" class="form-control" placeholder="Agency Code">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCtry" ng-model="CountryID" id="ddlCountry" placeholder="Country" ng-options="item.CountryName for item in Country track by item.CountryID" required>
                                <option value="" disabled selected>Country</option>
                                @*<option hidden value="" disabled selected> Select Country </option>*@
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCity" id="ddlCity" ng-model="CityID" placeholder="City" ng-options="item.CityName for item in City track by item.CityID">
                                <option value="" disabled selected>City</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectOrg" ng-model="OrganizationType" id="ddlOrganizationType" placeholder="Organization Type" ng-options="item.GeneralName for item in OrgType track by item.OrganizationType">
                                <option value="" disabled selected>Organization Type</option>
                            </select>
                    
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectOwn" ng-model="OwnOffice" id="ddlOwnOffice"  placeholder="Own Office" ng-options="item.name for item in ownOff track by item.OwnOffice">
                                <option  value="" disabled selected> Own Office  </option>

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="AgencyViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
