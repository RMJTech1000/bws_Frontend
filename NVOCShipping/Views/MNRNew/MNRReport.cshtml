<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 backbtn" style="text-align:right;">
            <a href="#" type="submit" class="btn btn-fill btnback btn-success btn-round btntop">
                <i class="material-icons">reply</i> Back
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        MNR Report
                    </div>
                </div>


                <div class="card-body">

                    <div class="row inventry">
                        <div class="col-md-12 padlr0" style="padding-top:7px; padding-bottom:7px;">

                            <div class="col-md-12">
                                <div class="row">


                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">From Date</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="date" id="txtFromDate" ng-model="txtFromDate" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">To Date</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="date" id="txtToDate" ng-model="txtToDate" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>



                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Status</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <select class="form-control my-select" ng-model="ddlMNRStatus" id="ddlMNRStatus" ng-options="item.GeneralName for item in MNRStatusList track by item.ID" required>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Location</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <select class="form-control my-select" ng-model="ddlLoc" id="ddlLoc" ng-options="item.PortName for item in PortList track by item.ID" required>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Depot</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <select class="form-control my-select" ng-model="ddlDepot" id="ddlDepot" ng-options="item.PickUpDepot for item in DepotValue track by item.ID">
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                  
                                    <div class="col-md-12" style="text-align: right;
        margin-top: 20px; padding-bottom: 10px;">

                                        <button type="submit" class="btn btn-fill btn-success" ng-click="btnPrint();">
                                            <i class="material-icons">file_download</i>
                                            Generate Report
                                        </button>
                                        @*<button type="submit"  class="btn btn-fill btn-info">
                <i class="material-icons">file_download</i>
                Schedule Email
            </button>*@

                                        <input type="hidden" id="RecId" ng-model="RecId" />


                                    </div>
                                </div>
                            </div>


                        </div>



                    </div>
                </div>


            </div>



        </div>




    </div>
</div>


