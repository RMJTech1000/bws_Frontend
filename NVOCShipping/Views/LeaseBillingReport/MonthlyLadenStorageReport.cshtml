<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });
        $scope.MonthAllvalues = [
            { 'Name': 'JANUARY', 'ID': 1 },
            { 'Name': 'FEBRUARY', 'ID': 2 },
            { 'Name': 'MARCH', 'ID': 3 },
            { 'Name': 'APRIL', 'ID': 4 },
            { 'Name': 'MAY', 'ID': 5 },
            { 'Name': 'JUNE', 'ID': 6 },
            { 'Name': 'JULY', 'ID': 7 },
            { 'Name': 'AUGUST', 'ID': 8 },
            { 'Name': 'SEPTEMPER', 'ID': 9 },
            { 'Name': 'OCTOBER', 'ID': 10 },
            { 'Name': 'NOVEMBER', 'ID': 11 },
            { 'Name': 'DECEMBER', 'ID': 12 },
        ];

        $scope.YearALLList = [
            { 'Name': '2022', 'ID': 1 },
            { 'Name': '2023', 'ID': 2 },
            //{ 'Name': '2024', 'ID': 3 },
            //{ 'Name': '2025', 'ID': 4 },
            //{ 'Name': '2026', 'ID': 5 },
            //{ 'Name': '2027', 'ID': 6 },
            //{ 'Name': '2028', 'ID': 7 },
            //{ 'Name': '2029', 'ID': 8 },
            //{ 'Name': '2030', 'ID': 9 },
            //{ 'Name': '2031', 'ID': 10 },
            //{ 'Name': '2032', 'ID': 11 },
            //{ 'Name': '2033', 'ID': 12 },
        ];


        $scope.CountryList = null;
        $scope.FillCountryMasterList = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/CountryMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.CountryList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FillCountryMasterList();


        $("#ddlCountry").change(function () {
            $scope.AgencyList = null;
            var Datavalue = {};
            Datavalue.ID = $("#ddlCountry").val();
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/GeoLocByCountry/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    $scope.GeoLocList = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        });

        $("#ddlGeoLoc").change(function () {
            $scope.AgencyList = null;
            var Datavalue = {};
            Datavalue.GeoLocID = $("#ddlGeoLoc").val();
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/PortValuesByGeoLoc/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    $scope.PortLocList = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        });

        

        $scope.ClearRecords = function () {

            $("#ddlStatuscode").val(null).trigger("change");
            $("#ddlGeoLoc").val(null).trigger("change");
            $("#ddlCountry").val(null).trigger("change");
            $("#ddlLeaseTerm").val(null).trigger("change");
            $("#ddlGrade").val(null).trigger("change");
            $("#ddlCntrType").val(null).trigger("change");


        }

        $scope.btnPrint = function () {


            var validation = "";

   
            var ddlMonth = $('#ddlMonth').val();
            if (ddlMonth == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Month</span></br>"
            }
            var ddlYear = $('#ddlYear').val();
            if (ddlYear == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Year</span></br>"
            }
            var ddlCountry = $('#ddlCountry').val();
            if (ddlCountry == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Country</span></br>"
            }
            var ddlGeoLoc = $('#ddlGeoLoc').val();
            if (ddlGeoLoc == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Geo-Location</span></br>"
            }
            if (validation != "") {
                ShowPopup(validation);
                return false;
            }

          
            var RptMth = $('#ddlMonth').val();
            var RptMthTxt = $("#ddlMonth option:selected").text();
            var RptYear = $('#ddlYear').val();
            var RptYearTxt = $("#ddlYear option:selected").text();
            var User = localStorage.getItem("UserName");
            var Ctry = $("#ddlCountry option:selected").text();
            var CtryID = $('#ddlCountry').val();
            var GeoLoc = $("#ddlGeoLoc option:selected").text();
            var GeoLocID = $('#ddlGeoLoc').val();
            var Port = $("#ddlPort option:selected").text();
            var PortID = $('#ddlPort').val();


            window.location.href = '@Url.Action("MonthlyLadenStorageReportValues", "LeaseBillingReport")?RptMth=' + RptMth +
                "&RptMthTxt=" + RptMthTxt + "&RptYear=" + RptYear + "&RptYearTxt=" + RptYearTxt + "&Ctry=" + Ctry + "&CtryID=" + CtryID + "&GeoLoc=" + GeoLoc + "&GeoLocID=" + GeoLocID + "&Port=" + Port + "&PortID=" + PortID + "&User=" + User;
        }

            });
    function ShowPopup(message) {
        swal(message);
    };
</script>
