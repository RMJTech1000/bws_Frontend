<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });
        $scope.MonthAllvalues = [
            { 'Name': 'JANUARY', 'ID': 1 },
            { 'Name': 'FEBRUARY', 'ID': 2 },
            { 'Name': 'MARCH', 'ID': 3 },
            { 'Name': 'APRIL', 'ID': 4 },
            { 'Name': 'MAY', 'ID': 5 },
            { 'Name': 'JUNE', 'ID': 6 },
            { 'Name': 'JULY', 'ID': 7 },
            { 'Name': 'AUGUST', 'ID': 8 },
            { 'Name': 'SEPTEMPER', 'ID': 9 },
            { 'Name': 'OCTOBER', 'ID': 10 },
            { 'Name': 'NOVEMBER', 'ID': 11 },
            { 'Name': 'DECEMBER', 'ID': 12 },
        ];

        $scope.YearALLList = [
            { 'Name': '2022', 'ID': 1 },
            { 'Name': '2023', 'ID': 2 },
            //{ 'Name': '2024', 'ID': 3 },
            //{ 'Name': '2025', 'ID': 4 },
            //{ 'Name': '2026', 'ID': 5 },
            //{ 'Name': '2027', 'ID': 6 },
            //{ 'Name': '2028', 'ID': 7 },
            //{ 'Name': '2029', 'ID': 8 },
            //{ 'Name': '2030', 'ID': 9 },
            //{ 'Name': '2031', 'ID': 10 },
            //{ 'Name': '2032', 'ID': 11 },
            //{ 'Name': '2033', 'ID': 12 },
        ];

        $scope.LeaseTermList = null;
        $scope.FilLeaseTerm = function () {
            $http({
                method: 'POST',
                url: '/api/ContainerApi/LeaseTerm/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.LeaseTermList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FilLeaseTerm();

        $scope.LeasingPartnerList = null;
        $scope.FilLeasingPartner = function () {
            $http({
                method: 'POST',
                url: '/api/ContainerApi/LeasingPartner/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.LeasingPartnerList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FilLeasingPartner();


    

        $scope.CntrTypeList = null;
        $scope.FillCntrTypeList = function () {
            $http({
                method: 'POST',
                url: "/api/ContainerApi/CntrTypeSize",
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.CntrTypeList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FillCntrTypeList();

   

        $scope.LeaseTermList = null;
        $scope.FilLeaseTerm = function () {
            $http({
                method: 'POST',
                url: '/api/ContainerApi/LeaseTerm/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.LeaseTermList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FilLeaseTerm();

    
    
        $scope.ClearRecords = function () {

            $("#ddlStatuscode").val(null).trigger("change");
            $("#ddlGeoLoc").val(null).trigger("change");
            $("#ddlCountry").val(null).trigger("change");
            $("#ddlLeaseTerm").val(null).trigger("change");
            $("#ddlGrade").val(null).trigger("change");
            $("#ddlCntrType").val(null).trigger("change");

           
        }

        $scope.btnPrint = function () {


            var validation = "";

            //var ddlLP = $('#ddlLP').val();
            //if (ddlLP == "?") {
            //    validation += "<span style='color:red;'>*</span> <span>Please Select Leasing Partner</span></br>"
            //}
            var txtFromDate = $('#txtFromDate').val();
            if (txtFromDate.length == 0) {
                validation += "<span style='color:red;'>*</span> <span>Please Select From Date</span></br>"
            }
            var txtToDate = $('#txtToDate').val();
            if (txtToDate.length == 0) {
                validation += "<span style='color:red;'>*</span> <span>Please Select To Date</span></br>"
            }
            if (validation != "") {
                ShowPopup(validation);
                return false;
            }

            var LP = $("#ddlLP option:selected").text();
            var LPID = $('#ddlLP').val();
            var CtRefNo = $('#txtContractRef').val();
            var FromDate = $('#txtFromDate').val();
           // var txtToDate = $("#ddlMonth option:selected").text();
           var ToDate = $('#txtToDate').val();
            var RptYearTxt = $("#ddlYear option:selected").text();
            var User = localStorage.getItem("UserName");
            var CntrType = $("#ddlCntrType option:selected").text();
            var CntrTypeID = $('#ddlCntrType').val();
            var LeaseType = $("#ddlLT option:selected").text();
            var LeaseTypeID = $('#ddlLT').val();


            window.location.href = '@Url.Action("LeaseBillingReportValues", "LeaseBillingReport")?LP=' + LP + " &LPID=" + LPID + "&CtRefNo=" + CtRefNo + "&FromDate=" + FromDate +
                "&ToDate=" + ToDate + "&CntrType=" + CntrType + "&CntrTypeID=" + CntrTypeID + "&LeaseType=" + LeaseType + "&LeaseTypeID=" + LeaseTypeID + "&User=" + User;
        }

            });
    function ShowPopup(message) {
        swal(message);
    };
</script>
