<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 backbtn" style="text-align:right;">
            <a href="/AllReports/InventoryReportDashboard" type="submit" class="btn btn-fill btnback btn-success btn-round btntop">
                <i class="material-icons">reply</i> Back
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">



                <div class="card-body">
                    <div class="row" style="border: 1px solid #ccc;">
                        <div class="col-md-2" style="text-align:center;">
                            <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                        </div>
                        <div class="col-md-8" style="text-align:center;">
                            <h4 style="font-size:24px; font-weight:bold; color:#000!important; margin-top:39px;">Lease Billing Report</h4>
                        </div>
                        <div class="col-md-2" style="text-align:center;">
                            <img src="~/assets/img/misrepimg.jpg" style="width:100px;" />
                        </div>
                    </div>

                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">

                        <div class="col-md-12">
                            <div class="row">



                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">Leasing Partner</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" id="ddlLP" ng-model="ddlLP" options="{ allowClear: true }" ng-options="item.LeasingPartner for item in LeasingPartnerList track by item.LeasingPartnerID">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">Contract-Ref#</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="text" id="txtContractRef" ng-model="txtContractRef" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">From Date</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="date" id="txtFromDate" ng-model="txtFromDate" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label class="lable-fond">To Date</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="date" id="txtToDate" ng-model="txtToDate" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl3"><label class="lable-fond">Container Type</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" ng-model="ddlCntrType" id="ddlCntrType" ng-options="item.Size for item in CntrTypeList track by item.TypeID" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl3"><label class="lable-fond">Lease Type</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" ng-model="ddlLT" id="ddlLT" ng-options="item.LeaseTerm for item in LeaseTermList track by item.LeaseTermID" required></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                </div>
                                <div class="col-md-4" style="text-align:right;">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill btn-info" ng-model="btnPrint" ng-click="btnPrint();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    <i class="material-icons"></i> Generate Report
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-default" ng-model="ClearRecords" ng-click="ClearRecords();" style="padding: 6px 18px; margin-top: -1px; width: 46%;">
                                                    <i class="material-icons">close</i> Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                          
                        </div>


                    </div>


                </div>


            </div>



        </div>




    </div>
</div>


