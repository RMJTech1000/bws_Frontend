@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<style>
    .form-control {
        width: 180px;
        height: 24px;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });

    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
<style>
    legend {
        background-color: #21277a;
        color: #fff;
        font-size: 14px;
        padding: 4px 5px;
        font-weight: bold;
    }

    .inventry .form-control.sundry {
        width: 172px !important;
    }

    .table > thead > tr > th, .table > tbody > tr > th, .table > tfoot > tr > th {
        background-color: #21277a !important;
        color: #fff;
    }

    .nav-tabs {
        width: 300px !important;
        margin: 0 auto !important;
    }
    input[type=radio]
    {
        margin-left:8px;
    }
    label.rad{
        padding-left:5px;
    }
</style>
<link href="~/assets/css/common.css" rel="stylesheet" />
<link href="~/assets/css/InvoiceStyle.css" rel="stylesheet" />
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 backbtn" style="text-align:right;">
            <a href="/Account/ReceiptView" type="submit" class="btn btn-fill btnback btn-success btn-round btntop">
                <i class="material-icons">reply</i> Back
            </a>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                       GST Report
                    </div>
                </div>


                <div class="card-body">

                    <div class="row inventry">
                       

                        <div class="col-md-12 padlr0" style="padding-top:7px; padding-bottom:7px;">
                            <fieldset>
                                <legend>Selection Criteria</legend>
                            </fieldset>

                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-md-4 lbl2"><label class="lable-fond">GST State</label></div>
                                                        <div class="col-md-1">:</div>
                                                        <div class="col-md-5">
                                                            <select id="ddlGSTSTate" class="form-control my-select"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-md-4 lbl2"><label class="lable-fond">Report Type</label></div>
                                                        <div class="col-md-1">:</div>
                                                        <div class="col-md-5">
                                                            <select id="ddlReportType" class="form-control my-select"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <div class="row">
                                                        <div class="col-md-4 lbl2"><label class="lable-fond">Report Month/Year</label></div>
                                                        <div class="col-md-1">:</div>
                                                        <div class="col-md-5">
                                                            <div class="row">
                                                                <div class="col-md-6"> <select id="ddlReportMonth" class="form-control" style="width:70px!important;"></select></div>
                                                                <div class="col-md-6"> <select id="ddlReportYear" class="form-control" style="width:70px!important;"></select></div>
                                                            </div>
                                                           
                                                           
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row" style="margin-right:0">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Location</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                <select id="ddlLocation" class="form-control my-select"></select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 padlr0" style="padding-top:7px; padding-bottom:7px;">
                            <fieldset>
                                <legend>Addl.Selection Criteria</legend>
                            </fieldset>

                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-4">

                                    </div>
                                    <div class="col-md-4">

                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row" style="margin-right:0">
                                                <div class="col-md-2 lbl"><label class="lable-fond">Select All</label></div>

                                                <div class="col-md-6">
                                                    <input type="checkbox" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="row">


                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Foreign Currency</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="checkbox" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Credit Days</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="checkbox" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Credit Amount</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="checkbox" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Sales Pic</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="checkbox" />
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-4 lbl2"><label class="lable-fond">Job No</label></div>
                                                <div class="col-md-1">:</div>
                                                <div class="col-md-5">
                                                    <input type="checkbox" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>



                            </div>
                        </div>
                    </div>



                </div>



                <div class="row">
                    <div class="col-md-12" style="text-align:right; margin-top:20px;">

                        <button type="submit" ng-click="ReceiptPrint();" class="btn btn-fill btn-success">
                            <i class="material-icons">file_download</i>
                            Get Report
                        </button>

                        <input type="hidden" id="RecId" ng-model="RecId" />


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // initialise Datetimepicker and Sliders
        $('.datepicker').datetimepicker({
            format: 'DD/MM/YYYY',

        });
    });
</script>