<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });

         $scope.getPaging = function (tab) {
            var myp = $scope.RegId;
            if (tab == 1) {
                if (myp != "0") {
                    var url = "/FinanceReports/BankOutStanding";
                    window.location.href = url;
                }
                else {
                    ShowPopup("Please Create Bank Outstanding")
                    return false;
                }
            }
            else if (tab == 2) {
                if (myp != "0") {
                    var url = "/FinanceReports/BankReconcil";
                    window.location.href = url;
                }
                else {
                    ShowPopup("Please Create Bank Outstanding")
                    return false;
                }
            }
           
            return false;
        }

    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
