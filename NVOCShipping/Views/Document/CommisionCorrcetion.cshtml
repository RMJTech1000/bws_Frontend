<div ng-app="MyApp" ng-controller="MyController">

    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>

   
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Commission Corrcetion

                    </div>

                </div>

                <div class="card-body">

                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>BookingNo</th>
                                    <th>RRNumber</th>
                                    <th>Date</th>
                                    <th>Booking Party</th>
                                    <th>ShipmentType</th>
                                    <th>Status</th>

                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in Bookingview | filter : paginate | orderBy:'-Statusv'">
                                    <td>
                                        <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-model="i.IsCheck" />
                                    </td>
                                    <td>{{i.BookingNo}}</td>
                                    <td>{{i.RRNo}}</td>
                                    <td style="white-space:nowrap;">{{i.BkgDatev}}</td>
                                    <td>{{i.BkgParty}}</td>
                                    <td>{{i.ShipmentType}}</td>
                                    <td>{{i.Status}}</td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">


                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtBookingNo" ng-model="txtBookingNo" class="form-control" placeholder="Booking No">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0" style="text-align:right;">
                            <button type="submit" ng-click="updateCommision();" class="btn btn-fill btn-rose searchbtn">Updae Commision</button>
                            <button type="submit" ng-click="fillBookingview();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


