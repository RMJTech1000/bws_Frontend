                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillCntrTypeValues();


        $scope.ChargeCodeAllvalues = null;
        $scope.fillChargecodeValues = function () {
            $scope.states = [];
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ChargeCode/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.ChargeCodeAllvalues = result.data;
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillChargecodeValues();

        $scope.CurrencyValue = null;
        $scope.fillCurrencyValues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/CurrencyValues/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.CurrencyValue = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillCurrencyValues();


        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            if (queryString["BkgPassID"] != null) {

                $scope.BkgId = queryString["BkgPassID"].toString();
                $scope.BLId = queryString["BOLRegID"].toString();
                $scope.FillExistingBkgNumber(queryString["BkgPassID"].toString());
                $scope.FillExistingLocalCostTraiffCharges();
                
            }
        });




        $scope.FillExistingLocalCostTraiffCharges = function () {
            var Datavalue = {};

            Datavalue.BkgID = $scope.BkgId;
            Datavalue.BLID = $scope.BLId;
            Datavalue.PaymentModeID = 18;
            $http({
                method: 'POST',
                url: '/api/ExpTraffView/ExpTariffCost',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {

                    if (result.data.length > 0) {

                        if (result.data[0].ChargeCodeID != "") {
                            $scope.DynamicGridLocalCost.splice(0, 1);
                        }

                        angular.forEach(result.data, function (value, key) {

                            $scope.DynamicGridLocalCost.push({
                                'ID': result.data[key].ID,
                                'TariffTypeID': { ID: result.data[key].TariffTypeID },
                                'CntrTypeID': { ID: result.data[key].CntrTypeID },
                                'ChargeCodeID': { ID: result.data[key].ChargeCodeID },
                                'CurrencyID': { ID: result.data[key].CurrencyID },
                                'ReqRate': result.data[key].ReqRate,
                                'ManifRate': result.data[key].ManifRate,
                                'CustomerRate': result.data[key].CustomerRate,
                            });

                        });
                        console.log($scope.DynamicGridLocalCost);
                    }
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
        }



        $scope.getPaging = function (tab) {

            var myp = $scope.BkgId;
            var myp1 = $scope.BLId;
          
            if (tab == 1) {
                if (myp != "0") {
                    var url = "/Document/Exptariffview?BkgPassID=" + encodeURIComponent(myp) + "&BOLRegID=" + encodeURIComponent(myp1);
                    window.location.href = url;
                }
                else {
                    ShowPopup("Please Create Shipment Details")
                    return false;
                }
            }
            else if (tab == 2) {
                if (myp != "0") {
                    var url = "/Document/ExptariffCast?BkgPassID=" + encodeURIComponent(myp) + "&BOLRegID=" + encodeURIComponent(myp1);
                    window.location.href = url;
                }
                else {
                    ShowPopup("Please Create Shipment Details")
                    return false;
                }
            }

            return false;
        }

        $scope.BackToBOLPage = function () {

            var url = "/Document/BOL?BOLRegID=" + encodeURIComponent($scope.BLId) + "&BkgPassID=" + encodeURIComponent($scope.BkgId);
            window.location.href = url;
        }

      
       

        $scope.RecordSave = function () {
            var validation = "";

            var ddlVendor = $('#ddlVendor').val();
            if (ddlVendor == "?") {
                validation += "<span style='color:red;'>*</span> <span>Please Select Vendor Name</span></br>"
            }
            if (validation != "") {
                ShowPopup(validation);
                return false;
            }

            $("#overlay").show();
            var BussData = {}
           
            var ItemsLocalCost = [];

            BussData.BkgID = $scope.BkgId;
            BussData.BLID = $scope.BLId;
            BussData.RRID = $scope.RRID;
           
            angular.forEach($scope.DynamicGridLocalCost, function (value, key) {
                ItemsLocalCost.push('Insert:' + $scope.DynamicGridLocalCost[key].ID,
                    $scope.DynamicGridLocalCost[key].TariffTypeID.ID,
                    $scope.DynamicGridLocalCost[key].CntrTypeID.ID,
                    $scope.DynamicGridLocalCost[key].ChargeCodeID.ID,
                    $scope.DynamicGridLocalCost[key].CurrencyID.ID,
                    $scope.DynamicGridLocalCost[key].ReqRate,
                    $scope.DynamicGridLocalCost[key].ManifRate,
                    $scope.DynamicGridLocalCost[key].CustomerRate,


                );
            });

            BussData.ItemsLocalCostv = ItemsLocalCost.toString();


            $http({
                method: 'POST',
                url: '/api/ExpTraffView/VendorCostInsert',
                data: JSON.stringify(BussData),

            }).then(function (result) {
                $timeout(function () {
                    if (result.data.length > 0) {
                        $("#overlay").hide();
                        ShowPopup("Vendor Cost as updated  Successfully");
                    }
                    else {
                        $("#overlay").hide();
                        ShowPopup("Error Not saved");
                    }
                    
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {

                ShowPopup('There has been an error: ' + result);
            });


        }


        $scope.FillExistingBkgNumber = function (BkgID) {
            var Datavalue = {};
            Datavalue.ID = BkgID;
            $http({
                method: 'POST',
                url: '/api/DocumentApi/BookingExistingViewRecord',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    if (result.data.length > 0) {

                        $scope.BindBkgNumber = result.data[0].BookingNo;
                        $scope.RRID = result.data[0].RRID;
                    }
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
        }


        $scope.gridRowAdd = function (gRow) {

            $scope.DynamicGridLocalCost.push({
                'ID': "0",
                'TariffTypeID': "",
                'CntrTypeID': "",
                'ChargeCodeID': "",
                'CurrencyID': "",
                'ReqRate': "",
                'ManifRate': "",
                'CustomerRate': "",
            });
        }

        //New Line

       


    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
