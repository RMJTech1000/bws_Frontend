<script type="text/javascript">


    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });
        });

        $scope.DynamicGridLocalCost = [{ ID: "", TariffTypeID:"", CntrTypeID: "", ChargeCodeID: "", CurrencyID: "", ReqRate: "", ManifRate: "", CustomerRate: "" }];

        $scope.CostTypesvalues = null;
        $scope.fillCostTypeValues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/CostTypeValues/',
                data: {}
            }).then(function (result) {
