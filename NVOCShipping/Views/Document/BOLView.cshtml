@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('.my-selectPOL').select2({
            placeholder: "POL", allowClear: true, width: '100%'
        });
        $('.my-selectPOD').select2({
            placeholder: "POD", allowClear: true, width: '100%'
        });
        $('.my-selectBP').select2({
            placeholder: "Booking Party", allowClear: true, width: '100%'
        });

        $('.my-selectVoy').select2({
            placeholder: "Vessel/Voyage", allowClear: true, width: '100%'
        });
        $('#overlay').fadeIn().delay(300).fadeOut();

        if (localStorage.getItem("UserID") == "1") {
               document.getElementById("BtnCrtNew").style.display = "block";
              }
        else {
             document.getElementById("BtnCrtNew").style.display = "none";
        }


        $scope.PortAllvalues = null;
        $scope.fillPortsValues = function () {
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/PortValues/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.PortAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillPortsValues();

        $scope.BookingVesVoyvalues = null;
        $scope.fillBookingVesVoyvalues = function () {

            var BussData = {};
            BussData.AgentID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/DocumentApi/BookingVesselVoy/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.BookingVesVoyvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillBookingVesVoyvalues();

        $scope.BookingPartyAllvalues = null;
        $scope.fillBookingPartyValues = function () {

            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/CustomerMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.BookingPartyAllvalues = result.data;
                    $("#overlay").hide();
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillBookingPartyValues();

        $scope.BOLview = null;
        $scope.fillBOLview = function () {
           
            var BussData = {};
            BussData.POL = $('#ddlPOL').val();
            BussData.POD = $('#ddlPOD').val();
            BussData.BookingNo = $scope.txtBookingNo;
            BussData.RRNo = $scope.txtRRNumber;
            BussData.BkgParty = $("#ddlBookingParty").val();
            BussData.AgentId = localStorage.getItem("AgencyID");
            BussData.VesVoyID = $('#ddlVesVoy').val();
            $http({
                method: 'POST',
                url: '/api/DocumentApi/BOLViewRecord/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.BOLview = result.data;
                    $scope.totalItems = $scope.BOLview.length;
                    $scope.currentPage = 1;
                    $scope.numPerPage = 8;
                    $scope.paginate = function (value) {
                        var begin, end, index;
                        begin = ($scope.currentPage - 1) * $scope.numPerPage;
                        end = begin + $scope.numPerPage;
                        index = $scope.BOLview.indexOf(value);
                        return (begin <= index && index < end);
                    };


                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillBOLview();

        $scope.fillBOLCount = function () {
            var BussData = {};
            BussData.AgentId = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/DocumentApi/BOLCountRecord/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.Draft = result.data[0].Draft;
                    $scope.Cancelled = result.data[0].Cancelled;
                    $scope.Confirmed = result.data[0].Confirm;
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        }
        $scope.fillBOLCount();

        $scope.BOLview = null;
        $scope.fillBOLBtnviewdtls = function (Status,BkgStatus) {
            var BussData = {};
            BussData.status = Status;
            BussData.BkgStatus = BkgStatus;
            BussData.AgentId = localStorage.getItem("AgencyID");

            $http({
                method: 'POST',
                url: '/api/DocumentApi/BOLBtnViewDtlsRecord/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $timeout(function () {
                    $scope.BOLview = result.data;
                    $scope.totalItems = $scope.BOLview.length;
                    $scope.currentPage = 1;
                    $scope.numPerPage = 8;
                    $scope.paginate = function (value) {
                        var begin, end, index;
                        begin = ($scope.currentPage - 1) * $scope.numPerPage;
                        end = begin + $scope.numPerPage;
                        index = $scope.BOLview.indexOf(value);
                        return (begin <= index && index < end);
                    };


                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };



        $scope.LoadingBOLPage = function (BLId, BKgID,BLStatus) {

            var url = "/Document/BOL?BOLRegID=" + encodeURIComponent(BLId) + "&BkgPassID=" + encodeURIComponent(BKgID);
            window.location.href = url;

            //localStorage.setItem("BLStatus", BLStatus);
        }

        $scope.DraftView = function () {
            var status = "DRAFT";
            var BkgStatus =2;
            $scope.fillBOLBtnviewdtls(status, BkgStatus);
        }
        $scope.CancelledView = function () {
            var status = "CANCELLED";
            var BkgStatus = 3;
            $scope.fillBOLBtnviewdtls(status, BkgStatus);
        }
        $scope.ConfirmedView = function () {
            var status = "CONFIRMED";
            var BkgStatus = 2;
            $scope.fillBOLBtnviewdtls(status, BkgStatus);
        }


        $scope.ClearRecords = function () {
            $("#ddlVesVoy").val(null).trigger("change");
            $("#ddlPOL").val(null).trigger("change");
            $("#ddlPOD").val(null).trigger("change");
            $scope.txtBookingNo = "";
            $scope.txtRRNumber = "";
            $("#ddlBookingParty").val(null).trigger("change");
            $scope.fillBOLview();
        }

        $scope.btnExcel = function () {

             var POL = $('#ddlPOL').val();
             var POD = $('#ddlPOD').val();
             var BookingNo = $scope.txtBookingNo;
             var RRNumber = $scope.txtRRNumber;
             var BkgParty = $('#ddlbookingParty').val();
             var Status = null;
             var User = localStorage.getItem("UserName");
             var AgencyID = localStorage.getItem("AgencyID");

                    window.location.href = '@Url.Action("CreateBOLExcel", "BookingExcel")?POL=' + POL + "&RRNumber=" + RRNumber
                        + "&BookingNo=" + BookingNo + "&POD=" + POD + "&BkgParty=" + BkgParty + "&Status=" + Status + "&User=" + User + "&AgencyID=" + AgencyID;

        }
    });

    function ShowPopup(message) {
        swal(message);
    };
    function AddNew() {

        window.location = "/Document/BOL"
    }

</script>
