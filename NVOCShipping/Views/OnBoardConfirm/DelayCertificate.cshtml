@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $(document).ready(function () {

            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });

        });

        $scope.Vessellist = null;
        $scope.fillVessel = function ()
        {
            var Datavalue = {};
            Datavalue.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/OnBard_shipment/DelayVessel/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    $scope.Vessellist = result.data;
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillVessel();



        $scope.BLNumberlist = null;
        $scope.fillBlNumber = function () {
            var Datavalue = {};
            Datavalue.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/OnBard_shipment/BkgNumbervalues/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    $scope.BLNumberlist = result.data;
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillBlNumber();

        $scope.CertificateTypes = null;
        $scope.fillCertificateTypes = function () {
            var Datavalue = {};
            Datavalue.ID = 0;
            $http({
                method: 'POST',
                url: '/api/OnBard_shipment/CertificateTitle/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    $scope.CertificateTypes = result.data;
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillCertificateTypes();
        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            if (queryString["ID"] != null)
            {
                $scope.RegIDv = queryString["ID"].toString();
                $scope.ExistingVesselVoyage(queryString["ID"]);
                $("#overlay").hide();
            }
        });




        $("#ddlBLNumber").change(function ()
        {
            var BussData = {}
            BussData.BkgID = $("#ddlBLNumber").val();
            $http({

                method: 'POST',
                url: '/api/OnBard_shipment/BkgVesselCertificateVesselName/',
                data: JSON.stringify(BussData),
            }).then(function (result) {


                $scope.BLVesselVoyage = result.data[0].Voyage;
            });
        });




        $scope.RecordSave = function()
        {
            var BussData = {}
            BussData.BKgID = $("#ddlBLNumber").val();
            BussData.Date = $("#txtDate").val();
            BussData.CertificateType = $("#ddlCertificateType").val();
            BussData.CertificateTitle = $("#CertificateTitle").val();

            BussData.VSLVoyage = $("#ddlVessel").val();
            BussData.Subject = $scope.txtSubject;
            $http({

                method: 'POST',
                url: '/api/OnBard_shipment/DelayCertificateInsert/',
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.RegIDv = result.data[0].ID;
                ShowPopup(result.data[0].AlertMessage);
                return;

            });
        }

        $scope.ExistingVesselVoyage = function (IDv) {

            var BussData = {}
            BussData.ID = IDv;
            $http({

                method: 'POST',
                url: '/api/OnBard_shipment/ExistingDelayCertificate/',
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.ddlBLNumber = { ID: result.data[0].BkgID };
                //$scope.txtDate = result.data[0].Date;
                $("#txtDate").val(result.data[0].Date);
                $scope.ddlCertificateType = { ID: result.data[0].CertificateType };
                $scope.CertificateTitle = result.data[0].CertificateTitle;
                $scope.ddlVessel = { ID: result.data[0].VSLVoyage };
                $scope.txtSubject = result.data[0].Subject;
            });
        }

        $scope.Print = function () {

            if ($scope.RegIDv == 0) {
                ShowPopup("Please Save and send Email");
                return;
            }

            /* alert($("#ddlCertificateType").val());*/

            //alert($("#ddlCertificateType").val());
            if ($("#ddlCertificateType").val() == "9") {
                window.open('@Url.Action("DelayCertificatePrintPDF", "OnBoardConfirm")?id=' + $scope.RegIDv + '&AgencyID=' + localStorage.getItem("AgencyID"));
            }
            else if ($("#ddlCertificateType").val() == "5") {
                window.open('@Url.Action("ShippingCertificatePrintPDF", "OnBoardConfirm")?id=' + $scope.RegIDv + '&AgencyID=' + localStorage.getItem("AgencyID"));
            }
            else if ($("#ddlCertificateType").val() == "10") {
                window.open('@Url.Action("FreeTimeShippingCertificatePrintPDF", "OnBoardConfirm")?id=' + $scope.RegIDv + '&AgencyID=' + localStorage.getItem("AgencyID"));
            }
            else if ($("#ddlCertificateType").val() == "8") {
                window.open('@Url.Action("VesselEarlyArrivalNoticePDF", "OnBoardConfirm")?id=' + $scope.RegIDv + '&AgencyID=' + localStorage.getItem("AgencyID"));
            }

        }


        $scope.sendEmail = function ()
        {
            $('#ModalEmailAlert').modal('show');
            var BussData = {}
            BussData.VoyageID = $("#ddlVessel").val();
            $http({

                method: 'POST',
                url: '/api/OnBard_shipment/DelayVesselwiseBL/',
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.DynamicGrid = result.data;
            });
        }

        $scope.btnEmailadd = function () {

            var EmailIDs;
            //if ($("#ddlBLNumber").val() == "?" || $("#ddlBLNumber").val() == "") {
            //    ShowPopup("Plase check BLNumber");
            //    return;
            //}
            $('#overlay').fadeIn().show();
            var BussData = {}
            var Items = [];
            angular.forEach($scope.DynamicGrid, function (value, key)
            {
                if ($scope.DynamicGrid[key].IsFinal == "1") {
                    Items.push('Insert:' + $scope.DynamicGrid[key].ID, $scope.DynamicGrid[key].Email);
                }
  
            });
            BussData.Items = Items.toString();
            BussData.CertificateType = $("#ddlCertificateType").val();
            var Urlv = "";
           
            if ($("#ddlCertificateType").val() == "9") {
                urlv = '/api/OnBard_shipment/DelayCertificateEmailSending/'
            }
            if ($("#ddlCertificateType").val() == "5") {
                urlv ='/api/OnBard_shipment/ShippingCertificateEmailSending/'
            }
            if ($("#ddlCertificateType").val() == "10") {
                urlv = '/api/OnBard_shipment/FreeTimeShippingCertificateEmailSending/'
            }
            if ($("#ddlCertificateType").val() == "8") {
                urlv = '/api/OnBard_shipment/VesselEarlyArrivalCertificateEmailSending/'
            }

            alert(urlv);
            $http({
                method: 'POST',
                url: urlv,
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $('#overlay').fadeIn().hide();
                ShowPopup(result.data[0].AlertMessage);
            });
        }
        //alert("#ddlCertificateType");
        $("#ddlCertificateType").change(function () {

            var BussData = {}
            BussData.ID = $("#ddlCertificateType").val();
            $http({

                method: 'POST',
                url: '/api/OnBard_shipment/CertificateSubjectBind/',
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.txtSubject = result.data[0].Subject;
            });

        });

    });

    function ShowPopup(message) {
        swal(message);
    };




</script>
