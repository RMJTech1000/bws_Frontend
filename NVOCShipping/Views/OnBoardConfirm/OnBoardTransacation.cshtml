                            <div class="col-md-12 padlr0" style="padding:7px;">
                                <div class="material-datatables">
                                    <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th>BLNumber</th>
                                                <th>Booking Party</th>
                                                <th>POD</th>
                                                <th>Final POD</th>
                                                <th>No of Containers</th>
                                                <th>No of Teus</th>
                                                <th>Email id</th>
                                                <th>Email input</th>

                                            </tr>
                                        </thead>
                                        <tbody>
