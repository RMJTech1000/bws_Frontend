@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

      //  $("#overlay").show();

        $(document).ready(function () {

            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });

        });


        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            if (queryString["ManifestID"] != null) {

              
                $scope.OnBardConfirmTransationRecords(queryString["ManifestID"]);
                $("#overlay").hide();
            }
        });



        $scope.OnBardConfirmTransationRecords = null;
        $scope.OnBardConfirmTransationRecords = function (VoyageIDv) {

            var BussData = {}
            BussData.VoyageID = VoyageIDv;
            $http({

                method: 'POST',
                url: '/api/OnBard_shipment/OnBordConfirmationTransaction/',
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.BindVeslvoy = result.data[0].Voyage;
                $scope.BindPOL = result.data[0].POL;
                $scope.BindTerminal = result.data[0].Terminal;
                $scope.BindETD = result.data[0].ETD;


                $scope.OnBardConfirmTransationRecords = result.data;
                $scope.totalItems = $scope.OnBardConfirmTransationRecords.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 10;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.OnBardConfirmTransationRecords.indexOf(value);
                    return (begin <= index && index < end); eturn(begin <= index && index < end);
                };
            });

        };

        $scope.btnOpenPopWindows = function (dataRow, index) {

            $scope.HidIndex = index;
            $('#ModalEmailAlert').modal('show');
           
        }


        $scope.btnEmailadd = function () {

            $scope.OnBardConfirmTransationRecords[$scope.HidIndex].Email = $scope.txtEmails;
            $('#ModalEmailAlert').modal('hide');
        }

        $scope.sendEmail = function () {


          
            var EmailIDs;
            var BLIDs;
            angular.forEach($scope.OnBardConfirmTransationRecords, function (value, key) {
                if ($scope.OnBardConfirmTransationRecords[key].IsFinal == 1) {
                    EmailIDs = $scope.OnBardConfirmTransationRecords[key].Email;
                    BLIDs = $scope.OnBardConfirmTransationRecords[key].ID;
                }

            });
            

            if (typeof BLIDs == 'undefined')
            {
                ShowPopup("Plase check BLNumber");
                return;
            }
            $('#overlay').fadeIn().show();
            var BussData = {}
            BussData.Email = EmailIDs;
            BussData.BLID = BLIDs;
            $http({
                method: 'POST',
                url: '/api/OnBard_shipment/OnBordEmailSending/',
                data: JSON.stringify(BussData),
            }).then(function (result)
            {

                $('#overlay').fadeIn().hide();
                ShowPopup(result.data[0].AlertMessage);
            });

        }



    });

    function ShowPopup(message) {
        swal(message);
    };




</script>
