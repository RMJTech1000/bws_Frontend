<div ng-app="MyApp" ng-controller="MyController">

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row" style="border: 1px solid #ccc;">
                        <div class="col-md-12" style="text-align:center;">
                            <h4 style="font-size:24px; font-weight:bold; color:#000!important;"><img src="~/assets/img/freightManifest.jpg" style="width:100px;" /> Freight Manifest</h4>
                        </div>
                    </div>
                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                        <div class="col-md-12">
                            <div class="row">


                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2"><label>Vessel/Voyage</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select id="ddlVesVoy" ng-model="ddlVesVoy" class="form-control my-select" ng-options="item.VesVoy for item in VesselNameAllvalues track by item.ID"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl2" style="text-align:right;"><label>ETD</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <input type="text" id="txtETD" ng-model="txtETD" disabled class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-4 lbl3" style="text-align:right;"><label>Next Port</label></div>
                                            <div class="col-md-1">:</div>
                                            <div class="col-md-5">
                                                <select class="form-control my-select" id="ddlNextPort" disabled ng-model="ddlNextPort" ng-options="item.PortName for item in PortAllvalues track by item.ID"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3" style="text-align:center;">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="submit" class="btn btn-fill btn-info" ng-model="btnSearch" ng-click="btnSearch();" style="padding: 6px 18px; margin-top: -1px;width:46%; ">
                                                    Search
                                                </button>
                                                <button type="submit" class="btn btn-fill btn-default" ng-model="ClearRecords" ng-click="ClearRecords();" style="padding: 6px 18px; margin-top: -1px; width: 46%;">
                                                    Clear
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row" style="border: 1px solid #ccc; margin-top:15px;">
                        <div class="col-md-12 padlr0" style="padding:7px;">
                            <div class="material-datatables">
                                <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>S.No</th>
                                            <th>Vessel/Voyage</th>
                                            <th>Port Of Loading</th>
                                            <th>Terminal Name</th>
                                            <th>ETD</th>
                                            <th>Next Port</th>
                                            <th>Next ETA</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="gRow in TerminalDepView | filter : paginate | orderBy:'-Statusv'">
                                            <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                            <td><a href="#" ng-click="btnNew(gRow.ID);">{{gRow.VesVoy}}</a></td>
                                            <td><a href="#">{{gRow.POL}}</a></td>
                                            <td><a href="#">{{gRow.TerminalName}}</a></td>
                                            <td><a href="#">{{gRow.ETD}}</a></td>
                                            <td><a href="#">{{gRow.NextPort}}</a></td>
                                            <td><a href="#">{{gRow.NextPortETA}}</a></td>
                                        </tr>

                                    </tbody>

                                </table>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-5"></div>
                                        <div class="col-md-7" style="text-align:right;">
                                            <pagination total-items="totalItems" ng-model="currentPage"
                                                        max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                            </pagination>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

