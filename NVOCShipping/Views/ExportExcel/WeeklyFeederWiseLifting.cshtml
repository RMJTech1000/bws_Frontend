</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $('#overlay').fadeIn().delay(300).fadeOut();
        $(document).ready(function ()
        {

            $('.my-select').select2({
                placeholder: "--Select--", allowClear: true, width: '100%'
            });
        });



        $scope.btnPrint = function () {
            var validation = "";


            var txtFromDate = $('#txtFromDate').val();
            if (txtFromDate.length == 0) {

                validation += "<span style='color:red;'>*</span> <span>Please Enter ETA From </span></br>"

            }
            var txtToDate = $('#txtToDate').val();
            if (txtToDate.length == 0) {

                validation += "<span style='color:red;'>*</span> <span>Please Enter ETA To</span></br>"

            }
            if (validation != "") {

                ShowPopup(validation);
                return false;
            }


            var DtFrom = $('#txtFromDate').val();
            var DtTo = $('#txtToDate').val();
            var AgencyID = localStorage.getItem("AgencyID");
            var User = localStorage.getItem("UserName");
            var Status = 0;
            $('#overlay').show();
            window.location.href = '@Url.Action("WeeklyFeederLifitingReport", "ExportExcel")?DtFrom=' + DtFrom + "&DtTo=" + DtTo + "&User=" + User + "&AgencyID=" + AgencyID;
            $('#overlay').hide();
        }

    });
    function ShowPopup(message) {
        swal(message);
    };
</script>
