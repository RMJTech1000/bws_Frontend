
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $('.my-select').select2({
            placeholder: "--Select--",
            allowClear: true,
            width: '100%'
        });

    });

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $scope.ActiveInactive = [
            { 'Name': 'Active', 'ID': 1 },
            { 'Name': 'InActive', 'ID': 2},
          
        ];

        $scope.AddNew = function () {
            window.location = "/Container/InventoryStatusCreation"
        }
  
        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.StatusCodeRecords = null;
        $scope.StatusCodeRecords = function () {


            var BussData = {}
            BussData.Status = $scope.txtStatusCode;
            BussData.StatusID = $("#ddlStatus").val();
    
            $http({
                method: 'POST',
                url: "/api/ContainerApi/ViewInventoryStatusCodes",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.StatusCodeRec = result.data;

                $scope.totalItems = $scope.StatusCodeRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.StatusCodeRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        }

        $scope.StatusCodeViewRecords = function () {

            $scope.StatusCodeRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtStatusCode = "";
            $("#ddlStatus").val(null).trigger("change");
         
            $scope.StatusCodeRecords();
        }
        $scope.StatusCodeRecords();

        $scope.StatusCodeUpdate = function (url) {
            var url = "/Container/InventoryStatusCreation?StCodeID=" + encodeURIComponent(url);
            window.location.href = url;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Inventory Status Creation

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Inventory Status</th>
                                    <th>Status Description</th>
                                    <th>Status</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in StatusCodeRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.Status}}</td>
                                    <td>{{i.StatusDescription}}</td>
                                    <td>{{i.StatusResult}}</td>
                              
                                    <td class="td-actions text-right">

                                        <button type="button" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="" ng-click="StatusCodeUpdate(i.ID)">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(StatusCodeRec|filter:StatusCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtStatusCode" ng-model="txtStatusCode" class="form-control" placeholder="Status Code">

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-select" ng-model="ddlStatus" id="ddlStatus" ng-options="item.Name for item in ActiveInactive track by item.ID" required>
                            </select>
                        </div>
                    </div>
                    

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="StatusCodeViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
