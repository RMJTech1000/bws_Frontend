<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-select').select2({
                placeholder: "--Select--",
                allowClear: true,
                width: '100%'
            });
        });
        $scope.PartyID = 0;
        $scope.Branch = "";
        $scope.Address = "";
        $scope.GSTIN = "";
        $scope.State = "";
        $scope.StateID = "";

        $scope.ChargeCodeAllvalues = null;
        $scope.fillChargecodeValues = function () {
            $http({
                method: 'POST',
                url: '/api/LeaseBillingApi/ChargeCodeValue/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.ChargeCodeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillChargecodeValues();

        $(document).ready(function () {

            var queryString = new Array();
            if (window.location.search.split('?').length > 1) {
                var params = window.location.search.split('?')[1].split('&');
                for (var i = 0; i < params.length; i++) {
                    var key = params[i].split('=')[0];
                    var value = decodeURIComponent(params[i].split('=')[1]);
                    queryString[key] = value;
                }
            }
            if (queryString["LBRegID"] != null) {

                $scope.RegId = queryString["LBRegID"].toString();
                $scope.LeaseMonInitalValueBind(queryString["LBRegID"].toString());
                $scope.LeaseBillingRentalValueBind(queryString["LBRegID"].toString());
             
            }
        });


        $scope.LeaseMonInitalValueBind = function (LID) {

            var Datavalue = {};
            Datavalue.ID = LID;
            $http({
                method: 'POST',
                url: '/api/LeaseBillingApi/LeaseBillMonitringExisting/',
                data: JSON.stringify(Datavalue),

            }).then(function (result) {
                $timeout(function () {

                    $scope.LeasingReff = result.data[0].ContractRefNo;
                    $scope.LeaseTerm = result.data[0].LeaseTerm;
                    $scope.Equipment = result.data[0].Equipment;
                    $scope.LeasingPartner = result.data[0].LeasingPartner;
                    $scope.PickedUpDepo = result.data[0].PickedUpDepo;
                    $scope.PickUpLocation = result.data[0].PickUpLoc;
                    $scope.DropoffLocations = result.data[0].DropUpLoc;
                    $scope.PartyID = result.data[0].LeasingPartnerID;
                    $scope.Branch = result.data[0].Branch;
                    $scope.Address = result.data[0].Address;
                    $scope.GSTIN = result.data[0].GSTIN;
                    $scope.State = result.data[0].State;
                    $scope.StateID = result.data[0].StateID;
                  

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });

        }

        $scope.LeaseBillingRentalValueBind = function (LID) {

            var Datavalue = {};
            Datavalue.ID = LID;
            $http({
                method: 'POST',
                url: '/api/LeaseBillingApi/LeaseDetailsBillingRentGird/',
                data: JSON.stringify(Datavalue),

            }).then(function (result) {
                $timeout(function () {

                    $scope.LeaseBillingRentalGridfill = result.data;

                    
                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });

        }

        $scope.CalculationRetriveCharges = function ()
        {

            var Datavalue = {};
            Datavalue.ID = $scope.RegId;
            Datavalue.FDate = $("#FDate").val();
            Datavalue.ToDate = $("#ToDate").val();
            $http({
                method: 'POST',
                url: '/api/LeaseBillingApi/LeaseDetailsRentGirdRetCharge/',
                data: JSON.stringify(Datavalue),

            }).then(function (result) {
                $timeout(function () {

                    $scope.LeaseBillingRentalGridfill = result.data;


                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });

        }

        $scope.getPaging = function (tab) {

            var myp = $scope.RegId;
            if (tab == 1) {
                if (myp != "0") {

                    var url = "/Container/LeaseMonitoringBilling?LBRegID=" + encodeURIComponent(myp);
                    window.location.href = url;

                }
                else {
                    ShowPopup("Please Create Shipment Details")
                    return false;
                }
            }
            else if (tab == 2) {
                if (myp != "0") {
                    var url = "/Container/LeaseBillingRental?LBRegID=" + encodeURIComponent(myp);
                    window.location.href = url;
                }
                else {
                    ShowPopup("Please Create Shipment Details")
                    return false;
                }
            }
            else if (tab == 3) {
                if (myp != "0") {
                    var url = "/Container/LeaseBillingOthers?LBRegID=" + encodeURIComponent(myp);
                    window.location.href = url;
                }
                else {
                    ShowPopup("Please Create Shipment Details")
                    return false;
                }
            }

            return false;
        }

        $scope.LeaseInvoiceGeneration = function (data) {

            var InvAmount = 0;
            var TaxAmt = 0;
            var PerTax = 0;
            var Items = []
            angular.forEach(data, function (value, key) {
               
                if (data[key].IsFinal == true)
                {
                    TaxAmt = (parseFloat(data[key].Amount) * PerTax) / 100;
                    InvAmount += parseFloat(data[key].Amount);

                    Items.push('Insert:' +
                        data[key].Charges,
                        data[key].CntrNo,
                        data[key].PickupDate,
                        data[key].FreeDays,
                        data[key].FDate,
                        data[key].ToDate,
                        data[key].Preday,
                        data[key].PerDiemAmt,
                        data[key].Amount,
                        TaxAmt,
                        PerTax
                    );
                }
            });
            var TaxAmount = 0;
            var TotalInvAmount = InvAmount + TaxAmount;
            var BussData = {};
            BussData.LeaseID = $scope.RegId;
            BussData.ChargeCodeID = $("#ddlCharges").val();
            BussData.ContractRefNo = $scope.LeasingReff;
            BussData.InvAmount = InvAmount;
            BussData.InvTax = TaxAmount;
            BussData.InvTotal =TotalInvAmount;
            BussData.PartyID = $scope.PartyID;
            BussData.PartyName = $scope.LeasingPartner;
            BussData.BLTypes = 1;
            BussData.InvTypes = 1;
            BussData.Branch = $scope.Branch;
            BussData.BranchID = $scope.PartyID;
            BussData.Location = "0";
            BussData.Address = $scope.Address;
            BussData.StateCode = $scope.StateCode;
            BussData.TaxNo = $scope.GSTIN;
            BussData.CurrencyID = "1";
            BussData.GSTState = $scope.StateID;
            BussData.CountryID = localStorage.getItem("CountryID");
            BussData.UserID = localStorage.getItem("UserID");
            BussData.AgentId = localStorage.getItem("AgencyID");
            BussData.SessionFinYear = localStorage.getItem("SessionFinYear");
            BussData.AgentCode = localStorage.getItem("DocumentSuffix");
            BussData.AgentStateID = $scope.HDAgentLocID;
            BussData.CustStateID = $scope.HDCusLocationID;
            BussData.TaxExemption = $("#ExemptFromTax").val();
            BussData.GeoLocID = 0;
            BussData.DrID = 0;
            BussData.DeffRoundoff = 0;
            BussData.Roundoff = 0;
            BussData.intBank = 0;
            BussData.Remarks = "";
            BussData.Items = Items.toString();
            $http({
                method: 'POST',
                url: '/api/LeaseBillingApi/LeaseBillingInvoice/',
                data: JSON.stringify(BussData),

            }).then(function (result) {
                $timeout(function () {

                    ShowPopup(result.data[0].AlertSuccess);
                 


                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
        }

        $scope.LeaseBillingInvoicefill = null;
        $scope.btnVendorInvoice = function () {

            $('#ViewInvoice').modal('show');
            var Datavalue = {};
            Datavalue.ID = $scope.RegId;
            $http({
                method: 'POST',
                url: '/api/LeaseBillingApi/LeaseDetailsBillingInvoice/',
                data: JSON.stringify(Datavalue),

            }).then(function (result) {
                $timeout(function () {

                    $scope.LeaseBillingInvoicefill = result.data;
                    console.log($scope.LeaseBillingInvoicefill);


                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            });
            
        }

        $scope.OnclickPrint = function (id) {

            alert(id);
        }

    });


  

    function ShowPopup(message) {
        swal(message);
    };
</script>
