
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>


<script type="text/javascript">

    $(document).ready(function () {
        $('.my-select').select2({
            placeholder: "--Select--",
            allowClear: true,
            width: '100%'
        });

    });

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {
        $(document).ready(function () {
            $('.my-selectLP').select2({
                placeholder: "Lease Partner", allowClear: true, width: '100%'
            });
            $('.my-selectST').select2({
                placeholder: "Status", allowClear: true, width: '100%'
            });
        });
        $scope.StatusValues = [
            { 'Name': 'Active', 'ID': 1 },
            { 'Name': 'Inactive', 'ID': 2 }
        ];
        $scope.AddNew = function () {

            window.location = "/Container/LeaseContract"
        }



        $scope.LeasingPartnerList = null;
        $scope.FilLeasingPartner = function () {
            $http({
                method: 'POST',
                url: '/api/ContainerApi/LeasingPartner/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.LeasingPartnerList = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.FilLeasingPartner();



        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.ViewLeaseRecords = null;
        $scope.ViewLeaseRecords = function () {


            var BussData = {}
            BussData.ContractRefNo = $scope.txtLeaseRef;
            BussData.LeasingPartnerID = $("#ddlLeasePartner").val();
            BussData.Status = $("#ddlStatus").val();

            $http({
                method: 'POST',
                url: "/api/ContainerApi/ViewLeaseContract",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.LeaseRec = result.data;

                $scope.totalItems = $scope.LeaseRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.LeaseRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        }

        $scope.LeaseRecords = function () {

            $scope.ViewLeaseRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtLeaseRef = "";
            $("#ddlLeasePartner").val(null).trigger("change");
            $("#ddlStatus").val(null).trigger("change");

            $scope.ViewLeaseRecords();
        }
        $scope.ViewLeaseRecords();

        $scope.LeaseUpdate = function (url) {

            var url = "/Container/LeaseContract?LeaseID=" + encodeURIComponent(url);
            window.location.href = url;
        }

         $scope.btnPrint = function () {
             var LeaseRef = $('#txtLeaseRef').val();
             var LeasePartner = $('#ddlLeasePartner').val();
             var Status = $('#ddlStatus').val();
             var User = localStorage.getItem("UserName");
             window.location.href = '@Url.Action("LeaseContractExcel", "MastersExcel")?LeaseRef=' + LeaseRef + '&LeasePartner=' + LeasePartner + '&Status=' + Status + '&User=' + User;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };


</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Lease Contract

                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">
                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Leasing Reference</th>
                                    <th>Leasing Partner</th>
                                    <th>Pick Up Criteria</th>
                                    <th>Valid From</th>
                                    <th>Valid Till</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in LeaseRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.ContractRefNo}}</td>
                                    <td>{{i.LeasingPartner}}</td>
                                    <td>{{i.PickupCriteria}}</td>
                                    <td>{{i.DtContractFrom}}</td>
                                    <td>{{i.DtContractTill}}</td>
                                    <td class="td-actions text-right">

                                        <button type="button" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="" ng-click="LeaseUpdate(i.ID)">

                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(LeaseRec|filter:CntrNo).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtLeaseRef" ng-model="txtLeaseRef" class="form-control" placeholder="Lease Reference">

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectLP" ng-model="ddlLeasePartner" id="ddlLeasePartner" ng-options="item.LeasingPartner for item in LeasingPartnerList track by item.LeasingPartnerID" required>
                                <option value="" disabled selected>Lease Partner</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectST" ng-model="ddlStatus" id="ddlStatus" ng-options="item.Name for item in StatusValues track by item.ID" required>
                                <option value="" disabled selected>Status</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="LeaseRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
