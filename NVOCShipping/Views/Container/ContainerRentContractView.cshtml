@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        $(document).ready(function () {
            $('.my-selectST').select2({
                placeholder: "Shipment Type", allowClear: true, width: '100%'
            });
            $('.my-selectTT').select2({
                placeholder: "Tariff Type", allowClear: true, width: '100%'
            });
            $('.my-selectCT').select2({
                placeholder: "Container Type", allowClear: true, width: '100%'
            });

        });

        $scope.ShipmentTypeAllvalues = null;
        $scope.fillShipmentTypeValues = function () {
            var Datavalue = {};
            Datavalue.ID = "1"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.ShipmentTypeAllvalues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillShipmentTypeValues();

        $scope.TariffAllValues = null;
        $scope.fillTariffAllValues = function () {
            var Datavalue = {};
            Datavalue.ID = "32"; //GeneralMaster Table seqNo
            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/ModuleValues/',
                data: JSON.stringify(Datavalue)
            }).then(function (result) {
                $timeout(function () {
                    $scope.TariffAllValues = result.data;

                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillTariffAllValues();

        $scope.CntrSizeTypes = null;
        $scope.fillCntrSizeTypes = function () {
            $http({
                method: 'POST',
                url: '/api/ContainerApi/CntrTypeSize/',
                data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.CntrSizeTypes = result.data;

                });
            }, function (result) {

                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected. Please reconnect and try again.");
                }
            });

        };
        $scope.fillCntrSizeTypes();



        $scope.ContainerRentViewRecords = null;
        $scope.ContainerRentRecords = function () {
            var BussData = {}

            BussData.ShipmentTypeID = $('#ddlShipmentType').val();
            BussData.TariffTypeID = $('#ddlTariffType').val();
            BussData.ContainerType = $('#ddlSizeType').val();
            BussData.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: "/api/ContainerApi/ContainerRentView",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.ContRentRec = result.data;

                $scope.totalItems = $scope.ContRentRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.ContRentRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.ContainerRentViewRecords = function () {

            $scope.ContainerRentRecords();
        }
        $scope.ClearRecords = function () {

            $("#ddlShipmentType").val(null).trigger("change");
            $("#ddlTariffType").val(null).trigger("change");
            $("#ddlSizeType").val(null).trigger("change");
            $scope.ContainerRentRecords();
        }
        $scope.ContainerRentRecords();

        $scope.ContEdit = function (urlv) {
            var url = "/Container/ContainerRentalContract?ContRent=" + encodeURIComponent(urlv);
            window.location.href = url;
        }

         $scope.btnPrint = function () {
             var ShipmentType = $('#ddlShipmentType').val();
             var TariffType = $('#ddlTariffType').val();
             var ContainerType = $('#ddlSizeType').val();
             var User = localStorage.getItem("UserName");
             window.location.href = '@Url.Action("ContainerRentExcel", "MastersExcel")?ShipmentType=' + ShipmentType + '&TariffType=' + TariffType + '&ContainerType=' + ContainerType + '&User=' + User;
        }

    }
    );

    function ShowPopup(message) {
        swal(message);
    };



</script>

<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            <a href="/Container/ContainerRentalContract" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Container Rental Contract
                    </div>

                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">

                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    @*<th>Customer Name</th>*@
                                    <th>Charge Type</th>
                                    <th>Charges</th>
                                    <th>Charge Owner</th>
                                    <th>Size</th>
                                    <th>Valid From</th>
                                    <th>Valid Till</th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in ContRentRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    @*<td>{{i.CustomerV}}</td>*@
                                    <td>{{i.ChargeType}}</td>
                                    <td>{{i.Charges}}</td>
                                    <td>{{i.ChargeOwnerIDV}}</td>
                                    <td>{{i.Size}}</td>
                                    <td>{{i.ValidFrom}}</td>
                                    <td>{{i.ValidTill}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="ContEdit(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(ContRentRec|filter:CurrencyCode).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectST" ng-model="ddlShipmentType" id="ddlShipmentType" options="{ allowClear: true }" ng-options="item.GeneralName for item in ShipmentTypeAllvalues track by item.ID" required>
                                <option value="" disabled selected>Shipment Type</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectTT" ng-model="ddlTariffType" id="ddlTariffType" options="{ allowClear: true }" ng-options="item.GeneralName for item in TariffAllValues track by item.ID" required>
                                <option value="" disabled selected>Tariff Type</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select class="form-control my-selectCT" ng-model="ddlSizeType" id="ddlSizeType" ng-options="item.Size for item in CntrSizeTypes track by item.TypeID" required>
                                <option value="" disabled selected>Container Type</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="ContainerRentViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>