@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .btn-warning
    {
        padding:8px 25px;
        margin:0;
    }

</style>
<div ng-app="MyApp" ng-controller="MyController">
    <div id="overlay" style="display:none;">
        <div class="loadcontainer">
            <div class="spinner"></div>
            <p>Loading Please Wait</p>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 backbtn" style="text-align:right;">
                <a href="/Container/ContainerRentContractView" type="submit" class="btn btn-fill btn-success btn-round btntop">
                    <i class="material-icons">reply</i> Back

                </a>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card ">
                    <div class="card-header card-header-primary card-header-text">

                        <div class="card-text">
                            <h4 class="card-title">Container Pick Up</h4>
                        </div>
                    </div>
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-md-9" style="border-right: 6px solid #ccc;">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <label>Booking/BL No</label>
                                                </div>
                                                <div class="col-md-5">
                                                    <select id="ddlBookingNo" ng-model="ddlBookingNo" class="form-control"></select>
                                                </div>
                                                <div class="col-md-5">
                                                    <a href="#" class="btn btn-warning">Retrieve Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="#" class="btn btn-success" data-toggle="modal" data-target="#Pickup">Pick UP</a>
                                        <div class="modal" id="Pickup">
                                            <div class="modal-dialog">
                                                <div class="modal-content" style="margin:0 auto; width:860px;">

                                                    <!-- Modal Header -->
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Select Container</h4>
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    </div>

                                                    <!-- Modal body -->
                                                    <div class="modal-body" style="padding-bottom:0;border-bottom: 1px solid #ccc;margin-bottom:6px;">
                                                        <div class="row">
                                                            <div class="col-md-4"><h5>Available Container</h5></div>
                                                            <div class="col-md-8" style="text-align:right;">
                                                                <div class="form-group">
                                                                    <div class="row">
                                                                        <div class="col-md-4">
                                                                            <label>Search Type</label>
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            <select class="form-control my-select" ng-model="ddlSearch" id="ddlSearch" required>
                                                                            </select>
                                                                        </div>
                                                                        <div class="col-md-4">
                                                                            <select class="form-control my-select" ng-model="ddlSearch" id="ddlSearch" required>
                                                                            </select>
                                                                        </div>
                                                                    </div>

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="material-datatables">



                                                                    <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Container #</th>
                                                                                <th>Size Type</th>
                                                                                <th>Location</th>
                                                                                <th>Agent</th>
                                                                                <th>Current Depot</th>
                                                                                <th>Status</th>

                                                                            </tr>
                                                                        </thead>

                                                                        <tbody>
                                                                            <tr>
                                                                                <td></td>
                                                                                <td></td>
                                                                                <td></td>
                                                                                <td></td>
                                                                                <td></td>
                                                                                <td></td>

                                                                            </tr>
                                                                        </tbody>
                                                                    </table>

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <div class="row">
                                                                        <div class="col-md-3">
                                                                            <label>Pickup Date</label>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <input type="text" id="txtPickupDate" ng-model="txtPickupDate" class="form-control datepicker" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-group">
                                                                    <div class="row">
                                                                        <div class="col-md-3">
                                                                            <label>Against CRO</label>
                                                                        </div>
                                                                        <div class="col-md-6">
                                                                            <input type="text" id="txtCRO" ng-model="txtCRO" class="form-control" />
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row" style="margin-top:30px;">
                                                            <div class="col-md-12" style="text-align:right;">
                                                                <a href="#" class="btn btn-success" style="padding: 7px 25px;margin-top:-2px;"><i class="fa fa-plus"></i> Pickup</a>
                                                                <a href="#" class="btn btn-danger" style="padding: 7px 25px;margin-top:-2px;"><i class="fa fa-trash"></i> Cancel</a>
                                                            </div>
                                                        </div>
                                                    </div>


                                                </div>



                                            </div>
                                        </div>

                                        <a href="#" class="btn btn-primary">Un Pick UP</a>
                                        <a href="#" class="btn btn-default">Rail To Port</a>
                                        <a href="#" class="btn btn-default">Road To Port</a>
                                        <a href="#" class="btn btn-default">Port-In</a>
                                    </div>

                                </div>

                            </div>
                            <div class="col-md-3">
                                <div class="col-md-12" style="border: 1px solid;padding:17px;">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h5 style="font-size:14px; font-weight:bold;text-decoration:underline;">Container Size Type/Volume</h5>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6"><span>20GP * 2</span></div>
                                        <div class="col-md-6"><span>40HC * 1</span></div>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <div class="row" style="margin-top:20px;">
                            <div class="col-md-12">
                                <div class="material-datatables">



                                    <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Container #</th>
                                                <th>Size Type</th>
                                                <th>Pick Up Date</th>
                                                <th>Rail To Port(ER)</th>
                                                <th>Road To Port(EO)</th>
                                                <th>Port-In(GI)</th>
                                                <th>Vessel Dep(VD)</th>
                                                <th>T/S Arrival(TA)</th>
                                                <th>T/S Dep(TD)</th>
                                                <th>Vessel Arrival(VA)</th>
                                                <th>Port Out(GO)</th>
                                                <th>Railout-Port(IR)</th>
                                                <th>Roadout-Port(IO)</th>
                                                <th>Cfs-In(LI)</th>
                                                <th>Cfs-Out(LO)</th>
                                                <th>Depo-In(MR)</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            // initialise Datetimepicker and Sliders
            $('.datepicker').datetimepicker({
                format: 'DD/MM/YYYY',

            });
        });
    </script>

</div>


