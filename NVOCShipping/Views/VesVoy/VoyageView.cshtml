@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.VoyageRecords = null;
        $scope.VoyageRecords = function () {

            var BussData = {}
            BussData.VesselName = $scope.txtVesselName;
            BussData.Voyage = $scope.txtVoyage;
            BussData.RotationNo = $scope.txtRotationNo;
            BussData.Status = $scope.ChkStatus;
                      $http({

                method: 'POST',
                url: "/api/Home/Voyageview",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.VoyageRec = result.data;

                $scope.totalItems = $scope.VoyageRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.VoyageRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.VoyageViewRecords = function () {

             $scope.VoyageRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtVesselName = "";
            $scope.txtVoyage = "";
            $scope.txtRotationNo = "";
            $scope.ChkStatus = 0;

            $scope.VoyageRecords();
        }
        $scope.VoyageRecords();
        $scope.VoyageUpdate = function (url, MID)
        {
            localStorage.setItem("VoyageID", url);
            top.location.href = "/VesVoy/Voyage/" + url;

        }
        $scope.AddNew = function () {
            localStorage.setItem("VoyageID", "");
            window.location = "/VesVoy/Voyage"
        }

    }

    );

    function ShowPopup(message) {
        swal(message);
    };


    </script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 createnew" style="text-align:right;">
            Create New
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i>

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Voyage Master
                    </div>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Vessel</th>
                                    <th>Voyage</th>
                                    <th>Rotation No</th>
                                    <th>Active</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in VoyageRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.VesselName}}</td>
                                    <td>{{i.Voyage}}</td>
                                    <td>{{i.RotationNo}}</td>
                                    <td>{{i.StatusV}}</td>
                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="VoyageUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        @*<div id="notFoundDiv" ng-show="(CustomerRec|filter:CountryCode).length==0" style="color: red; font-weight: bold">No Records Found</div>*@
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtVesselName" ng-model="txtVesselName" class="form-control" placeholder="Vessel Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtVoyage" ng-model="txtVoyage" class="form-control" placeholder="Voyage">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtRotationNo" ng-model="txtRotationNo" class="form-control" placeholder="Rotation No">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Status</label>
                                </div>
                                <div class="col-md-6 input-field" style="text-align:right; padding-right:0;">
                                    <div class="togglebutton">
                                        <label>
                                            <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-checked="ChkStatus == 1" id="ChkStatus" ng-model="ChkStatus" value="ChkStatus">
                                            <span class="toggle"></span>

                                        </label>
                                    </div>
                                </div>
                            </div>                        
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="VoyageViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


