@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .exceldownload .fa-file-excel-o {
        color: #4caf50;
        font-weight: 400;
        font-size: 20px;
    }

    .exceldownload a {
        color: #000;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.VesselRecords = null;
        $scope.VesselRecords = function () {

            var BussData = {}

            BussData.VesselName = $scope.txtVesselName;
            BussData.Status = $scope.ChkStatus;
                      $http({

                method: 'POST',
                url: "/api/Home/Vesselview",
                data: JSON.stringify(BussData),
            }).then(function (result) {

                $scope.VesselRec = result.data;

                $scope.totalItems = $scope.VesselRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.VesselRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.VesselViewRecords = function () {

             $scope.VesselRecords();
        }
        $scope.ClearRecords = function () {
             $scope.txtVesselName = "";
            $scope.ChkStatus = "";
            $scope.VesselRecords();
        }
        $scope.VesselRecords();
        $scope.VesselUpdate = function (urlv)
        {

            //var url = "/VesVoy/Vessel?VesselID=" + encodeURIComponent(url);
            //    window.location.href = url;
            var ParameterValue = "VesselID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/VesVoy/Vessel?" + ciphertext;

            window.location.href = url;
        }
        $scope.AddNew = function () {

            window.location = "/VesVoy/Vessel"
        }

         $scope.btnExcel = function () {

  
             var VesselName = $scope.txtVesselName;
             var Status = $scope.ChkStatus;
             var User = localStorage.getItem("UserName");

             window.location.href = '@Url.Action("CreateVesselMasterExcel", "VoyageExcel")?VesselName='+ VesselName + "& Status=" + Status + "&User=" + User;

        }
    }

    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
    <div ng-app="MyApp" ng-controller="MyController">
        <div class="row">
            <div class="col-md-12 addbtn" style="text-align:right;">
                <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                    <i class="material-icons">add</i> Create New

                </button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            Vessel Master
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                        </div>
                        <div class="row">
                            <div class="col-md-12 exceldownload" style="text-align:right;">
                                <a ng-click="btnExcel();">Download <i class="fa fa-file-excel-o"></i></a>
                            </div>
                        </div>
                        <div class="material-datatables">

                            <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>S.No</th>
                                        <th>Vessel Name</th>
                                        <th>Status</th>

                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr ng-repeat="i in VesselRec | filter : paginate | orderBy:'-Statusv'">
                                        <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                        <td>{{i.VesselName}}</td>
                                        <td>{{i.StatusResult}}</td>

                                        <td class="td-actions text-right">

                                            <button type="button" ng-click="VesselUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                                <i class="material-icons">edit</i>
                                            </button>

                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                            @*<div id="notFoundDiv" ng-show="(CustomerRec|filter:CountryCode).length==0" style="color: red; font-weight: bold">No Records Found</div>*@
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-5">
                                    <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                                </div>
                                <div class="col-md-7" style="text-align:right;">
                                    <pagination total-items="totalItems" ng-model="currentPage"
                                                max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                    </pagination>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">

                        <div class="form-group">
                            <div class="col-md-12 padlr0">
                                <input type="text" id="txtCountryName" ng-model="txtVesselName" class="form-control" placeholder="Vessel Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 padlr0">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Status</label>
                                    </div>
                                    <div class="col-md-6 input-field" style="text-align:right; padding-right:0;">
                                        <div class="togglebutton">
                                            <label>
                                                <input type="checkbox" ng-true-value="1" ng-false-value="0" ng-checked="ChkStatus == 1" id="ChkStatus" ng-model="ChkStatus" value="ChkStatus">
                                                <span class="toggle"></span>

                                            </label>
                                        </div>
                                    </div>
                                </div>
                     
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 padlr0">
                                <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                                <button type="submit" ng-click="VesselViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
