@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.min.js"></script>
<style>

    .exceldownload .fa-file-excel-o {
        color: #4caf50;
        font-weight: 400;
        font-size: 20px;
    }

    .exceldownload a {
        color: #000;
    }
</style>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        $(document).ready(function () {
            $('.my-selectVoyage').select2({
                placeholder: "Voyage", allowClear: true, width: '100%'
            });

        });

        //Vesvoy DropDown//
        $scope.VesVoy = null;
        $scope.fillVesVoy = function () {

            $http({
                method: 'POST',
                url: '/api/CommonAccessApi/VesVoyMaster/',
                data: {}
            }).then(function (result) {
                $timeout(function () {

                    $scope.VesVoy = result.data;

                });
            });
        };
        $scope.fillVesVoy();
        $scope.VoyAllocRecords = function () {

            var BussData = {}
            BussData.VesVoyID = $('#ddlVoyage').val();
            BussData.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: "/api/Home/VoyAllocationView",
                 data: JSON.stringify(BussData),

            }).then(function (result) {
                $scope.VoyAllocRec = result.data;
                $scope.totalItems = $scope.VoyAllocRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.VoyAllocRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.VoyAllocRecords();

        $scope.VoyAllocViewRecords = function () {

            $scope.VoyAllocRecords();
        }
        $scope.ClearRecords = function () {

            $("#ddlVoyage").val(null).trigger("change");
            $scope.VoyAllocRecords();
        }
        $scope.VoyAllocRecords();
        $scope.VoyAllocUpdate = function (url) {
            var url = "/VesVoy/VoyageAllocation?VoyAllocID=" + encodeURIComponent(url);
            window.location.href = url;
        }
        $scope.AddNew = function () {

            window.location = "/VesVoy/VoyageAllocation"
        }

           $scope.btnExcel = function () {


               var VesVoyID = $('#ddlVoyage').val();
               var User = localStorage.getItem("UserName");
               var AgencyID = localStorage.getItem("AgencyID");

               window.location.href = '@Url.Action("CreateVoyAllocationExcel", "VoyageExcel")?AgencyID=' + AgencyID + "&VesVoyID=" + VesVoyID + "&User=" + User;

        }
    }

    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 addbtn" style="text-align:right;">
            
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i> Create New

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        T/S Voyage Allocation
                    </div>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="row">
                        <div class="col-md-12 exceldownload" style="text-align:right;">
                            <a ng-click="btnExcel();">Download <i class="fa fa-file-excel-o"></i></a>
                        </div>
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Voyage</th>
                                    <th>Voyage Types </th>
                                    <th>Leg Information </th>

                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in VoyAllocRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.VesVoy2}}</td>
                                    <td>{{i.VoyageTypes}}</td>
                                    <td>{{i.LegInformation}}</td>

                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="VoyAllocUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(VoyAllocRec|filter:VslVoy).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage" max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select id="ddlVoyage" ng-model="ddlVoyage" class="form-control my-selectVoyage" ng-options="item.VesVoy for item in VesVoy track by item.ID">
                                <option value="" disabled selected>Voyage</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="VoyAllocViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


