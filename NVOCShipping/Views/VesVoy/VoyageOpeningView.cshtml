@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $(document).ready(function () {
            $('.my-selectVoy').select2({
                placeholder: "Vessel/Voyage", allowClear: true, width: '100%'
            });
        });
        $('#overlay').fadeIn().delay(300).fadeOut();

        $scope.PortByGeoLoc = null;
        $scope.fillPortByGeoLoc = function () {
            $scope.PortByGeoLoc = null;
            var Datavalue = {};
            Datavalue.ID = localStorage.getItem("GeoLocationID");
            $http({
                method: 'POST',
                url: '/api/Home/PortByGeoLoc/',
                data: JSON.stringify(Datavalue),
                // data: {}
            }).then(function (result) {
                $timeout(function () {
                    $scope.PortByGeoLoc = result.data;
                    var Items = []
                    for (var i = 0; i < $scope.PortByGeoLoc.length; i++) {

                        var Id = $scope.PortByGeoLoc[i].ID;
                        Items.push(Id);

                    }

                    //$scope.VoyOpeningRecords(Items.toString());
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillPortByGeoLoc();


        $scope.VoyOpeningRecords = function () {
            //var Items = PortIDS;

            var BussData = {}
            BussData.AgencyID = localStorage.getItem("AgencyID");
            BussData.VesVoy = $('#ddlVoyage').val();
            $http({
                method: 'POST',
                url: "/api/Home/VoyageOpeningView",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.VoyOpenRec = result.data;
                $scope.totalItems = $scope.VoyOpenRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.VoyOpenRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.VoyOpeningRecords();



        // $scope.VoyOpeningRecords();
        $scope.VoyageOpenEdit = function (urlv) {
            //var url = "/VesVoy/VoyageOpening?VoyID=" + encodeURIComponent(url);
            //window.location.href = url;

            var ParameterValue = "VoyID=" + urlv.toString();
            var message = CryptoJS.enc.Utf8.parse(ParameterValue);
            var secret_key = CryptoJS.enc.Utf8.parse(localStorage.getItem("SessionKey"));
            var iv = CryptoJS.enc.Utf8.parse(localStorage.getItem("Sessioniv"));
            var ciphertext = CryptoJS.AES.encrypt(message, secret_key, {
                iv: iv,
                mode: CryptoJS.mode.CBC,
                padding: CryptoJS.pad.Pkcs7
            });
            var url = "/VesVoy/VoyageOpening?" + ciphertext;

            window.location.href = url;
        }
        //$scope.AddNew = function () {

        //    window.location = "/VesVoy/VoyageDetails"
        //}

        $scope.btnPrint = function () {
            var Agency = localStorage.getItem("AgencyID");
            var User = localStorage.getItem("UserName");
            window.location.href = '@Url.Action("VoyageOpeningExcel", "MastersExcel")?Agency=' + Agency + '&User=' + User;
        }


        $scope.VesVoy = null;
        $scope.fillVesVoy = function () {
            var Datavalue = {};
            Datavalue.AgencyID = localStorage.getItem("AgencyID");
            $http({
                method: 'POST',
                url: '/api/Home/VesVoyOpeningViewPage/',
                data: JSON.stringify(Datavalue),
            }).then(function (result) {
                $timeout(function () {
                    $scope.VesVoy = result.data;
                });
            }, function (result) {
                if (result.status == 500) {
                    ShowPopup("Sorry no internet connectivity Application Error.");
                }
                else if (result.status == 404) {
                    ShowPopup("Sorry no internet connectivity page not found.");
                }
                if (result.status > 0) {
                    var errorMsg = result.status + ': ' + result.data;
                    ShowPopup("Sorry no internet connectivity detected.Please reconnect and try  again.");
                }
            }).catch(function (result) {
                ShowPopup('There has been an error: ' + result);
            });
        };
        $scope.fillVesVoy();

        $scope.RecordsView = function () {

            $scope.VoyOpeningRecords();
        }

        $scope.ClearRecords = function () {

            $("#ddlVoyage").val(null).trigger("change");
            $scope.VoyOpeningRecords();
        }


    }

    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        @*<div class="col-md-12 createnew" style="text-align:right;">
            // Create New
             <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                 <i class="material-icons">add</i>

             </button>*@
        @*</div>*@
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Voyage Opening
                    </div>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">
                        <div class="col-md-12 padlr0" style="text-align:right; padding-right:16px;">
                            <a href="#" ng-click="btnPrint();" class="btn btn-fill btn-danger btnuploadfile btnadd btntop" style="margin-right:0;">
                                <i class="material-icons">download</i> Download Excel
                            </a>
                        </div>
                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Voyage</th>
                                    <th>Previous Port</th>
                                    @*<th>Status </th>*@
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in VoyOpenRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.Voyage}}</td>
                                    <td>{{i.LoadPort}}</td>
                                    @*<td>{{i.OpenStatus}}</td>*@
                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="VoyageOpenEdit(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(VoyOpenRec|filter:VslVoy).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <select id="ddlVoyage" ng-model="ddlVoyage" class="form-control my-selectVoy" ng-options="item.VesVoy for item in VesVoy track by item.ID">
                                <option value="" disabled selected>Vessel/Voyage</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="RecordsView();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


