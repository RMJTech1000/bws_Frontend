@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">

    LayoutApp.controller('MyController', function ($scope, $http, $timeout) {

        $('#overlay').fadeIn().delay(300).fadeOut();

        
        $scope.VoyDtlsRecords = function () {

            var BussData = {}
            BussData.VesselName = $scope.txtVesselName;
            BussData.VoyageNo = $scope.txtVoyNo;
                      $http({
                method: 'POST',
                url: "/api/Home/VoyDtlsView",
                data: JSON.stringify(BussData),
            }).then(function (result) {
                $scope.VoyDtlRec = result.data;
                $scope.totalItems = $scope.VoyDtlRec.length;
                $scope.currentPage = 1;
                $scope.numPerPage = 8;
                $scope.paginate = function (value) {
                    var begin, end, index;
                    begin = ($scope.currentPage - 1) * $scope.numPerPage;
                    end = begin + $scope.numPerPage;
                    index = $scope.VoyDtlRec.indexOf(value);
                    return (begin <= index && index < end);
                };
            });

        };
        $scope.VoyDtlsRecords();

        $scope.VoyDtlViewRecords = function () {

             $scope.VoyDtlsRecords();
        }
        $scope.ClearRecords = function () {

            $scope.txtVesselName = "";
            $scope.txtVoyNo = "";

            $scope.VoyDtlsRecords();
        }
        $scope.VoyDtlsRecords();
        $scope.VoyDtlUpdate = function (url)
        {
            var url = "/VesVoy/VoyageDetails?VoyDtlsID=" + encodeURIComponent(url);
            window.location.href = url;
        }
        $scope.AddNew = function () {
       
            window.location = "/VesVoy/VoyageDetails"
        }
      

    }

    );

    function ShowPopup(message) {
        swal(message);
    };


</script>
<div ng-app="MyApp" ng-controller="MyController">
    <div class="row">
        <div class="col-md-12 createnew" style="text-align:right;">
            Create New
            <button type="submit" ng-click="AddNew();" class="btn btn-fill btn-success btn-round btntop">
                <i class="material-icons">add</i>

            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        Voyage Details
                    </div>
                </div>
                <div class="card-body">
                    <div class="toolbar">
                    </div>
                    <div class="material-datatables">

                        <table class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>Vessel</th>
                                    <th>Voyage No</th>
                                    <th>Rotation No</th>
                                    <th>ETA</th>
                                    <th class="disabled-sorting text-right">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="i in VoyDtlRec | filter : paginate | orderBy:'-Statusv'">
                                    <td>{{numPerPage *(currentPage-1)+$index+1}}</td>
                                    <td>{{i.VesselName}}</td>
                                    <td>{{i.VoyageNo}}</td>
                                    <td>{{i.RotationNo}}</td>
                                    <td>{{i.ETA}}</td>
                                    <td class="td-actions text-right">

                                        <button type="button" ng-click="VoyDtlUpdate(i.ID);" rel="tooltip" class="btn btn-success btn-round" data-original-title="" title="">
                                            <i class="material-icons">edit</i>
                                        </button>

                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <div id="notFoundDiv" ng-show="(VoyDtlRec|filter:VesselName).length==0" style="color: red; font-weight: bold">No Records Found</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                                <p>Showing <span style="padding-left:5px; padding-right:3px;">1</span>to<span style="padding-left:3px; padding-right:3px;">10</span>of<span style="padding-left:3px; padding-right:3px;">40</span>entries</p>
                            </div>
                            <div class="col-md-7" style="text-align:right;">
                                <pagination total-items="totalItems" ng-model="currentPage"
                                            max-size="10" boundary-links="true" items-per-page="numPerPage" class="pagination-sm">
                                </pagination>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtVesselName" ng-model="txtVesselName" class="form-control" placeholder="Vessel Name" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <input type="text" id="txtVoyage" ng-model="txtVoyNo" class="form-control" placeholder="VoyageNo">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 padlr0">
                            <button type="submit" ng-click="ClearRecords();" class="btn btn-fill btn-danger searchbtn">Clear</button>
                            <button type="submit" ng-click="VoyDtlViewRecords();" class="btn btn-fill btn-rose searchbtn">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


